	end)
end

function ActivitiesScreen:joinMobFamily(family)
	log("Joining mob family:", family.name)

	-- Hide modal
	if self.mobModal then
		self.mobModal.Visible = false
	end

	-- Fire remote to server
	local DoMobAction = remotesFolder and remotesFolder:FindFirstChild("DoMobAction")
	if DoMobAction then
		DoMobAction:FireServer("join_mob", { family = family.id })
	else
		-- Fallback: use generic activity remote
		if DoActivity then
			DoActivity:FireServer("join_mob", { family = family.id })
		end
	end

	-- Show result (server will send actual result)
	self:showMobResult({
		title = "Welcome to " .. family.name,
		body = "You are now an Associate of the " .. family.name .. ". Prove your loyalty and rise through the ranks!",
		emoji = family.emoji,
		isPositive = true,
	})
end

function ActivitiesScreen:doMobActivity(item)
	log("Doing mob activity:", item.name)

	-- Fire remote to server
	local DoMobAction = remotesFolder and remotesFolder:FindFirstChild("DoMobAction")
	if DoMobAction then
		DoMobAction:FireServer(item.id, {})
	else
		-- Fallback: use CommitCrime remote for risky activities
		if item.risk and CommitCrime then
			CommitCrime:FireServer(item.id)
		elseif DoActivity then
			DoActivity:FireServer(item.id)
		end
	end
end

function ActivitiesScreen:showMobResult(data)
	-- Use existing result modal or create one
	if self.resultModal then
		local isPositive = data.isPositive ~= false

		-- Update modal colors
		local shellColor = isPositive and C.Green or C.Red
		if self.resultModal.shell then
			self.resultModal.shell.BackgroundColor3 = shellColor
		end
		if self.resultModal.okButton then
			self.resultModal.okButton.BackgroundColor3 = shellColor
		end

		-- Update content
		if self.resultModal.emoji then
			self.resultModal.emoji.Text = data.emoji or (isPositive and "âœ¨" or "ğŸ˜¢")
		end
		if self.resultModal.title then
			self.resultModal.title.Text = data.title or "Result"
		end
		if self.resultModal.body then
			self.resultModal.body.Text = data.body or ""
		end

		-- Show modal
		UI.showModal(self.resultModal)
	end
end

