function ActivitiesScreen:doActivity(item, bonus)
	-- CRITICAL FIX: Enhanced action logging for debugging
	logAction("ACTIVITY", item.id, item.name, string.format("Bonus: %s | Age: %d | Money: %d", 
		tostring(bonus or false), self:getAge(), self:getMoney()))
	
	log("=== DOING ACTIVITY ===")
	log("Activity ID:", item.id, "Name:", item.name, "Bonus:", bonus or false)
	log("Player Age:", self:getAge(), "Money:", self:getMoney())

	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- COMBAT ACTIVITIES: Trigger the full combat minigame!
	-- Activities like "Pick a Fight" and "Club Fight" use the interactive combat system
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	if item.isCombat then
		log("COMBAT ACTIVITY DETECTED! Launching combat minigame for:", item.id)
		logAction("COMBAT_START", item.id, item.name, "Launching interactive combat minigame")
		
		-- Hide this screen first
		if self.hide then
			self:hide()
		end
		
		-- Determine combat context based on activity
		local combatContext = "street"
		if item.id == "club_fight" then
			combatContext = "club"
		elseif item.id == "martial_arts" then
			combatContext = "school"
		elseif item.id == "pick_fight" then
			combatContext = math.random() > 0.5 and "street" or "random"
		end
		
		-- Get minigames reference and start combat
		local ReplicatedStorage = game:GetService("ReplicatedStorage")
		local MinigamesModule = ReplicatedStorage:FindFirstChild("Minigames")
		if MinigamesModule then
			local Minigames = require(MinigamesModule)
			local minigameInstance = Minigames.new(self.screenGui)
			
			log("Starting COMBAT minigame with context:", combatContext)
			minigameInstance:play("combat", function(won, combatResult)
				log("Combat result - Won:", won, "Stats:", combatResult)
				logAction("COMBAT_END", item.id, won and "VICTORY" or "DEFEAT", 
					string.format("Rounds: %d | Damage Dealt: %d | Damage Taken: %d", 
						combatResult.rounds or 0, combatResult.damageDealt or 0, combatResult.damageTaken or 0))
				
				-- Call server to process combat outcome
				local serverSuccess, serverResult = pcall(function()
					return DoActivity:InvokeServer(item.id, {
						isCombat = true,
						won = won,
						combatResult = combatResult,
					})
				end)
				
				-- Show result card
				local resultTitle = won and "üèÜ Victory!" or "üòµ Defeated!"
				local resultMessage = won 
					and "You won the fight! " .. (combatResult.technique or "")
					or "You lost the fight. " .. (combatResult.technique or "")
				
				if combatResult.escaped then
					resultTitle = "üèÉ Escaped!"
					resultMessage = "You managed to run away from the fight."
				end
				
				-- Show proper result after combat
				self:show()
				self:showActivityResult(won, resultMessage, item, resultTitle)
			end, { 
				context = combatContext,
				difficulty = item.id == "martial_arts" and "weak" or "average"
			})
		else
			log("Minigames module not found! Falling back to server-only handling.")
			-- Fallback: Call server directly if minigames unavailable
			local success, result = pcall(function()
				return DoActivity:InvokeServer(item.id, bonus or false)
			end)
			if result then
				self:showActivityResult(result.success, result.message, item, result.success and "Done!" or "Failed")
			end
		end
		return
	end

	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- REGULAR ACTIVITIES: Standard server call with event cards
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	if not DoActivity then
		logWarn("DoActivity remote not available!")
		self:showActivityResult(false, "Server not available", item, "Error")
		return
	end

	log("Invoking server DoActivity...")
	-- CRITICAL FIX: Add pcall protection for server calls
	local success, result = pcall(function()
		return DoActivity:InvokeServer(item.id, bonus or false)
	end)
	if not success then
		logWarn("DoActivity call failed:", result)
		self:showActivityResult(false, "Server error - " .. tostring(result), item, "Error")
		return
	end
	log("Server response:", result and "received" or "nil")

	if result then
		log("Success:", result.success, "Message:", result.message)
		
		-- CRITICAL FIX: Apply stat changes from server to local state immediately!
		-- User bug: "stats don't change after I complete activities"
		-- The server applies stats but they weren't syncing to client until age up!
		if result.statChanges and result.success then
			log("Applying stat changes to local state:", result.statChanges)
			local state = self.playerState or self.state
			if state then
				state.Stats = state.Stats or {}
				for stat, delta in pairs(result.statChanges) do
					if stat == "Money" or stat == "money" then
						state.Money = math.max(0, (state.Money or 0) + delta)
					elseif stat == "Health" or stat == "H" then
						-- CRITICAL FIX: Read current value from EITHER location (server uses state.Health, we use state.Stats.Health)
						local currentVal = state.Health or state.Stats.Health or 50
						local newVal = math.min(100, math.max(0, currentVal + delta))
						state.Stats.Health = newVal
						state.Health = newVal  -- Update BOTH locations!
						log("Health changed:", currentVal, "->", newVal, "(delta:", delta, ")")
					elseif stat == "Happiness" or stat == "Happy" then
						local currentVal = state.Happiness or state.Stats.Happiness or 50
						local newVal = math.min(100, math.max(0, currentVal + delta))
						state.Stats.Happiness = newVal
						state.Happiness = newVal
						log("Happiness changed:", currentVal, "->", newVal, "(delta:", delta, ")")
					elseif stat == "Smarts" then
						local currentVal = state.Smarts or state.Stats.Smarts or 50
						local newVal = math.min(100, math.max(0, currentVal + delta))
						state.Stats.Smarts = newVal
						state.Smarts = newVal
						log("Smarts changed:", currentVal, "->", newVal, "(delta:", delta, ")")
					elseif stat == "Looks" then
						local currentVal = state.Looks or state.Stats.Looks or 50
						local newVal = math.min(100, math.max(0, currentVal + delta))
						state.Stats.Looks = newVal
						state.Looks = newVal
						log("Looks changed:", currentVal, "->", newVal, "(delta:", delta, ")")
					end
				end
				-- CRITICAL FIX: Update money from cost on client too!
				-- The server deducted it but we need to reflect it locally immediately
				if result.cost and result.cost > 0 then
					state.Money = math.max(0, (state.Money or 0) - result.cost)
				end
				
				-- Update UI to reflect the new stats
				if self.updateInfoBar then
					self:updateInfoBar()
				end
				
				-- CRITICAL FIX: Notify LifeClient to refresh main stat bars!
				-- User bug: "stats don't change after I complete activities"
				if self.onStatsChanged then
					self.onStatsChanged()
				end
			end
		end
		
		-- CRITICAL FIX: Use full BitLife-style event cards for supported activities
		-- These show as proper popups in the main UI like real BitLife events
		if result.success and FULL_EVENT_ACTIVITIES[item.id] and self.onShowEventCard then
			self:showActivityEventCard(item.id, result.success, result.message, item)
		else
			-- Fall back to in-screen result modal for other activities
			-- CRITICAL FIX: Pass stat changes to result popup so player sees what they gained!
			self:showActivityResult(result.success, result.message, item, result.success and "Done!" or "Failed", false, result.statChanges)
		end
	else
		logWarn("Server returned nil!")
		self:showActivityResult(false, "Server error - no response", item, "Error")
	end
end

function ActivitiesScreen:doCrime(item)
	-- CRITICAL FIX: Enhanced action logging for debugging
	logAction("CRIME", item.id, item.name, string.format("Risk: %d%% | Age: %d | Money: %d", 
		item.risk or 0, self:getAge(), self:getMoney()))
	
	log("=== COMMITTING CRIME ===")
	log("Crime ID:", item.id, "Name:", item.name, "Risk:", item.risk)
	log("Player Age:", self:getAge(), "Money:", self:getMoney())

	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- COMBAT-BASED CRIMES: Trigger full combat minigame for assault/mugging
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	if item.isCombat then
		log("COMBAT CRIME DETECTED! Launching combat minigame for:", item.id)
		logAction("COMBAT_CRIME_START", item.id, item.name, "Launching combat for crime")
		
		-- Hide this screen first
		if self.hide then
			self:hide()
		end
		
		-- Determine combat context based on crime
		local combatContext = "street"
		if item.id == "assault" then
			combatContext = "revenge"
		elseif item.id == "mugging" then
			combatContext = "defense" -- Victim might fight back
		end
		
		-- Get minigames reference and start combat
		local ReplicatedStorage = game:GetService("ReplicatedStorage")
		local MinigamesModule = ReplicatedStorage:FindFirstChild("Minigames")
		if MinigamesModule then
			local Minigames = require(MinigamesModule)
			local minigameInstance = Minigames.new(self.screenGui)
			
			log("Starting COMBAT minigame for crime:", item.id, "context:", combatContext)
			minigameInstance:play("combat", function(won, combatResult)
				log("Combat crime result - Won:", won)
				logAction("COMBAT_CRIME_END", item.id, won and "VICTORY" or "DEFEAT", 
					string.format("Rounds: %d | Crime: %s", combatResult.rounds or 0, item.id))
				
				-- Call server to process combat crime outcome
				local serverSuccess, serverResult = pcall(function()
					return CommitCrime:InvokeServer(item.id, {
						isCombat = true,
						won = won,
						combatResult = combatResult,
					})
				end)
				
				-- Determine result
				local crimeSuccess = won and not combatResult.escaped
				local resultTitle
				local resultMessage
				local emoji
				
				if combatResult.escaped then
					resultTitle = "üèÉ Ran Away!"
					resultMessage = "You fled the scene before completing the crime."
					emoji = "üèÉ"
				elseif won then
					-- Won the fight - crime potentially successful
					if serverResult and serverResult.success then
						resultTitle = "üí∞ Crime Successful!"
						resultMessage = serverResult.message or "You got away with it!"
						emoji = "üí∞"
					elseif serverResult and serverResult.caught then
						resultTitle = "üöî Caught!"
						resultMessage = serverResult.message or "The cops showed up!"
						emoji = "üöî"
					else
						resultTitle = "üëä Assault Complete"
						resultMessage = "You beat them down."
						emoji = "üëä"
					end
				else
					-- Lost the fight - GOT KNOCKED OUT!
					-- CRITICAL FIX: Show proper "knocked out" message with health loss
					-- User feedback: "I GOT KNOCKED OUT AND IT SAID CRIME SUCCESSFUL INSTEAD OF BE LIKE DAMN EMBARESSING"
					if serverResult and serverResult.knockedOut then
						-- Server confirmed knockout - use server message which includes health loss
						resultTitle = "üòµ Knocked Out!"
						resultMessage = serverResult.message or "They knocked you out cold!"
						if serverResult.healthLost then
							resultMessage = resultMessage .. string.format("\n\nüíî -%d Health", serverResult.healthLost)
						end
						if serverResult.caught then
							emoji = "üöî"
						else
							emoji = "üòµ"
						end
					else
						-- Fallback if server didn't send knockedOut flag
						resultTitle = "üòµ Humiliating Defeat!"
						resultMessage = "Your victim fought back and knocked you out! That's embarrassing..."
						if serverResult and serverResult.caught then
							resultMessage = resultMessage .. "\n\nüöî And the cops got you too!"
							emoji = "üöî"
						else
							emoji = "üòµ"
						end
					end
				end
				
				-- Show proper result after combat
				-- CRITICAL FIX: Use server's success value for display, NOT just combat win
				-- If knocked out, crimeSuccess must be false even if server somehow says success
				local actualSuccess = crimeSuccess and not (serverResult and serverResult.knockedOut)
				self:show()
				self:showActivityResult(actualSuccess, resultMessage, item, emoji, serverResult and serverResult.caught)
			end, { 
				context = combatContext,
				difficulty = item.id == "mugging" and "weak" or "average" -- Mugging targets are usually weaker
			})
		else
			log("Minigames module not found! Falling back to server-only handling.")
			-- Fallback to regular crime handling
			local success, result = pcall(function()
				return CommitCrime:InvokeServer(item.id)
			end)
			if result then
				self:show()
				self:showActivityResult(result.success, result.message, item, result.caught and "üöî" or "üí∞", result.caught)
			end
		end
		return
	end

	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- REGULAR CRIMES: Standard server call
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	if not CommitCrime then
		logWarn("CommitCrime remote not available!")
		self:showActivityResult(false, "Server not available", item, "Error")
		return
	end

	log("Invoking server CommitCrime...")
	-- CRITICAL FIX: Add pcall protection for server calls
	local success, result = pcall(function()
		return CommitCrime:InvokeServer(item.id)
	end)
	if not success then
		logWarn("CommitCrime call failed:", result)
		self:showActivityResult(false, "Server error - " .. tostring(result), item, "Error")
		return
	end
	log("Server response:", result and "received" or "nil")

	if result then
		log("Success:", result.success, "Caught:", result.caught, "Message:", result.message)
		local emoji = result.caught and "üöî" or (result.success and "üí∞" or "‚ùå")
		-- CRITICAL FIX: Create clean item without reward range/effect for crime result
		-- User complained: "EARNED $50K-500K" showing instead of actual amount
		local cleanItem = {
			id = item.id,
			name = item.name,
			emoji = item.emoji,
			risk = item.risk,
			reward = nil, -- Remove range like "$10K-500K"
			effect = nil, -- Remove effect text like "+40 Heat"
			actualEarnings = result.money,
		}
		self:showActivityResult(result.success, result.message, cleanItem, emoji, result.caught)
	else
		logWarn("Server returned nil!")
		self:showActivityResult(false, "Server error - no response", item, "Error")
	end
end

function ActivitiesScreen:doPrisonActivity(item)
	-- CRITICAL FIX: Enhanced action logging for debugging
	logAction("PRISON", item.id, item.name, string.format("Money: %d | Years Left: %d", 
		self:getMoney(), self:getJailYearsLeft() or 0))
	
	log("=== DOING PRISON ACTIVITY ===")
	log("Prison Activity ID:", item.id, "Name:", item.name)
	log("Player Money:", self:getMoney())

	-- Prison escape has a minigame!
	if item.id == "prison_escape" then
		log("Starting prison escape minigame...")
		self:showEscapeMinigame()
		return
	end

	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- PRISON COMBAT ACTIVITIES: Join crew, riot, fight - use combat minigame!
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	if item.isCombat or item.id == "prison_crew" or item.id == "prison_riot" then
		log("PRISON COMBAT ACTIVITY DETECTED! Launching combat minigame for:", item.id)
		logAction("PRISON_COMBAT_START", item.id, item.name, "Launching prison combat")
		
		-- Hide this screen
		if self.hide then
			self:hide()
		end
		
		-- Prison combat context
		local combatContext = "prison"
		local combatDifficulty = "strong" -- Prison inmates are tough
		
		if item.id == "prison_crew" then
			combatDifficulty = "trained" -- Gang initiation is brutal
		elseif item.id == "prison_riot" then
			combatDifficulty = "average"
		end
		
		-- Get minigames and start combat
		local ReplicatedStorage = game:GetService("ReplicatedStorage")
		local MinigamesModule = ReplicatedStorage:FindFirstChild("Minigames")
		if MinigamesModule then
			local Minigames = require(MinigamesModule)
			local minigameInstance = Minigames.new(self.screenGui)
			
			log("Starting PRISON COMBAT minigame:", item.id, "difficulty:", combatDifficulty)
			minigameInstance:play("combat", function(won, combatResult)
				log("Prison combat result - Won:", won)
				logAction("PRISON_COMBAT_END", item.id, won and "VICTORY" or "DEFEAT", 
					string.format("Rounds: %d | Activity: %s", combatResult.rounds or 0, item.id))
				
				-- Call server with combat result
				local serverSuccess, serverResult = pcall(function()
					return DoPrisonAction:InvokeServer(item.id, {
						combatCompleted = true,
						combatWon = won,
						combatResult = combatResult,
					})
				end)
				
				-- Determine result
				local resultTitle
				local resultMessage
				local emoji
				
				if item.id == "prison_crew" then
					if won then
						resultTitle = "‚õìÔ∏è Earned Your Place!"
						resultMessage = "You proved yourself in the yard. You're now part of the crew."
						emoji = "‚õìÔ∏è"
					else
						resultTitle = "üòµ Initiation Failed"
						resultMessage = "You got beat down. The crew doesn't want weaklings."
						emoji = "üòµ"
					end
				elseif item.id == "prison_riot" then
					if won then
						resultTitle = "üî• Riot Success!"
						resultMessage = serverResult and serverResult.message or "The riot went off! Chaos erupted!"
						emoji = "üî•"
					else
						resultTitle = "üöî Riot Crushed"
						resultMessage = "Guards put down the riot. You're in solitary now."
						emoji = "üöî"
					end
				else
					resultTitle = won and "üëä Victory" or "üòµ Beaten"
					resultMessage = won and "You won the prison fight!" or "You got beat up in the yard."
					emoji = won and "üëä" or "üòµ"
				end
				
				-- Apply server result if available
				if serverSuccess and serverResult then
					if serverResult.message then
						resultMessage = serverResult.message
					end
					if serverResult.caught or serverResult.extraTime then
						resultMessage = resultMessage .. " Guards added time to your sentence!"
						emoji = "üöî"
					end
				end
				
				-- Show result
				self:show()
				self:showActivityResult(won, resultMessage, item, emoji)
			end, {
				context = combatContext,
				difficulty = combatDifficulty,
			})
		else
			log("Minigames not available, falling back to server")
			self:show()
			local success, result = pcall(function()
				return DoPrisonAction:InvokeServer(item.id)
			end)
			if result then
				self:showActivityResult(result.success, result.message, item, result.success and "‚úÖ" or "‚ùå")
			end
		end
		return
	end

	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- REGULAR PRISON ACTIVITIES
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	if not DoPrisonAction then
		logWarn("DoPrisonAction remote not available!")
		self:showActivityResult(false, "Server not available", item, "Error")
		return
	end

	log("Invoking server DoPrisonAction...")
	-- CRITICAL FIX: Add pcall protection for server calls
	local success, result = pcall(function()
		return DoPrisonAction:InvokeServer(item.id)
	end)
	if not success then
		logWarn("DoPrisonAction call failed:", result)
		self:showActivityResult(false, "Server error - " .. tostring(result), item, "Error")
		return
	end
	log("Server response:", result and "received" or "nil")

	if result then
		log("Success:", result.success, "Message:", result.message)
		local emoji = result.success and "‚úÖ" or "‚ùå"
		if item.id == "prison_snitch" then emoji = result.success and "ü§´" or "üò±" end
		if item.id == "prison_workout" then emoji = result.success and "üí™" or "‚ùå" end
		if item.id == "prison_study" then emoji = result.success and "üìö" or "‚ùå" end
		-- CRITICAL FIX: Use proper BitLife-style prison activity result card
		self:showActivityResult(result.success, result.message, item, emoji)
	else
		logWarn("Server returned nil!")
		self:showActivityResult(false, "Server error - no response", item, "Error")
	end
end

-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
-- CRITICAL FIX #88: ROYAL ACTIVITIES TAB
-- Activities specific to players who are royalty (have royalty gamepass + is_royalty)
-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
function ActivitiesScreen:populateRoyal()
	self:updateInfoBar()
	
	local royalState = self.playerState and self.playerState.RoyalState or {}
	local isMonarch = royalState.isMonarch
	local popularity = royalState.popularity or 50
	local countryName = royalState.countryName or "Kingdom"
	local title = royalState.title or (isMonarch and "Monarch" or "Royal")
	
	-- Royal status header
	local headerCard = Instance.new("Frame")
	headerCard.Size = UDim2.new(1, 0, 0, 100)
	headerCard.BackgroundColor3 = Color3.fromRGB(218, 165, 32) -- Gold
	headerCard.LayoutOrder = 0
	headerCard.ZIndex = 82
	headerCard.Parent = self.contentScroll
	UI.corner(headerCard, 18)
	
	local iconFrame = Instance.new("Frame")
	iconFrame.Size = UDim2.new(0, 55, 0, 55)
	iconFrame.Position = UDim2.new(0, 16, 0.5, -27.5)
	iconFrame.BackgroundColor3 = Color3.fromRGB(255, 215, 0)
	iconFrame.ZIndex = 83
	iconFrame.Parent = headerCard
	UI.corner(iconFrame, 12)
	
	local headerIcon = Instance.new("TextLabel")
	headerIcon.Size = UDim2.fromScale(1, 1)
	headerIcon.BackgroundTransparency = 1
	headerIcon.Font = F.Body or Enum.Font.Gotham
	headerIcon.TextSize = 32
	headerIcon.Text = isMonarch and "üëë" or "üè∞"
	headerIcon.ZIndex = 84
	headerIcon.Parent = iconFrame
	
	local headerText = Instance.new("TextLabel")
	headerText.Size = UDim2.new(1, -85, 0, 26)
	headerText.Position = UDim2.new(0, 80, 0, 14)
	headerText.BackgroundTransparency = 1
	headerText.Font = F.Title or Enum.Font.GothamBold
	headerText.TextSize = 18
	headerText.TextColor3 = C.White
	headerText.TextXAlignment = Enum.TextXAlignment.Left
	headerText.Text = title .. " of " .. countryName
	headerText.ZIndex = 83
