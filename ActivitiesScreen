function ActivitiesScreen:populateMob()
	self:updateInfoBar()

	local inMob = self:isInMob()
	local mobFamily = self:getMobFamily()
	local mobRank = self:getMobRank()
	local mobRankInfo = self:getMobRankInfo()
	local respect = self:getMobRespect()
	local heat = self:getMobHeat()
	local territories = self:getTerritories()
	local crewSize = self:getCrewSize()

	-- Mob Status Header Card
	local headerCard = Instance.new("Frame")
	headerCard.Size = UDim2.new(1, 0, 0, inMob and 130 or 95)
	headerCard.BackgroundColor3 = inMob and C.Gray900 or C.Gray700
	headerCard.LayoutOrder = 0
	headerCard.ZIndex = 82
	headerCard.Parent = self.contentScroll
	UI.corner(headerCard, 18)

	-- Mob emoji icon
	local iconFrame = Instance.new("Frame")
	iconFrame.Size = UDim2.new(0, 60, 0, 60)
	iconFrame.Position = UDim2.new(0, 16, 0, 16)
	iconFrame.BackgroundColor3 = inMob and (mobFamily and C.Red or C.Gray600) or C.Gray600
	iconFrame.ZIndex = 83
	iconFrame.Parent = headerCard
	UI.corner(iconFrame, 14)

	local headerIcon = Instance.new("TextLabel")
	headerIcon.Size = UDim2.fromScale(1, 1)
	headerIcon.BackgroundTransparency = 1
	headerIcon.Font = F.Body
	headerIcon.TextSize = 36
	headerIcon.Text = inMob and (mobFamily and mobFamily.emoji or "ğŸ¤µ") or "ğŸ¤µ"
	headerIcon.TextColor3 = C.White
	headerIcon.ZIndex = 84
	headerIcon.Parent = iconFrame

	local headerText = Instance.new("TextLabel")
	headerText.Size = UDim2.new(1, -95, 0, 26)
	headerText.Position = UDim2.new(0, 88, 0, 14)
	headerText.BackgroundTransparency = 1
	headerText.Font = F.Title
	headerText.TextSize = 20
	headerText.TextColor3 = C.White
	headerText.TextXAlignment = Enum.TextXAlignment.Left
	headerText.Text = inMob and (mobFamily and mobFamily.name or "The Family") or "Organized Crime"
	headerText.ZIndex = 83
	headerText.Parent = headerCard

	-- Rank badge
	local rankBadge = Instance.new("Frame")
	rankBadge.Size = UDim2.new(0, 120, 0, 26)
	rankBadge.Position = UDim2.new(0, 88, 0, 42)
	rankBadge.BackgroundColor3 = inMob and C.AmberPale or C.Gray200
	rankBadge.ZIndex = 83
	rankBadge.Parent = headerCard
	UI.pill(rankBadge)

	local rankText = Instance.new("TextLabel")
	rankText.Size = UDim2.fromScale(1, 1)
	rankText.BackgroundTransparency = 1
	rankText.Font = F.Medium
	rankText.TextSize = 12
	rankText.TextColor3 = inMob and C.AmberDark or C.Gray600
	rankText.Text = mobRankInfo.emoji .. " " .. mobRankInfo.name
	rankText.ZIndex = 84
	rankText.Parent = rankBadge

	-- Mob stats (only if in mob)
	if inMob then
		-- Stats row
		local statsRow = Instance.new("Frame")
		statsRow.Size = UDim2.new(1, -32, 0, 40)
		statsRow.Position = UDim2.new(0, 16, 0, 80)
		statsRow.BackgroundTransparency = 1
		statsRow.ZIndex = 83
		statsRow.Parent = headerCard

		local statsLayout = Instance.new("UIListLayout")
		statsLayout.FillDirection = Enum.FillDirection.Horizontal
		statsLayout.Padding = UDim.new(0, 8)
		statsLayout.Parent = statsRow

		-- Respect stat
		local respectChip = Instance.new("Frame")
		respectChip.Size = UDim2.new(0, 80, 0, 32)
		respectChip.BackgroundColor3 = C.GreenPale
		respectChip.LayoutOrder = 1
		respectChip.ZIndex = 84
		respectChip.Parent = statsRow
		UI.pill(respectChip)

		local respectLabel = Instance.new("TextLabel")
		respectLabel.Size = UDim2.fromScale(1, 1)
		respectLabel.BackgroundTransparency = 1
		respectLabel.Font = F.Medium
		respectLabel.TextSize = 11
		respectLabel.TextColor3 = C.GreenDark
		respectLabel.Text = "ğŸ¤ " .. respect
		respectLabel.ZIndex = 85
		respectLabel.Parent = respectChip

		-- Heat stat
		local heatChip = Instance.new("Frame")
		heatChip.Size = UDim2.new(0, 70, 0, 32)
		heatChip.BackgroundColor3 = heat > 50 and C.RedPale or C.AmberPale
		heatChip.LayoutOrder = 2
		heatChip.ZIndex = 84
		heatChip.Parent = statsRow
		UI.pill(heatChip)

		local heatLabel = Instance.new("TextLabel")
		heatLabel.Size = UDim2.fromScale(1, 1)
		heatLabel.BackgroundTransparency = 1
		heatLabel.Font = F.Medium
		heatLabel.TextSize = 11
		heatLabel.TextColor3 = heat > 50 and C.RedDark or C.AmberDark
		heatLabel.Text = "ğŸ”¥ " .. heat
		heatLabel.ZIndex = 85
		heatLabel.Parent = heatChip

		-- Territories
		local territoryChip = Instance.new("Frame")
		territoryChip.Size = UDim2.new(0, 60, 0, 32)
		territoryChip.BackgroundColor3 = C.BluePale
		territoryChip.LayoutOrder = 3
		territoryChip.ZIndex = 84
		territoryChip.Parent = statsRow
		UI.pill(territoryChip)

		local territoryLabel = Instance.new("TextLabel")
		territoryLabel.Size = UDim2.fromScale(1, 1)
		territoryLabel.BackgroundTransparency = 1
		territoryLabel.Font = F.Medium
		territoryLabel.TextSize = 11
		territoryLabel.TextColor3 = C.BlueDark
		territoryLabel.Text = "ğŸ—ºï¸ " .. territories
		territoryLabel.ZIndex = 85
		territoryLabel.Parent = territoryChip

		-- Crew
		local crewChip = Instance.new("Frame")
		crewChip.Size = UDim2.new(0, 60, 0, 32)
		crewChip.BackgroundColor3 = C.PurplePale
		crewChip.LayoutOrder = 4
		crewChip.ZIndex = 84
		crewChip.Parent = statsRow
		UI.pill(crewChip)

		local crewLabel = Instance.new("TextLabel")
		crewLabel.Size = UDim2.fromScale(1, 1)
		crewLabel.BackgroundTransparency = 1
		crewLabel.Font = F.Medium
		crewLabel.TextSize = 11
		crewLabel.TextColor3 = C.PurpleDark
		crewLabel.Text = "ğŸ‘¥ " .. crewSize
		crewLabel.ZIndex = 85
		crewLabel.Parent = crewChip
	else
		-- Not in mob - show description
		local headerSub = Instance.new("TextLabel")
		headerSub.Size = UDim2.new(1, -95, 0, 20)
		headerSub.Position = UDim2.new(0, 88, 0, 70)
		headerSub.BackgroundTransparency = 1
		headerSub.Font = F.Body
		headerSub.TextSize = 13
		headerSub.TextColor3 = C.Gray400
		headerSub.TextXAlignment = Enum.TextXAlignment.Left
		headerSub.Text = "Join a crime family..."
		headerSub.ZIndex = 83
		headerSub.Parent = headerCard
	end

	-- Organized Crime Activities Section
	local section = Instance.new("Frame")
	section.Name = "MobSection"
	section.Size = UDim2.new(1, 0, 0, 0)
	section.AutomaticSize = Enum.AutomaticSize.Y
	section.BackgroundColor3 = C.White
	section.LayoutOrder = 1
	section.ZIndex = 82
	section.Parent = self.contentScroll
	UI.corner(section, 18)
	UI.stroke(section, 1, 0.88, C.Gray200)
	UI.pad(section, 14, 14, 14, 16)

	local sectionLayout = Instance.new("UIListLayout")
	sectionLayout.Padding = UDim.new(0, 10)
	sectionLayout.SortOrder = Enum.SortOrder.LayoutOrder
	sectionLayout.Parent = section

	-- Header
	local header = Instance.new("Frame")
	header.Size = UDim2.new(1, 0, 0, 36)
	header.BackgroundTransparency = 1
	header.LayoutOrder = 0
	header.ZIndex = 83
	header.Parent = section

	local badge = Instance.new("Frame")
	badge.Size = UDim2.new(0, 145, 0, 32)
	badge.BackgroundColor3 = C.Gray800
	badge.ZIndex = 84
	badge.Parent = header
	UI.pill(badge)

	local badgeLabel = Instance.new("TextLabel")
	badgeLabel.Size = UDim2.fromScale(1, 1)
	badgeLabel.BackgroundTransparency = 1
	badgeLabel.Font = F.Button
	badgeLabel.TextSize = 14
	badgeLabel.TextColor3 = C.White
	badgeLabel.Text = "ğŸ¤µ Organized Crime"
	badgeLabel.ZIndex = 85
	badgeLabel.Parent = badge

	-- Create cards for each organized crime activity
	for i, item in ipairs(OrganizedCrime) do
		self:createMobCard(section, item, i)
	end
end

function ActivitiesScreen:createMobCard(parent, item, order)
	local canDo, reason = self:canDoMobActivity(item)
	local inMob = self:isInMob()

	-- Special handling for join/leave mob
	local isJoinMob = item.id == "join_mob"
	local isLeaveMob = item.id == "leave_mob"

	-- Skip join_mob if already in mob, skip leave_mob if not in mob
	if isJoinMob and inMob then return end
	if isLeaveMob and not inMob then return end

	-- Skip activities that require mob membership if not in mob (except join_mob)
	if item.rankRequired and not inMob then return end

	local card = Instance.new("Frame")
	card.Name = item.id
	card.Size = UDim2.new(1, 0, 0, 95)
	card.BackgroundColor3 = C.White
	card.LayoutOrder = order
	card.ZIndex = 83
	card.Parent = parent
	UI.corner(card, 14)
	UI.stroke(card, canDo and 1 or 1, canDo and 0.6 or 0.88, canDo and C.Gray700 or C.Gray200)

	-- Icon with emoji
	local iconFrame = Instance.new("Frame")
	iconFrame.Size = UDim2.new(0, 58, 0, 58)
	iconFrame.Position = UDim2.new(0, 12, 0.5, -29)
	iconFrame.BackgroundColor3 = canDo and C.Gray100 or C.Gray50
	iconFrame.ZIndex = 84
	iconFrame.Parent = card
	UI.corner(iconFrame, 12)

	local iconLabel = Instance.new("TextLabel")
	iconLabel.Size = UDim2.fromScale(1, 1)
	iconLabel.BackgroundTransparency = 1
	iconLabel.Font = F.Body
	iconLabel.TextSize = 30
	iconLabel.TextColor3 = canDo and C.Gray800 or C.Gray400
	iconLabel.Text = item.emoji
	iconLabel.ZIndex = 85
	iconLabel.Parent = iconFrame

	-- Title
	local titleLabel = Instance.new("TextLabel")
	titleLabel.Size = UDim2.new(0.5, 0, 0, 22)
	titleLabel.Position = UDim2.new(0, 82, 0, 10)
	titleLabel.BackgroundTransparency = 1
	titleLabel.Font = F.Title
	titleLabel.TextSize = 15
	titleLabel.TextColor3 = canDo and C.Gray900 or C.Gray500
	titleLabel.TextXAlignment = Enum.TextXAlignment.Left
	titleLabel.Text = item.name
	titleLabel.ZIndex = 84
	titleLabel.Parent = card

	-- Risk/Effect badge
	local badgeText = item.risk and ("Risk: " .. item.risk .. "%") or (item.effect or "")
	local badgeBg = item.risk and (item.risk >= 60 and C.RedPale or item.risk >= 40 and C.AmberPale or C.GreenPale) or C.GreenPale
	local badgeColor = item.risk and (item.risk >= 60 and C.RedDark or item.risk >= 40 and C.AmberDark or C.GreenDark) or C.GreenDark

	local effectBadge = Instance.new("Frame")
	effectBadge.Size = UDim2.new(0, math.max(90, #badgeText * 6 + 24), 0, 24)
	effectBadge.Position = UDim2.new(0, 82, 0, 35)
	effectBadge.BackgroundColor3 = badgeBg
	effectBadge.ZIndex = 84
	effectBadge.Parent = card
	UI.pill(effectBadge)

	local effectLabel = Instance.new("TextLabel")
	effectLabel.Size = UDim2.fromScale(1, 1)
	effectLabel.BackgroundTransparency = 1
	effectLabel.Font = F.Medium
	effectLabel.TextSize = 11
	effectLabel.TextColor3 = badgeColor
	effectLabel.Text = badgeText .. (item.cost and item.cost > 0 and " | $" .. item.cost or "")
	effectLabel.ZIndex = 85
	effectLabel.Parent = effectBadge

	-- Reward text (if exists)
	if item.reward then
		local rewardLabel = Instance.new("TextLabel")
		rewardLabel.Size = UDim2.new(0.4, 0, 0, 18)
		rewardLabel.Position = UDim2.new(0, 82, 0, 62)
		rewardLabel.BackgroundTransparency = 1
		rewardLabel.Font = F.Body
		rewardLabel.TextSize = 12
		rewardLabel.TextColor3 = C.Gray500
		rewardLabel.TextXAlignment = Enum.TextXAlignment.Left
		rewardLabel.Text = "ğŸ’° " .. item.reward
		rewardLabel.ZIndex = 84
		rewardLabel.Parent = card
	end

	-- Rank requirement indicator
	if item.rankRequired then
		local reqRank = MobRanks[item.rankRequired + 1]
		if reqRank then
			local rankIndicator = Instance.new("TextLabel")
			rankIndicator.Size = UDim2.new(0, 80, 0, 16)
			rankIndicator.Position = UDim2.new(0, 82, 0, item.reward and 78 or 62)
			rankIndicator.BackgroundTransparency = 1
			rankIndicator.Font = F.Body
			rankIndicator.TextSize = 10
			rankIndicator.TextColor3 = C.Gray400
			rankIndicator.TextXAlignment = Enum.TextXAlignment.Left
			rankIndicator.Text = reqRank.emoji .. " " .. reqRank.name .. "+"
			rankIndicator.ZIndex = 84
			rankIndicator.Parent = card
		end
	end

	-- Action button
	local actionBtn = Instance.new("TextButton")
	actionBtn.Size = UDim2.new(0, 80, 0, 46)
	actionBtn.AnchorPoint = Vector2.new(1, 0.5)
	actionBtn.Position = UDim2.new(1, -12, 0.5, 0)
	actionBtn.BackgroundColor3 = canDo and (isJoinMob and C.Green or C.Gray800) or C.Gray300
	actionBtn.Font = F.Button
	actionBtn.TextSize = 13
	actionBtn.TextColor3 = canDo and C.White or C.Gray500
	actionBtn.AutoButtonColor = false
	actionBtn.ZIndex = 84
	actionBtn.Parent = card
	UI.corner(actionBtn, 12)

	if canDo then
		actionBtn.Text = isJoinMob and "Join" or (isLeaveMob and "Leave" or "Do It")
		actionBtn.MouseEnter:Connect(function()
			UI.tween(actionBtn, TweenInfo.new(0.12), { BackgroundColor3 = isJoinMob and C.GreenDark or C.Gray900 })
		end)
		actionBtn.MouseLeave:Connect(function()
			UI.tween(actionBtn, TweenInfo.new(0.12), { BackgroundColor3 = isJoinMob and C.Green or C.Gray800 })
		end)
		actionBtn.MouseButton1Click:Connect(function()
			if isJoinMob then
				self:showJoinMobModal()
			else
				self:doMobActivity(item)
			end
		end)
	else
		actionBtn.Text = reason or "Locked"
	end
end

function ActivitiesScreen:showJoinMobModal()
	-- Create modal for choosing mob family
	if self.mobModal then
		self.mobModal.Visible = true
		return
	end

	-- Modal overlay
	self.mobModal = Instance.new("Frame")
	self.mobModal.Name = "MobModal"
	self.mobModal.Size = UDim2.fromScale(1, 1)
	self.mobModal.BackgroundColor3 = C.Black
	self.mobModal.BackgroundTransparency = 0.4
	self.mobModal.ZIndex = 98
	self.mobModal.Parent = self.screenGui

	-- Modal card
