		familyCard.Parent = familyScroll
		UI.corner(familyCard, 14)
		UI.stroke(familyCard, 1, 0.85, C.Gray200)

		-- Family emoji
		local emoji = Instance.new("TextLabel")
		emoji.Size = UDim2.new(0, 50, 0, 50)
		emoji.Position = UDim2.new(0, 10, 0.5, -25)
		emoji.BackgroundColor3 = C.Gray100
		emoji.Font = F.Body
		emoji.TextSize = 28
		emoji.Text = family.emoji
		emoji.ZIndex = 102
		emoji.Parent = familyCard
		UI.corner(emoji, 10)

		-- Family name
		local name = Instance.new("TextLabel")
		name.Size = UDim2.new(0.5, 0, 0, 22)
		name.Position = UDim2.new(0, 70, 0, 10)
		name.BackgroundTransparency = 1
		name.Font = F.Title
		name.TextSize = 16
		name.TextColor3 = C.Gray900
		name.TextXAlignment = Enum.TextXAlignment.Left
		name.Text = family.name
		name.ZIndex = 102
		name.Parent = familyCard

		-- Style
		local style = Instance.new("TextLabel")
		style.Size = UDim2.new(0.6, 0, 0, 18)
		style.Position = UDim2.new(0, 70, 0, 32)
		style.BackgroundTransparency = 1
		style.Font = F.Body
		style.TextSize = 12
		style.TextColor3 = C.Gray500
		style.TextXAlignment = Enum.TextXAlignment.Left
		style.Text = family.style
		style.ZIndex = 102
		style.Parent = familyCard

		-- Bonus
		local bonus = Instance.new("TextLabel")
		bonus.Size = UDim2.new(0, 100, 0, 18)
		bonus.Position = UDim2.new(0, 70, 0, 50)
		bonus.BackgroundTransparency = 1
		bonus.Font = F.Medium
		bonus.TextSize = 11
		bonus.TextColor3 = C.Green
		bonus.TextXAlignment = Enum.TextXAlignment.Left
