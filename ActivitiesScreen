function ActivitiesScreen:showActivityEventCard(activityId, success, serverMessage, item)
	-- Check if we have the callback and should show full event cards
	if not self.onShowEventCard then
		-- Fall back to simple result modal
		self:showActivityResult(success, serverMessage, item, item and item.emoji or "‚ú®")
		return
	end
	
	-- Check for combat event templates first
	local templates = CombatEventTemplates[activityId] or ActivityEventTemplates[activityId]
	local template = templates and templates[math.random(#templates)]
	
	-- If no specific template, create a generic one
	if not template then
		local itemEmoji = item and item.emoji or "‚ú®"
		local itemName = item and item.name or "Activity"
		
		template = {
			title = itemEmoji .. " " .. itemName,
			emoji = itemEmoji,
			texts = { serverMessage or "You completed the activity!" },
			choices = {
				{ text = success and "üëç Nice!" or "üòî Oh well", feed = success and "Done!" or "Better luck next time." },
			},
		}
	end
	
	-- Pick a random text from the template
	local eventText = template.texts[math.random(#template.texts)]
	
	-- Add the server result message if it's different
	if serverMessage and serverMessage ~= eventText then
		eventText = eventText .. "\n\n" .. serverMessage
	end
	
	-- Add effect info if available (but not for combat activities where effect is unknown)
	if item and item.effect and item.effect ~= "??" then
		eventText = eventText .. "\n\nüìä " .. item.effect
	end
	
	-- Create the event card
	local eventCard = {
		id = "activity_" .. activityId .. "_" .. math.random(10000),
		title = template.title,
		emoji = template.emoji,
		text = eventText,
		question = template.question or "What happened?",
		choices = template.choices,
		category = success and "activity" or "disaster",
		isCombatEvent = item and item.isCombat,
	}
	
	-- Show the event card via the callback
	self.onShowEventCard(eventCard, function(choiceIndex, choiceData)
		-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
		-- CRITICAL FIX: ALWAYS show result after activity choice
		-- User feedback: "I CLICK ONE OF THE CHOICES AND IT JUST DISAPPEARS NUN ELSE POPUPS"
		-- The callback was only logging the choice but not showing any result!
		-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
		
		-- Handle combat event choices
		if choiceData and choiceData.triggersCombat then
			log("Combat triggered! Context:", choiceData.context)
			-- The server would handle actual combat
			-- Show a combat result
			self:showActivityResult(true, "The fight went down! " .. (choiceData.feed or ""), item, "üëä")
		else
			-- Regular activity event choice - SHOW THE RESULT!
			log("Activity event choice made:", choiceIndex)
			
			-- Get the feed text from the choice (what happened)
			local feedText = choiceData and choiceData.feed
			if feedText then
				-- Show result with the choice's feedback
				self:showActivityResult(success, feedText, item, template.emoji or item.emoji or "‚ú®")
			elseif choiceData and choiceData.text then
				-- Use choice text as result
				self:showActivityResult(success, "You chose: " .. choiceData.text, item, template.emoji or item.emoji or "‚ú®")
			else
				-- Generic success message based on original server message
				self:showActivityResult(success, serverMessage or "Activity complete!", item, template.emoji or item.emoji or "‚ú®")
			end
		end
	end)
end

-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
-- CRITICAL FIX: BitLife-Style Activity Result Card
-- This creates a proper event-style card for activity completion, matching the
-- look and feel of the main life event cards for a premium experience
-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
function ActivitiesScreen:showActivityResult(success, message, item, emoji, wasCaught, serverStatChanges)
	-- CRITICAL: Log the result for debugging
	log("=== SHOWING ACTIVITY RESULT ===")
	log("Success:", success, "Message:", message, "Item:", item and item.name or "nil", "Emoji:", emoji, "wasCaught:", wasCaught)
	if serverStatChanges then
		log("Server stat changes received:", serverStatChanges)
	end
	
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- CRITICAL FIX: If wasCaught is true, ALWAYS show RED card (failure)
	-- User feedback: "I WON IT SAYS I GOT CAUGHT AND WENT 4 YEARS AND THE CARD WAS GREEN STILL"
	-- The minigame win reduces risk but doesn't guarantee success - if caught, show RED
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	local isActualSuccess = success and not wasCaught
	
	-- Determine the title based on context
	local title = "Activity Complete!"
	local itemName = item and item.name or "Activity"
	local itemEmoji = item and item.emoji or emoji or "üìã"
	
	-- Determine appropriate title based on the type of activity
	if wasCaught then
		title = "üöî Busted!"
	elseif item then
		-- Check what kind of activity this was
		if item.risk then
			-- It's a crime
			title = isActualSuccess and "Crime Successful!" or "Crime Failed!"
		elseif item.id and (item.id:find("prison") or item.id:find("jail")) then
			-- Prison activity
			title = isActualSuccess and "Prison Activity" or "That Backfired!"
		elseif item.id and (item.id:find("mischief") or item.id:find("prank") or item.id:find("sneak") or item.id:find("trouble")) then
			-- Mischief
			title = isActualSuccess and "Mischief Managed! üòà" or "Caught in the Act!"
		elseif item.effect then
			-- Regular activity with stat effects
			title = isActualSuccess and itemName or "Activity Failed"
		else
			title = isActualSuccess and "Done!" or "Uh oh..."
		end
	else
		title = isActualSuccess and "Success!" or "Failed!"
	end
	
	-- CRITICAL FIX: Use isActualSuccess for colors (caught = ALWAYS RED)
	local shellColor = isActualSuccess and C.Green or C.Red
	local shellStroke = isActualSuccess and C.GreenDark or C.RedDark
	local pale = isActualSuccess and C.GreenPale or C.RedPale
	
	-- Update the result modal UI
	self.resultModal.shell.BackgroundColor3 = shellColor
	self.resultModal.shellStroke.Color = shellStroke
	self.resultModal.emojiFrame.BackgroundColor3 = pale
	
	-- CRITICAL UI FIX: Better emoji display
	local displayEmoji = emoji
	if not displayEmoji or displayEmoji == "OK" or displayEmoji == "Done!" then
		displayEmoji = success and (itemEmoji or "‚ú®") or "üòî"
	elseif displayEmoji == "X" or displayEmoji == "Error" or displayEmoji == "Failed" then
		displayEmoji = "‚ùå"
	elseif displayEmoji == "Success!" then
		displayEmoji = itemEmoji or "üí∞"
	elseif displayEmoji == "Caught!" then
		displayEmoji = "üöî"
	elseif displayEmoji == "Chaos!" then
		displayEmoji = "üî•"
	elseif displayEmoji == "Snitched!" then
		displayEmoji = "ü§´"
	end
	self.resultModal.emojiLabel.Text = displayEmoji
	
	-- Set title with activity name context
	self.resultModal.titleLabel.Text = title
	self.resultModal.titleLabel.TextColor3 = isActualSuccess and C.GreenDark or C.RedDark
	
	-- CRITICAL FIX: Better message formatting for BitLife-style
	local displayMessage = message or (isActualSuccess and "You did it!" or "Something went wrong...")
	
	-- Add activity context if message is too generic
	if displayMessage == "Activity completed." or displayMessage == "You did it!" then
		if item and item.name then
			displayMessage = "You successfully completed " .. string.lower(item.name) .. "!"
		end
	end
	
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- CRITICAL FIX: SHOW STAT CHANGES IN RESULT POPUP!
	-- User bug: "I CLICKED OK IT DIDNT GIVE THE STAT IT SAID"
	-- The stats ARE applied on server - now we show what actually changed!
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	
	-- Get stat changes from the 6th argument (passed from doActivity)
	-- The function signature is: showActivityResult(success, message, item, emoji, wasCaught, statChanges)
	-- We access it via the passed arguments (statChanges would be arg 6 if we add it)
	
	-- Build stat changes display string
	local statChangesText = ""
	
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	-- CRITICAL FIX: PRIORITIZE SERVER STAT CHANGES!
	-- User complaint: "Activities like happiness or any stat doesn't actually give it 
	-- nicely to me like how LifeClient cardpop ups do"
	-- Now we use actual server-provided stat changes when available!
	-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
	
	-- First priority: Use actual stat changes from server if available
	if serverStatChanges and type(serverStatChanges) == "table" and isActualSuccess then
		local statParts = {}
		for stat, amount in pairs(serverStatChanges) do
			if type(amount) == "number" and amount ~= 0 then
				local sign = amount >= 0 and "+" or ""
				-- Emoji mapping for all stat types
				local statEmoji = ""
				if stat == "Happiness" then statEmoji = "üòä"
				elseif stat == "Health" then statEmoji = "üí™"
				elseif stat == "Smarts" then statEmoji = "üß†"
				elseif stat == "Looks" then statEmoji = "‚ú®"
				elseif stat == "Popularity" then statEmoji = "üë•"
				elseif stat == "Fame" then statEmoji = "‚≠ê"
				elseif stat == "Respect" then statEmoji = "ü§ù"
				elseif stat == "Money" then statEmoji = "üí∞"
				elseif stat == "Diplomacy" then statEmoji = "üåç"
				elseif stat == "Heat" then statEmoji = "üî•"
				elseif stat == "Karma" then statEmoji = "‚òØÔ∏è"
				elseif stat == "Followers" then statEmoji = "üì±"
				elseif stat == "Charisma" then statEmoji = "üí¨"
				elseif stat == "Fitness" then statEmoji = "üèÉ"
				elseif stat == "Willpower" then statEmoji = "üßò"
				elseif stat == "Craziness" then statEmoji = "ü§™"
				elseif stat == "Crime" then statEmoji = "üí£"
				else statEmoji = "üìä"
				end
				-- Format money differently (with $ and commas)
				local valueText
				if stat == "Money" then
					if math.abs(amount) >= 1000000 then
						valueText = string.format("%s$%.1fM", sign, amount / 1000000)
					elseif math.abs(amount) >= 1000 then
						valueText = string.format("%s$%dk", sign, math.floor(amount / 1000))
					else
						valueText = string.format("%s$%d", sign, amount)
					end
				else
					valueText = string.format("%s%d %s", sign, amount, stat)
				end
				table.insert(statParts, string.format("%s %s", statEmoji, valueText))
			end
		end
		if #statParts > 0 then
			statChangesText = "\n\n" .. table.concat(statParts, "  ")
			log("Using server stat changes:", statChangesText)
		end
	-- Second priority: Check if the item has effect text we can display
	-- CRITICAL FIX: Only show effect text if it doesn't contain ranges like "$50K-500K"
	elseif item and item.effect and isActualSuccess then
		local effectText = item.effect
		-- Don't show effects that have ranges (indicated by "-" in dollar amounts)
		-- or are just descriptions of what MIGHT happen
		local hasRange = effectText:match("%$%d+[KkMm]?%s*%-%s*%$?%d+") or effectText:match("%$%d+[KkMm]?%s*%-%s*%d+")
		if not hasRange and not item.risk then
			-- Only show for non-crime activities without reward ranges
			statChangesText = "\n\nüìä " .. effectText
		end
	end
	
	-- Third priority: Use hardcoded effectItems mapping as fallback
	-- This is used when server doesn't provide stat changes but we know what they should be
	if statChangesText == "" and item and item.id then
		-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
		-- CRITICAL FIX: EXPANDED effectItems mapping for ALL activities!
		-- User complaint: "Royal activities show +Popularity not +5 Popularity"
		-- Added: Royal, Crime, Mafia, Fame, and all other activity stat changes
		-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
		local effectItems = {
			-- Standard Mind activities
			read = { Smarts = 5, Happiness = 2 },
			study = { Smarts = 6 },
			meditate = { Happiness = 5, Health = 4 },  -- BUFFED: Meditation gives more health
			library = { Smarts = 4, Happiness = 2 },
			puzzle = { Smarts = 4 },
			chess = { Smarts = 5 },
			learn_instrument = { Smarts = 3, Happiness = 4 },
			
			-- Body/Health activities
			-- CRITICAL FIX: Buffed health gains - user feedback "health is hard to manage"
			gym = { Health = 8, Looks = 3 },  -- BUFFED from 6/2
			run = { Health = 7, Happiness = 3 },  -- BUFFED from 5/2
			yoga = { Health = 6, Happiness = 4 },  -- BUFFED from 4/3
			spa = { Looks = 3, Happiness = 4, Health = 2 },  -- Added health bonus
			salon = { Looks = 3, Happiness = 2 },
			martial_arts = { Health = 6, Looks = 3 },  -- BUFFED from 4/2
			swimming = { Health = 7, Happiness = 4 },  -- BUFFED from 5/3
			cycling = { Health = 7, Happiness = 3 },  -- BUFFED from 5/2
			walk = { Health = 4, Happiness = 3 },  -- BUFFED from 3/2
			doctor = { Health = 8 },  -- BUFFED from 5
			dentist = { Health = 3 },  -- BUFFED from 2
			
			-- Social activities
			party = { Happiness = 5 },
			hangout = { Happiness = 3 },
			nightclub = { Happiness = 6, Health = -2 },
			tv = { Happiness = 2 },
			games = { Happiness = 4, Smarts = 1 },
			movies = { Happiness = 3 },
			concert = { Happiness = 5 },
			vacation = { Happiness = 8, Health = 2 },
			arcade = { Happiness = 3, Smarts = 1 },
			karaoke = { Happiness = 4 },
			shopping = { Happiness = 4, Looks = 2 },
			beach = { Happiness = 5, Health = 2 },
			camping = { Happiness = 4, Health = 3 },
			
			-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			-- ROYAL ACTIVITIES - Show actual stat numbers!
			-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			public_appearance = { Popularity = 5, Happiness = 3 },
			charity_visit = { Popularity = 8, Happiness = 3 },
			state_dinner = { Popularity = 10, Smarts = 2 },
			open_parliament = { Popularity = 15, Respect = 5 },
			knight_ceremony = { Popularity = 8, Respect = 5 },
			royal_wedding = { Happiness = 5, Popularity = 3 },
			military_review = { Popularity = 6, Respect = 3 },
			charity_gala = { Popularity = 12, Fame = 5 },
			royal_polo = { Health = 5, Happiness = 8 },
			royal_hunt = { Health = 5, Happiness = 5 },
			royal_yacht = { Happiness = 15, Health = 3 },
			royal_ball = { Happiness = 12, Fame = 5 },
			royal_council = { Smarts = 5, Popularity = 3 },
			royal_decree = { Fame = 10, Popularity = 8 },
			royal_tutor = { Smarts = 8, Happiness = 2 },
			royal_languages = { Smarts = 5 },
			royal_etiquette = { Smarts = 3, Looks = 2 },
			royal_charity_gala = { Fame = 8, Happiness = 10 },
			royal_state_visit = { Fame = 8, Happiness = 6 },
			royal_ceremony = { Fame = 8, Happiness = 12 },
			royal_public_appearance = { Fame = 5, Happiness = 8 },
			
			-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			-- CRIME ACTIVITIES
			-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			pickpocket = { Money = 50 },
			shoplift = { Money = 100 },
			burglary = { Money = 500 },
			car_theft = { Money = 2000 },
			bank_robbery = { Money = 10000 },
			
			-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			-- MAFIA ACTIVITIES
			-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			mob_collection = { Money = 1000, Respect = 5 },
			mob_protection = { Money = 500, Respect = 3 },
			mob_heist = { Money = 5000, Respect = 10 },
			mob_hit = { Respect = 15 },
			extortion = { Money = 2000, Respect = 5 },
			smuggling = { Money = 3000, Respect = 5 },
			bribery = { Respect = 3 },
			
			-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			-- FAME/CELEBRITY ACTIVITIES
			-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			photo_shoot = { Fame = 5, Looks = 3 },
			interview = { Fame = 8 },
			red_carpet = { Fame = 10, Looks = 5 },
			music_video = { Fame = 12, Happiness = 5 },
			album_recording = { Fame = 10, Money = 50000 },
			concert_tour = { Fame = 20, Money = 100000 },
			movie_role = { Fame = 15, Money = 75000 },
			tv_appearance = { Fame = 8, Money = 10000 },
			endorsement = { Fame = 5, Money = 25000 },
			social_media_post = { Fame = 3 },
			autograph_signing = { Fame = 5, Happiness = 3 },
			fan_meet = { Fame = 5, Happiness = 5 },
		}
		
		local activityStats = effectItems[item.id]
		if activityStats and isActualSuccess then
			local statParts = {}
			for stat, amount in pairs(activityStats) do
				local sign = amount >= 0 and "+" or ""
				-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
				-- CRITICAL FIX: EXPANDED emoji mapping for all stat types!
				-- User complaint: "Royal activities show +Popularity not +5 Popularity"
				-- Now shows actual numbers with appropriate emojis for ALL stats
				-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
				local emoji = ""
				if stat == "Happiness" then emoji = "üòä"
				elseif stat == "Health" then emoji = "üí™"
				elseif stat == "Smarts" then emoji = "üß†"
				elseif stat == "Looks" then emoji = "‚ú®"
				elseif stat == "Popularity" then emoji = "üë•"
				elseif stat == "Fame" then emoji = "‚≠ê"
				elseif stat == "Respect" then emoji = "ü§ù"
				elseif stat == "Money" then emoji = "üí∞"
				elseif stat == "Diplomacy" then emoji = "ü§ù"
				elseif stat == "Heat" then emoji = "üî•"
				elseif stat == "Karma" then emoji = "‚òØÔ∏è"
				elseif stat == "Followers" then emoji = "üì±"
				elseif stat == "Charisma" then emoji = "üí¨"
				elseif stat == "Fitness" then emoji = "üèÉ"
				else emoji = "üìä"
				end
				-- Format money differently (with $ and commas)
				local valueText
				if stat == "Money" then
					if amount >= 1000 then
						valueText = string.format("$%dk", math.floor(amount / 1000))
					else
						valueText = string.format("$%d", amount)
					end
				else
					valueText = string.format("%s%d %s", sign, amount, stat)
				end
				table.insert(statParts, string.format("%s %s", emoji, valueText))
			end
			if #statParts > 0 then
				statChangesText = "\n\n" .. table.concat(statParts, "  ")
			end
		end
	end
	
	displayMessage = displayMessage .. statChangesText
	
	self.resultModal.messageLabel.Text = displayMessage
	self.resultModal.okButton.BackgroundColor3 = shellColor
	self.resultModal.okButton.Text = isActualSuccess and "üëç Awesome!" or "üòî Okay..."

	-- Show the modal
	if self.resultModal.show then
		self.resultModal.show()
	elseif UI.showModal then
		UI.showModal(self.resultModal)
	end
end

-- Legacy showResult for backwards compatibility
function ActivitiesScreen:showResult(success, message, emoji)
	local shellColor = success and C.Green or C.Red
	local shellStroke = success and C.GreenDark or C.RedDark
	local pale = success and C.GreenPale or C.RedPale

	self.resultModal.shell.BackgroundColor3 = shellColor
	self.resultModal.shellStroke.Color = shellStroke
	self.resultModal.emojiFrame.BackgroundColor3 = pale
	
	-- CRITICAL UI FIX: Better default emojis
	local displayEmoji = emoji
	if not displayEmoji or displayEmoji == "OK" or displayEmoji == "Done!" then
		displayEmoji = success and "‚ú®" or "üòî"
	elseif displayEmoji == "X" or displayEmoji == "Error" or displayEmoji == "Failed" then
		displayEmoji = "‚ùå"
	elseif displayEmoji == "Success!" then
		displayEmoji = "üí∞"
	elseif displayEmoji == "Caught!" then
		displayEmoji = "üöî"
	elseif displayEmoji == "Chaos!" then
		displayEmoji = "üî•"
	elseif displayEmoji == "Snitched!" then
		displayEmoji = "ü§´"
	end
	self.resultModal.emojiLabel.Text = displayEmoji
	
	-- CRITICAL UI FIX: More descriptive titles based on context
	local title = success and "Activity Complete!" or "Uh oh..."
	if emoji == "Caught!" then title = "Busted!" end
	if emoji == "Chaos!" then title = "Prison Riot!" end
	
	self.resultModal.titleLabel.Text = title
	self.resultModal.titleLabel.TextColor3 = success and C.GreenDark or C.RedDark
	self.resultModal.messageLabel.Text = message or (success and "You did it!" or "Something went wrong...")
	self.resultModal.okButton.BackgroundColor3 = shellColor
	self.resultModal.okButton.Text = success and "üëç Awesome!" or "üòî Okay..."

	-- Use custom show method if available, fallback to UI.showModal
	if self.resultModal.show then
		self.resultModal.show()
	elseif UI.showModal then
		UI.showModal(self.resultModal)
	end
end

function ActivitiesScreen:show()
	log("=== SHOWING ActivitiesScreen ===")
	local inJail = self:isInJail()
	log("Current state - Age:", self:getAge(), "Money:", self:getMoney(), "InJail:", inJail, "JailYearsLeft:", self:getJailYearsLeft())

	-- Rebuild tabs (jail vs normal mode)
	self:rebuildTabs()
	self:updateInfoBar()

	-- Set appropriate starting tab
	if inJail then
		self.currentTab = "prison"
	elseif self.currentTab == "prison" then
		-- Was viewing prison but no longer in jail - switch to normal tab
		self.currentTab = "mindbody"
	end

	self:switchTab(self.currentTab)
	UI.slideInScreen(self.overlay, "right")
	self.isVisible = true
	log("‚úÖ ActivitiesScreen is now visible")
end

function ActivitiesScreen:hide()
	log("=== HIDING ActivitiesScreen ===")
	UI.slideOutScreen(self.overlay, "right", function()
		self.resultModal.overlay.Visible = false
		self.minigameOverlay.Visible = false
		log("‚úÖ ActivitiesScreen hidden, modals cleaned up")
	end)
	self.isVisible = false
end

return ActivitiesScreen
