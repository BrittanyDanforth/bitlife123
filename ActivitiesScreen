-- GAMEPASS SYSTEM
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local MarketplaceService = game:GetService("MarketplaceService")
local Players = game:GetService("Players")

-- Gamepass IDs (replace with actual Roblox gamepass IDs)
local GAMEPASSES = {
	MOB_LIFE = 0, -- Mob Life Pack - unlocks organized crime
	CRIME_BOSS = 0, -- Crime Boss Pack - bonus crime features
	VIP = 0, -- VIP Pack - all premium features
	DOUBLE_MONEY = 0, -- Double Money from crimes
	REDUCED_SENTENCE = 0, -- Reduced prison sentences
}

-- Cache for gamepass ownership (checked once per session)
local gamepassCache = {}

local function checkGamepass(gamepassId)
	if gamepassId == 0 then return true end -- Free if ID not set
	local player = Players.LocalPlayer
	if not player then return false end

	local cacheKey = tostring(gamepassId)
	if gamepassCache[cacheKey] ~= nil then
		return gamepassCache[cacheKey]
	end

	local success, owns = pcall(function()
		return MarketplaceService:UserOwnsGamePassAsync(player.UserId, gamepassId)
	end)

	if success then
		gamepassCache[cacheKey] = owns
		return owns
	end
	return false
end

local function promptGamepass(gamepassId)
	if gamepassId == 0 then return end
	local player = Players.LocalPlayer
	if player then
		pcall(function()
			MarketplaceService:PromptGamePassPurchase(player, gamepassId)
		end)
	end
end

