					else
						state:ModifyStat("Happiness", 5)
						state:AddFeed("ğŸ’­ Therapy is hard. Progress is slow. But at least you're trying.")
					end
				end,
			},
			{
				text = "ğŸº Try to cope on your own",
				effects = { Happiness = -10 },
				feedText = "Bottling it up...",
				onResolve = function(state)
					state.Flags = state.Flags or {}
					local roll = math.random(1, 100)
					
					if roll <= 30 then
						state.Flags.self_medicate = true
						state:ModifyStat("Health", -15)
						state:ModifyStat("Happiness", -20)
						state:AddFeed("ğŸ’­ Started drinking to cope. It's getting worse, not better...")
					else
						state:ModifyStat("Happiness", -10)
						state:AddFeed("ğŸ’­ Pushing through. Some days are harder than others. Veterans never stop serving.")
					end
				end,
			},
			{
				text = "ğŸ¤ Join a veterans support group",
				effects = { Happiness = 5 },
				feedText = "Finding others who understand...",
				onResolve = function(state)
					state.Flags = state.Flags or {}
					state.Flags.veterans_group = true
					state:ModifyStat("Happiness", 12)
					state:AddFeed("ğŸ’­ Found brothers and sisters who get it. You're not alone. That helps.")
				end,
			},
		},
	},
	
