	{
		id = "mil_pt_test",
		title = "Physical Fitness Test",
		emoji = "ğŸ’ª",
		text = "It's time for your annual physical fitness test. Push-ups, sit-ups, and a 2-mile run.",
		question = "How prepared are you?",
		category = "career_military",
		weight = 18,
		minAge = 18, maxAge = 60,
		baseChance = 0.55,
		cooldown = 3,
		requiresJob = true,
		eligibility = hasMilitaryJob,
		
		choices = {
			{
				text = "Crush it - I've been training",
				effects = {},
				feedText = "Let's see those scores...",
				onResolve = function(state)
					local health = (state.Stats and state.Stats.Health) or 50
					local roll = math.random(1, 100)
					local bonus = (health - 50) / 2
					
					if roll + bonus >= 70 then
						state:ModifyStat("Happiness", 15)
						state:ModifyStat("Health", 5)
						state.Flags = state.Flags or {}
						state.Flags.pt_excellence = true
						state:AddFeed("ğŸ’ª MAXED the PT test! 300+ score! You're a physical specimen!")
					elseif roll + bonus >= 40 then
						state:ModifyStat("Happiness", 8)
						state:AddFeed("ğŸ’ª Passed with flying colors! Good fitness scores!")
					else
						state:ModifyStat("Happiness", -5)
						state:AddFeed("ğŸ’ª Passed... barely. Time to hit the gym more.")
					end
				end,
			},
			{
				text = "Hope for the best",
				effects = {},
				feedText = "Winging it...",
				onResolve = function(state)
					local roll = math.random(1, 100)
					if roll <= 50 then
						state:ModifyStat("Happiness", 5)
