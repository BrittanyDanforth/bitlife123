		title = "Major Promotion",
		text = "You got a major promotion! This is huge - significant pay raise, more responsibility, recognition for your hard work. Your career is taking off!",
		category = "milestone",
		weight = 8,
		minAge = 25,
		maxAge = 55,
		requiresJob = true,
		requiresStats = { Smarts = { min = 70 } },
		oneTime = false,
		baseChance = 0.25,
		cooldown = 6,
		choices = {
			{
				index = 1,
				text = "Accept with excitement",
				effects = { Happiness = 8, Money = 10000, Health = -2 },
				setFlags = { promoted = true, career_success = true },
				feedText = "You accepted! Major career milestone achieved!",
				onResolve = function(state)
					if state.CurrentJob then
						local oldSalary = state.CurrentJob.salary or 50000
						state.CurrentJob.salary = math.floor(oldSalary * 1.5)
						state.CurrentJob.name = "Senior " .. (state.CurrentJob.name or "Manager")
					end
				end,
			},
			{
				index = 2,
				text = "Negotiate for more",
				effects = { Happiness = 7, Money = 12000, Smarts = 3 },
				setFlags = { promoted = true, good_negotiator = true },
				feedText = "You negotiated! Got even better terms. You're a pro!",
			},
		},
	},
	
