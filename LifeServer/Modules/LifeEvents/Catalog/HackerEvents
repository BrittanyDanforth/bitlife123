					state.JailYearsLeft = jailYears
					state.Flags = state.Flags or {}
					state.Flags.in_prison = true
					state.Flags.incarcerated = true
					state.CurrentJob = nil
					state.Flags.employed = nil
					state.Flags.has_job = nil
					if state.AddFeed then
						state:AddFeed("ğŸ”’ Arrested. " .. jailYears .. " years. Cooperation reduced sentence.")
					end
				end,
			},
		},
	},

	{
		id = "assassination_target",
		emoji = "ğŸ¯",
		title = "You're a Target",
		text = "A rival hacking group has put a bounty on your head. You know too much.",
		category = "career_hacker",
		weight = 5,
		minAge = 22,
		maxAge = 60,
		requiresFlags = { elite_hacker = true },
		cooldown = 4,
		choices = {
			{
				index = 1,
				text = "Hack them first!",
				effects = { Smarts = 3 },
				feedText = "Best defense is a good offense!",
				triggerMinigame = "hacking",
				minigameOptions = { codes = 6, time = 25 },
				onResolve = function(state, minigameResult)
					if minigameResult and minigameResult.success then
						state.Money = (state.Money or 0) + 100000
						state.Flags = state.Flags or {}
						state.Flags.eliminated_rivals = true
						if state.AddFeed then
							state:AddFeed("You exposed them to the FBI. Rivals eliminated!")
						end
					else
						state.Stats = state.Stats or {}
						state.Stats.Health = (state.Stats.Health or 50) - 25
						if state.AddFeed then
							state:AddFeed("Your hack failed. Assassin got close. You're wounded.")
						end
					end
				end,
			},
			{
				index = 2,
				text = "Go into hiding",
				effects = { Happiness = -10, Money = -50000 },
				setFlags = { in_hiding = true },
				feedText = "You disappeared. Living off the grid now.",
			},
			{
				index = 3,
				text = "Pay them off",
				effects = { Money = -200000 },
				feedText = "Blood money. They called off the hit... for now.",
			},
		},
	},
}

return events
