		category = "career_sports",
		weight = 10,
		minAge = 22, maxAge = 38,
		baseChance = 0.35,
		cooldown = 4,
		requiresJob = true,
		eligibility = isProAthlete,
		blockedByFlags = { in_prison = true, injured = true },
		
		choices = {
			{
				text = "Embrace the pressure - make history!",
				effects = { Happiness = 5, Health = -5 },
				feedText = "Born for this!",
				triggerMinigame = "mash",
				minigameOptions = { difficulty = "hard" },
				onResolve = function(state, minigameResult)
					local roll = RANDOM:NextInteger(1, 100)
					local bonus = (minigameResult and minigameResult.success) and 25 or 0
					
					if roll + bonus >= 50 then
						local bonus_money = RANDOM:NextInteger(1000000, 5000000)
						state.Money = (state.Money or 0) + bonus_money
						state.Fame = math.min(100, (state.Fame or 0) + 80) -- CRITICAL FIX: Cap fame at 100
						state:ModifyStat("Happiness", 30)
						state.Flags = state.Flags or {}
						state.Flags.record_holder = true
						state:AddFeed(string.format("üìä RECORD BROKEN! YOUR NAME IN HISTORY FOREVER! $%d in bonuses!", bonus_money))
					else
						state.Fame = math.min(100, (state.Fame or 0) + 15) -- CRITICAL FIX: Cap fame at 100
						state:ModifyStat("Happiness", -10)
						state:AddFeed("üìä Fell just short! Still an amazing season but the record stands.")
					end
				end,
			},
			{
				text = "Block out the noise - focus",
				effects = { Smarts = 3 },
				feedText = "One game at a time...",
				onResolve = function(state)
					local roll = RANDOM:NextInteger(1, 100)
					if roll <= 40 then
						local bonus_money = RANDOM:NextInteger(500000, 2000000)
						state.Money = (state.Money or 0) + bonus_money
						state.Fame = math.min(100, (state.Fame or 0) + 60) -- CRITICAL FIX: Cap fame at 100
						state:ModifyStat("Happiness", 25)
						state.Flags = state.Flags or {}
						state.Flags.record_holder = true
						state:AddFeed(string.format("üìä QUIETLY MADE HISTORY! Record is yours! $%d bonus!", bonus_money))
					else
						state:ModifyStat("Happiness", 5)
						state:AddFeed("üìä Solid season regardless. The record chase was fun!")
					end
				end,
			},
		},
	},
	
