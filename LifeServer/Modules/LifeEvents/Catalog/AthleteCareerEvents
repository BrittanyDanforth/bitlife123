					if roll <= 55 then
						state:ModifyStat("Happiness", 12)
						state:AddFeed("üò° Cleared the air! Coach apologized. Respect earned!")
					else
						state:ModifyStat("Happiness", -10)
						state:AddFeed("üò° Meeting got heated. Relationship might be damaged.")
					end
				end,
			},
			{
				text = "Respond through media",
				effects = {},
				feedText = "Let the public know my side...",
				onResolve = function(state)
					local roll = RANDOM:NextInteger(1, 100)
					if roll <= 35 then
						state.Fame = math.min(100, (state.Fame or 0) + 15) -- CRITICAL FIX: Cap fame at 100
						state:ModifyStat("Happiness", 10)
						state:AddFeed("üò° Public sided with you! Coach looks bad!")
					else
						state:ModifyStat("Happiness", -15)
						state.Flags = state.Flags or {}
						state.Flags.coach_enemy = true
