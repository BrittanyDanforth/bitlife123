					local health = (state.Stats and state.Stats.Health) or 50
					local bonus = math.floor(health / 25)
					roll = roll - bonus
					
					state.Flags = state.Flags or {}
					-- CRITICAL FIX: Always set likes_sports when trying out - even if you don't make it!
					state.Flags.likes_sports = true
					if roll <= 35 then
						state:ModifyStat("Happiness", 10)
						state:ModifyStat("Health", 5)
						state.Flags.school_athlete = true
						state.Flags.athletic_focus = true
						state:AddFeed("âš½ You made the team! Coach was impressed!")
