	-- Racing is a dangerous sport - death is a real possibility!
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	{
		id = "racing_fatal_incident",
		emoji = "ğŸ’€",
		title = "Catastrophic Crash!",
		textVariants = {
			"At 220 mph, your tire blows out sending you into the wall at an impossible angle!",
			"Rain makes the track slick. Your car hydroplanes and spins directly into the barrier!",
			"A competitor clips your rear wheel - you're sent tumbling through the air!",
			"Brake failure at the fastest section of the track! The wall is coming fast!",
		},
		text = "A catastrophic accident on the track! Your life hangs in the balance!",
		category = "career_racing",
		weight = 2, -- Rare but possible
		minAge = 18,
		maxAge = 50,
		requiresJob = true,
		requiresJobCategory = "racing",
		cooldown = 5,
		blockedByFlags = { in_prison = true },
		-- CRITICAL: Only trigger for active pro racers
		eligibility = function(state)
			if not state.CurrentJob then return false end
			local jobId = (state.CurrentJob.id or ""):lower()
			return jobId:find("racer") or jobId:find("f1") or jobId:find("racing")
		end,
		
		choices = {
			{
				index = 1,
				text = "React instantly!",
				feedText = "Everything slows down... you have one chance!",
				triggerMinigame = "qte",
				minigameOptions = { difficulty = "hard" },
				onResolve = function(state, minigameResult)
					if minigameResult and minigameResult.success then
						-- SURVIVED! Barely.
						state.Flags = state.Flags or {}
						state.Flags.cheated_death = true
						state.Stats = state.Stats or {}
						state.Stats.Health = math.max(20, (state.Stats.Health or 50) - 20)
						-- CRITICAL FIX: Clamp stats to valid range (0-100)
						state.Stats.Happiness = math.max(0, (state.Stats.Happiness or 50) - 10)
						if state.AddFeed then
							state:AddFeed("ğŸ’€ You walked away from what should have been fatal! Racing gods were watching!")
						end
					else
						-- FATAL CRASH or CAREER ENDING
						-- CRITICAL FIX: Use RANDOM:NextInteger instead of math.random
						local deathRoll = RANDOM:NextInteger(1, 100)
						if deathRoll <= 25 then
							-- ACTUAL DEATH - 25% chance of dying on failure
							state.Flags = state.Flags or {}
							state.Flags.dead = true
							state.Flags.cause_of_death = "Racing Accident"
							state.Stats = state.Stats or {}
							state.Stats.Health = 0
							state.Health = 0
							state.IsDead = true -- CRITICAL FIX: Set IsDead for consistency
							state.DeathReason = "ğŸï¸ Fatal racing accident. Died doing what you loved. ğŸ"
							if state.AddFeed then
								state:AddFeed("â˜ ï¸ FATAL CRASH. You died doing what you loved, but you died.")
							end
						else
							-- Career ending injury
							state.Stats = state.Stats or {}
							state.Stats.Health = 5
							state.Flags = state.Flags or {}
							state.Flags.career_ended = true
							state.Flags.hospitalized = true
							-- CRITICAL FIX: Use RANDOM:NextNumber instead of math.random
						state.Flags.paralyzed = RANDOM:NextNumber() < 0.3 -- 30% chance of paralysis
							state.CurrentJob = nil
							state.Flags.employed = nil
							state.Flags.has_job = nil
							if state.AddFeed then
								if state.Flags.paralyzed then
									state:AddFeed("ğŸ¥ Catastrophic injuries. Paralyzed. Your racing career is over forever.")
								else
									state:AddFeed("ğŸ¥ Multiple broken bones and internal injuries. You'll never race again.")
								end
							end
						end
					end
				end,
			},
			{
				index = 2,
				text = "Accept fate",
				effects = {},
				feedText = "You close your eyes...",
				onResolve = function(state)
					-- Without trying, higher death chance
					-- CRITICAL FIX: Use RANDOM:NextInteger instead of math.random
					local deathRoll = RANDOM:NextInteger(1, 100)
					if deathRoll <= 50 then
						-- 50% death when not trying
						state.Flags = state.Flags or {}
						state.Flags.dead = true
						state.Flags.cause_of_death = "Racing Accident"
						state.Stats = state.Stats or {}
						state.Stats.Health = 0
						state.Health = 0
						state.IsDead = true -- CRITICAL FIX: Set IsDead for consistency
						state.DeathReason = "ğŸï¸ Fatal racing crash. Died on the track. ğŸ"
						if state.AddFeed then
							state:AddFeed("â˜ ï¸ You didn't fight. The crash was fatal.")
						end
					else
						-- Survived but badly hurt
						state.Stats = state.Stats or {}
						state.Stats.Health = 10
						state.Flags = state.Flags or {}
						state.Flags.hospitalized = true
						state.Flags.career_ended = true
						state.CurrentJob = nil
						if state.AddFeed then
							state:AddFeed("ğŸ¥ Somehow you survived. But racing is over for you.")
						end
					end
				end,
			},
		},
	},
