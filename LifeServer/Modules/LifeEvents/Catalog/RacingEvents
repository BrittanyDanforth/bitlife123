				onResolve = function(state, minigameResult)
					-- CRITICAL FIX: Use RANDOM:NextInteger instead of math.random
					local roll = RANDOM:NextInteger(1, 100)
					if roll <= 60 then
						state.Money = (state.Money or 0) + 15000
						state.Flags = state.Flags or {}
						state.Flags.has_first_sponsor = true
						state.Flags.sponsored_racer = true
						state.Flags.tough_negotiator = true
						if state.AddFeed then
							state:AddFeed("ğŸ’° You negotiated a better deal! $15,000 sponsorship!")
						end
					else
						state.Flags = state.Flags or {}
						state.Flags.has_first_sponsor = true -- They still get the sponsor
						state.Money = (state.Money or 0) + 8000
						if state.AddFeed then
							state:AddFeed("ğŸ“‹ The sponsor wasn't impressed by negotiations. $8,000 deal.")
						end
					end
				end,
