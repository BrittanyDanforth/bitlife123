	{ id = "money",     name = "Ask for Money", emoji = "Money", effect = "+Money maybe" },
	{ id = "vacation",  name = "Vacation",      emoji = "Travel",effect = "+Relationship", cost = 2000 },
	{ id = "apologize", name = "Apologize",     emoji = "Sorry", effect = "+Relationship" },
}

