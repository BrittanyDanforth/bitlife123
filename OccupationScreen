	choiceContainer.Name = "ChoiceContainer"
	choiceContainer.Size = UDim2.new(1, -MODAL_PAD * 2, 0, choiceHeight)
	choiceContainer.Position = UDim2.new(0, MODAL_PAD, 0, choiceY)
	choiceContainer.BackgroundTransparency = 1
