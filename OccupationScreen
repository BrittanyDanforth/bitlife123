	-- History section
	local historyHeader = Instance.new("TextLabel")
	historyHeader.Size = UDim2.new(1, 0, 0, sectionHeaderSize)
	historyHeader.BackgroundTransparency = 1
	historyHeader.Font = F.Title
	historyHeader.TextSize = sectionHeaderTextSize
