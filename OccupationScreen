	contentLayout.Parent = content

	-- Summary card - SCALED
	local summaryHeight = IS_TINY_PHONE and 64 or (IS_SMALL_PHONE and 72 or 84)
	local summary = Instance.new("Frame")
	summary.Size = UDim2.new(1, 0, 0, summaryHeight)
