	self.jobsTab.LayoutOrder = 1
	self.jobsTab.ZIndex = 85
	self.jobsTab.Parent = self.tabBar
	UI.corner(self.jobsTab, TAB_CORNER)

	-- Education tab
	self.eduTab = Instance.new("TextButton")
	self.eduTab.Name = "EduTab"
	self.eduTab.Size = UDim2.new(0.46, 0, 1, 0)
	self.eduTab.BackgroundColor3 = C.White
	self.eduTab.Font = F.Button
	self.eduTab.TextSize = TAB_TEXT_SIZE
	self.eduTab.TextColor3 = C.Gray600
	self.eduTab.Text = "Education"
	self.eduTab.AutoButtonColor = false
	self.eduTab.LayoutOrder = 2
	self.eduTab.ZIndex = 85
	self.eduTab.Parent = self.tabBar
	UI.corner(self.eduTab, 10)
	
	-- CRITICAL UI FIX: Add hover effects to tab buttons
	self.jobsTab.MouseEnter:Connect(function()
		if self.currentTab ~= "jobs" then
			UI.tween(self.jobsTab, TweenInfo.new(0.12), { BackgroundColor3 = C.BluePale })
		end
	end)
	self.jobsTab.MouseLeave:Connect(function()
		if self.currentTab ~= "jobs" then
			UI.tween(self.jobsTab, TweenInfo.new(0.12), { BackgroundColor3 = C.White })
		end
	end)
	
	self.eduTab.MouseEnter:Connect(function()
		if self.currentTab ~= "education" then
			UI.tween(self.eduTab, TweenInfo.new(0.12), { BackgroundColor3 = C.PurplePale })
		end
	end)
	self.eduTab.MouseLeave:Connect(function()
		if self.currentTab ~= "education" then
			UI.tween(self.eduTab, TweenInfo.new(0.12), { BackgroundColor3 = C.White })
		end
	end)

	self.jobsTab.MouseButton1Click:Connect(function() self:switchTab("jobs") end)
	self.eduTab.MouseButton1Click:Connect(function() self:switchTab("education") end)

	-- Category filter bar (positioned relative to contentRoot)
	self.categoryBar = Instance.new("ScrollingFrame")
	self.categoryBar.Name = "CategoryBar"
	self.categoryBar.Size = UDim2.new(1, 0, 0, CATEGORY_HEIGHT)
	self.categoryBar.Position = UDim2.new(0, 0, 0, categoryY)
	self.categoryBar.BackgroundTransparency = 1
	self.categoryBar.CanvasSize = UDim2.new(0, 0, 0, 0)
	self.categoryBar.AutomaticCanvasSize = Enum.AutomaticSize.X
	self.categoryBar.ScrollBarThickness = 0
	self.categoryBar.ScrollingDirection = Enum.ScrollingDirection.X
	self.categoryBar.ZIndex = 84
	self.categoryBar.Parent = self.contentRoot

	local categoryLayout = Instance.new("UIListLayout")
	categoryLayout.FillDirection = Enum.FillDirection.Horizontal
	categoryLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left
	categoryLayout.VerticalAlignment = Enum.VerticalAlignment.Center
	categoryLayout.Padding = UDim.new(0, IS_TINY_PHONE and 4 or 8)
	categoryLayout.Parent = self.categoryBar

	-- CRITICAL UI FIX #5: Scaled category chips for mobile
	local CHIP_HEIGHT = IS_TINY_PHONE and 26 or (IS_SMALL_PHONE and 30 or 34)
	local CHIP_TEXT_SIZE = IS_TINY_PHONE and 10 or 12

	-- Create category chips
	self.categoryChips = {}
	for i, category in ipairs(JobCategories) do
		local chip = Instance.new("TextButton")
		chip.Name = category.id
		chip.Size = UDim2.new(0, 0, 0, CHIP_HEIGHT)
		chip.AutomaticSize = Enum.AutomaticSize.X
		chip.BackgroundColor3 = i == 1 and C.Blue or C.Gray100
		chip.Font = F.Medium
		chip.TextSize = CHIP_TEXT_SIZE
		chip.TextColor3 = i == 1 and C.White or C.Gray600
		-- Shorter text on tiny phones
		local chipText = IS_TINY_PHONE and (category.emoji .. " " .. (category.name:sub(1, 8) .. (category.name:len() > 8 and ".." or ""))) or ("  " .. category.emoji .. " " .. category.name .. "  ")
		chip.Text = chipText
		chip.AutoButtonColor = false
		chip.LayoutOrder = i
		chip.ZIndex = 85
		chip.Parent = self.categoryBar
		UI.pill(chip)

		self.categoryChips[category.id] = chip

		chip.MouseButton1Click:Connect(function()
			self:selectCategory(category.id)
		end)

		chip.MouseEnter:Connect(function()
			if self.selectedCategory ~= category.id then
				UI.tween(chip, TweenInfo.new(0.1), { BackgroundColor3 = C.Gray200 })
			end
		end)
		chip.MouseLeave:Connect(function()
			if self.selectedCategory ~= category.id then
				UI.tween(chip, TweenInfo.new(0.1), { BackgroundColor3 = C.Gray100 })
			end
		end)
	end

	-- Scroll area (positioned relative to contentRoot)
	self.contentScroll = Instance.new("ScrollingFrame")
	self.contentScroll.Name = "ContentScroll"
	self.contentScroll.Size = UDim2.new(1, 0, 1, -scrollY)
	self.contentScroll.Position = UDim2.new(0, 0, 0, scrollY)
	self.contentScroll.BackgroundTransparency = 1
	self.contentScroll.CanvasSize = UDim2.new(0, 0, 0, 0)
	self.contentScroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
	self.contentScroll.ScrollBarThickness = 4
	self.contentScroll.ScrollBarImageColor3 = C.Gray300
	self.contentScroll.ZIndex = 81
	self.contentScroll.Parent = self.contentRoot

	local contentLayout = Instance.new("UIListLayout")
	contentLayout.Padding = UDim.new(0, 12)
	contentLayout.SortOrder = Enum.SortOrder.LayoutOrder
	contentLayout.Parent = self.contentScroll

	-- Result modal
	self:createResultModal()

	-- Initial populate
	self:populateJobs()
end

function OccupationScreen:updateInfoBar()
	local age = self:getAge()
	local money = self:getMoney()
	local job = self:getCurrentJob()

	self.ageChip.text.Text = "Age " .. age
	self.moneyChip.text.Text = UI.formatMoney(money)

	if job then
		-- Find job name - first check local Jobs list, then server data
		local jobName = nil

		-- Check local Jobs list
		for _, j in ipairs(Jobs) do
			if j.id == job then
				jobName = j.name
				break
			end
		end

		-- If not found in local list, use server's job title (story-acquired jobs)
		if not jobName then
			local serverJob = self:getCurrentJobData()
			if serverJob and serverJob.title then
				jobName = serverJob.title
				log("Using server job title:", jobName)
			else
				jobName = "Employed"
			end
		end

		-- CRITICAL UI FIX #9: Truncate job names on tiny phones
		local displayName = jobName
		if IS_TINY_PHONE and jobName:len() > 10 then
			displayName = jobName:sub(1, 9) .. ".."
		elseif IS_SMALL_PHONE and jobName:len() > 12 then
			displayName = jobName:sub(1, 11) .. ".."
		end
		self.jobChip.text.Text = displayName
		self.jobChip.chip.BackgroundColor3 = C.GreenPale
		self.jobChip.text.TextColor3 = C.GreenDark
	else
		self.jobChip.text.Text = IS_TINY_PHONE and "No Job" or "Unemployed"
		self.jobChip.chip.BackgroundColor3 = C.AmberPale
		self.jobChip.text.TextColor3 = C.AmberDark
	end
end

function OccupationScreen:switchTab(tabId)
	log("Switching tab to:", tabId)
	self.currentTab = tabId

	-- CRITICAL UI FIX #4: Responsive layout values matching createUI() for mobile
	-- Layout constants (must match createUI):
	local INFO_HEIGHT = IS_TINY_PHONE and 36 or (IS_SMALL_PHONE and 44 or 52)
	local TAB_HEIGHT = IS_TINY_PHONE and 40 or (IS_SMALL_PHONE and 48 or 52)
	local CATEGORY_HEIGHT = IS_TINY_PHONE and 36 or (IS_SMALL_PHONE and 40 or 44)
	local GAP = IS_TINY_PHONE and 4 or 8
	
	local tabY = INFO_HEIGHT + GAP
	local categoryY = tabY + TAB_HEIGHT + GAP
	local scrollY_withCategory = categoryY + CATEGORY_HEIGHT + GAP
	local scrollY_noCategory = tabY + TAB_HEIGHT + GAP

	if tabId == "jobs" then
		log("Animating to Jobs tab")
		UI.tween(self.jobsTab, TweenInfo.new(0.15), { BackgroundColor3 = C.Blue, TextColor3 = C.White })
		UI.tween(self.eduTab, TweenInfo.new(0.15), { BackgroundColor3 = C.White, TextColor3 = C.Gray600 })
		-- Show category bar and adjust content (relative to contentRoot!)
		self.categoryBar.Visible = true
		self.contentScroll.Size = UDim2.new(1, 0, 1, -scrollY_withCategory)
		self.contentScroll.Position = UDim2.new(0, 0, 0, scrollY_withCategory)
		self:populateJobs()
	else
		log("Animating to Education tab")
		UI.tween(self.jobsTab, TweenInfo.new(0.15), { BackgroundColor3 = C.White, TextColor3 = C.Gray600 })
		UI.tween(self.eduTab, TweenInfo.new(0.15), { BackgroundColor3 = C.Purple, TextColor3 = C.White })
		-- Hide category bar and expand content (relative to contentRoot!)
		self.categoryBar.Visible = false
		self.contentScroll.Size = UDim2.new(1, 0, 1, -scrollY_noCategory)
		self.contentScroll.Position = UDim2.new(0, 0, 0, scrollY_noCategory)
		self:populateEducation()
	end
end

function OccupationScreen:selectCategory(categoryId)
	log("Selecting category:", categoryId)

	-- Update selected category
	local previousCategory = self.selectedCategory
	self.selectedCategory = categoryId

	-- Update chip colors
	for id, chip in pairs(self.categoryChips) do
		if id == categoryId then
			UI.tween(chip, TweenInfo.new(0.15), { BackgroundColor3 = C.Blue, TextColor3 = C.White })
		else
			UI.tween(chip, TweenInfo.new(0.15), { BackgroundColor3 = C.Gray100, TextColor3 = C.Gray600 })
		end
	end

	-- Repopulate jobs with filter
	if previousCategory ~= categoryId then
		self:populateJobs()
	end
end

function OccupationScreen:populateJobs()
	-- CRITICAL FIX: Check if we're still on jobs tab to prevent glitches
	-- when rapidly switching tabs
	if self.currentTab ~= "jobs" then
		return
	end
	
	self:updateInfoBar()

	-- Fetch career info from server (for performance, promotion progress, etc.)
	self:fetchCareerInfo()
	
	-- CRITICAL FIX #346: Fetch job eligibility (experience/skill requirements)
	self:fetchJobEligibility()

	-- Clear content
	for _, child in ipairs(self.contentScroll:GetChildren()) do
		if child:IsA("Frame") then child:Destroy() end
	end

	local age = self:getAge()
	local currentJob = self:getCurrentJob()
	local eduLevel = self:getEducationLevel()
	local inJail = self:isInJail()
	local isRetired = self:isRetired()
	local selectedCategory = self.selectedCategory or "all"

	log("Populating jobs - Age:", age, "CurrentJob:", currentJob, "EduLevel:", eduLevel, "InJail:", inJail, "Retired:", isRetired, "Category:", selectedCategory)

	-- Prison warning (if in jail)
	if inJail then
		local jailYears = self:getJailYearsLeft()
		log("Player in jail! Years left:", jailYears)

		local prisonCard = Instance.new("Frame")
		prisonCard.Size = UDim2.new(1, 0, 0, 95)
		prisonCard.BackgroundColor3 = C.Gray800
		prisonCard.LayoutOrder = -1
		prisonCard.ZIndex = 82
		prisonCard.Parent = self.contentScroll
		UI.corner(prisonCard, 18)

		local iconFrame = Instance.new("Frame")
		iconFrame.Size = UDim2.new(0, 55, 0, 55)
		iconFrame.Position = UDim2.new(0, 16, 0.5, -27.5)
		iconFrame.BackgroundColor3 = C.Gray700
		iconFrame.ZIndex = 83
		iconFrame.Parent = prisonCard
		UI.corner(iconFrame, 12)

		local iconLabel = Instance.new("TextLabel")
		iconLabel.Size = UDim2.fromScale(1, 1)
		iconLabel.BackgroundTransparency = 1
		iconLabel.Font = F.Body
		iconLabel.TextSize = 32
		iconLabel.Text = "â›“ï¸"
		iconLabel.TextColor3 = C.White
		iconLabel.ZIndex = 84
		iconLabel.Parent = iconFrame

		local headerText = Instance.new("TextLabel")
		headerText.Size = UDim2.new(1, -85, 0, 24)
		headerText.Position = UDim2.new(0, 80, 0, 14)
		headerText.BackgroundTransparency = 1
		headerText.Font = F.Title
		headerText.TextSize = 18
		headerText.TextColor3 = C.White
		headerText.TextXAlignment = Enum.TextXAlignment.Left
		headerText.Text = "You're Incarcerated"
		headerText.ZIndex = 83
		headerText.Parent = prisonCard

		local subText = Instance.new("TextLabel")
		subText.Size = UDim2.new(1, -85, 0, 40)
		subText.Position = UDim2.new(0, 80, 0, 40)
		subText.BackgroundTransparency = 1
		subText.Font = F.Body
		subText.TextSize = 13
		subText.TextColor3 = C.Gray400
		subText.TextXAlignment = Enum.TextXAlignment.Left
		subText.TextWrapped = true
		subText.Text = jailYears > 0 and string.format("%.1f years remaining. You can't work while in prison.", jailYears) or "You can't work while in prison."
		subText.ZIndex = 83
		subText.Parent = prisonCard
	end

	-- CRITICAL FIX: Show Retired card when player is retired
	if isRetired and not inJail then
		log("Showing RETIRED card for retired player")

		local retiredCard = Instance.new("Frame")
		retiredCard.Name = "RetiredCard"
		retiredCard.Size = UDim2.new(1, 0, 0, 140)
		retiredCard.BackgroundColor3 = C.PurplePale or Color3.fromRGB(237, 233, 254)
		retiredCard.LayoutOrder = 0
		retiredCard.ZIndex = 82
		retiredCard.Parent = self.contentScroll
		UI.corner(retiredCard, 18)
		UI.stroke(retiredCard, 2, 0.5, C.Purple or Color3.fromRGB(147, 51, 234))

		-- Retirement icon
		local iconFrame = Instance.new("Frame")
		iconFrame.Size = UDim2.new(0, 60, 0, 60)
		iconFrame.Position = UDim2.new(0, 16, 0, 16)
		iconFrame.BackgroundColor3 = C.Purple or Color3.fromRGB(147, 51, 234)
		iconFrame.ZIndex = 83
		iconFrame.Parent = retiredCard
		UI.corner(iconFrame, 14)

		local iconLabel = Instance.new("TextLabel")
		iconLabel.Size = UDim2.fromScale(1, 1)
		iconLabel.BackgroundTransparency = 1
		iconLabel.Font = F.Body
		iconLabel.TextSize = 32
		iconLabel.Text = "ðŸ–ï¸"
		iconLabel.TextColor3 = C.White
		iconLabel.ZIndex = 84
		iconLabel.Parent = iconFrame

		-- Retired title
		local retiredTitle = Instance.new("TextLabel")
		retiredTitle.Size = UDim2.new(1, -100, 0, 28)
		retiredTitle.Position = UDim2.new(0, 90, 0, 16)
		retiredTitle.BackgroundTransparency = 1
		retiredTitle.Font = F.Title
		retiredTitle.TextSize = textSize(22)
		retiredTitle.TextColor3 = C.Purple or Color3.fromRGB(147, 51, 234)
		retiredTitle.TextXAlignment = Enum.TextXAlignment.Left
		retiredTitle.Text = "Retired"
		retiredTitle.ZIndex = 83
		retiredTitle.Parent = retiredCard

		-- Previous career info
		local serverJob = self:getCurrentJobData()
		local previousJobName = serverJob and serverJob.title or "Unknown Career"
		local fameState = self:getFameState()

		local prevJobLabel = Instance.new("TextLabel")
		prevJobLabel.Size = UDim2.new(1, -100, 0, 20)
		prevJobLabel.Position = UDim2.new(0, 90, 0, 44)
		prevJobLabel.BackgroundTransparency = 1
		prevJobLabel.Font = F.Body
		prevJobLabel.TextSize = textSize(14)
		prevJobLabel.TextColor3 = C.Gray600
		prevJobLabel.TextXAlignment = Enum.TextXAlignment.Left
		prevJobLabel.Text = "Former " .. previousJobName
		prevJobLabel.ZIndex = 83
		prevJobLabel.Parent = retiredCard

		-- Stats row for retired content creators/influencers
		if fameState and (fameState.subscribers or 0) > 0 then
			local statsRow = Instance.new("Frame")
			statsRow.Size = UDim2.new(1, -32, 0, 36)
			statsRow.Position = UDim2.new(0, 16, 0, 90)
			statsRow.BackgroundColor3 = C.White
			statsRow.BackgroundTransparency = 0.5
			statsRow.ZIndex = 83
			statsRow.Parent = retiredCard
			UI.corner(statsRow, 10)

			local statsLayout = Instance.new("UIListLayout")
			statsLayout.FillDirection = Enum.FillDirection.Horizontal
			statsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
			statsLayout.VerticalAlignment = Enum.VerticalAlignment.Center
			statsLayout.Padding = UDim.new(0, 16)
			statsLayout.Parent = statsRow

			local function createRetiredStat(emoji, value, label)
				local statFrame = Instance.new("Frame")
				statFrame.Size = UDim2.new(0, 90, 1, 0)
				statFrame.BackgroundTransparency = 1
				statFrame.ZIndex = 84
				statFrame.Parent = statsRow

				local statText = Instance.new("TextLabel")
				statText.Size = UDim2.fromScale(1, 1)
				statText.BackgroundTransparency = 1
				statText.Font = F.Body
				statText.TextSize = textSize(12)
				statText.TextColor3 = C.Gray700
				statText.Text = emoji .. " " .. self:formatNumber(value) .. " " .. label
				statText.ZIndex = 85
				statText.Parent = statFrame
			end

			-- Show relevant stats based on career type
			local subs = fameState.subscribers or 0
			local followers = fameState.followers or 0
			local views = fameState.totalViews or 0
			local videos = fameState.totalVideos or 0

			-- CRITICAL FIX: Use the stat that's actually populated (not 0)
			local mainFollowers = (followers > 0) and followers or subs

			if mainFollowers > 0 then
				createRetiredStat("ðŸ‘¥", mainFollowers, "Followers")
			end
			if views > 0 then
				createRetiredStat("ðŸ‘€", views, "Views")
			end
			if videos > 0 then
				createRetiredStat("ðŸ“º", videos, "Videos")
			end
		end

		-- Pension info
		local pension = self:getPension()
		if pension > 0 then
			local pensionLabel = Instance.new("TextLabel")
			pensionLabel.Size = UDim2.new(1, -100, 0, 18)
			pensionLabel.Position = UDim2.new(0, 90, 0, 66)
			pensionLabel.BackgroundTransparency = 1
			pensionLabel.Font = F.Body
			pensionLabel.TextSize = textSize(13)
			pensionLabel.TextColor3 = C.Green or Color3.fromRGB(34, 197, 94)
			pensionLabel.TextXAlignment = Enum.TextXAlignment.Left
			pensionLabel.Text = "ðŸ’° Pension: " .. UI.formatMoney(pension) .. "/year"
			pensionLabel.ZIndex = 83
			pensionLabel.Parent = retiredCard
		end
	-- Current job section (if employed, not in jail, and NOT RETIRED)
	elseif currentJob and not inJail and not isRetired then
		local currentSection = Instance.new("Frame")
		currentSection.Name = "CurrentJobSection"
		currentSection.Size = UDim2.new(1, 0, 0, 0)
		currentSection.AutomaticSize = Enum.AutomaticSize.Y
		currentSection.BackgroundColor3 = C.GreenPale
		currentSection.LayoutOrder = 0
		currentSection.ZIndex = 82
		currentSection.Parent = self.contentScroll
		UI.corner(currentSection, 18)
		UI.stroke(currentSection, 2, 0.6, C.Green)
		UI.pad(currentSection, 16, 16, 16, 16)

		local currentLayout = Instance.new("UIListLayout")
		currentLayout.Padding = UDim.new(0, 10)
		currentLayout.Parent = currentSection

		-- Find current job data - first try local Jobs list by ID
		local jobData = nil
		for _, j in ipairs(Jobs) do
			if j.id == currentJob then
				jobData = j
				log("Found job in local Jobs list:", j.name)
				break
			end
		end

		-- If not found in local list, use server's job data directly
		if not jobData then
			local serverJob = self:getCurrentJobData()
			if serverJob then
				log("Using server job data - ID:", serverJob.id, "Title:", serverJob.title)
				-- Create a compatible job object from server data
				jobData = {
					id = serverJob.id or "unknown",
					name = serverJob.title or "Job",
					company = serverJob.company or "Company",
					emoji = "ðŸ’¼", -- Default emoji
					salary = serverJob.salary or 0,
					minAge = 0,
					requirement = nil
				}
			end
		end

		if jobData then
			self:createCurrentJobCard(currentSection, jobData)
		else
			log("No job data found for currentJob:", currentJob)
		end
	elseif not currentJob and not inJail and not isRetired then
		-- CRITICAL UI FIX: Show "Unemployed" status card when player has no job
		local unemployedCard = Instance.new("Frame")
		unemployedCard.Name = "UnemployedCard"
		unemployedCard.Size = UDim2.new(1, 0, 0, 95)
		unemployedCard.BackgroundColor3 = C.AmberPale or Color3.fromRGB(254, 243, 199)
		unemployedCard.LayoutOrder = 0
		unemployedCard.ZIndex = 82
		unemployedCard.Parent = self.contentScroll
		UI.corner(unemployedCard, 18)
		UI.stroke(unemployedCard, 2, 0.5, C.Amber or Color3.fromRGB(245, 158, 11))
		
		-- Icon
		local iconFrame = Instance.new("Frame")
		iconFrame.Size = UDim2.new(0, 55, 0, 55)
		iconFrame.Position = UDim2.new(0, 16, 0.5, -27.5)
		iconFrame.BackgroundColor3 = C.Amber or Color3.fromRGB(245, 158, 11)
		iconFrame.ZIndex = 83
		iconFrame.Parent = unemployedCard
		UI.corner(iconFrame, 12)
		
		local iconLabel = Instance.new("TextLabel")
		iconLabel.Size = UDim2.fromScale(1, 1)
		iconLabel.BackgroundTransparency = 1
		iconLabel.Font = F.Body
		iconLabel.TextSize = 28
		iconLabel.Text = "ðŸ”"
		iconLabel.TextColor3 = C.White
		iconLabel.ZIndex = 84
		iconLabel.Parent = iconFrame
		
		-- Header text
		local headerText = Instance.new("TextLabel")
		headerText.Size = UDim2.new(1, -85, 0, 24)
		headerText.Position = UDim2.new(0, 80, 0, 16)
		headerText.BackgroundTransparency = 1
		headerText.Font = F.Title
		headerText.TextSize = 18
		headerText.TextColor3 = C.AmberDark or Color3.fromRGB(217, 119, 6)
		headerText.TextXAlignment = Enum.TextXAlignment.Left
		headerText.Text = "Currently Unemployed"
		headerText.ZIndex = 83
		headerText.Parent = unemployedCard
		
		-- Sub text
		local subText = Instance.new("TextLabel")
		subText.Size = UDim2.new(1, -85, 0, 35)
		subText.Position = UDim2.new(0, 80, 0, 42)
		subText.BackgroundTransparency = 1
		subText.Font = F.Body
		subText.TextSize = 13
		subText.TextColor3 = C.Gray600 or Color3.fromRGB(75, 85, 99)
		subText.TextXAlignment = Enum.TextXAlignment.Left
		subText.TextWrapped = true
		subText.Text = "Browse available jobs below and apply for positions that match your qualifications!"
		subText.ZIndex = 83
		subText.Parent = unemployedCard
	end

	-- Available jobs section
	local section = Instance.new("Frame")
	section.Name = "AvailableJobsSection"
	section.Size = UDim2.new(1, 0, 0, 0)
	section.AutomaticSize = Enum.AutomaticSize.Y
	section.BackgroundColor3 = C.White
	section.LayoutOrder = 1
	section.ZIndex = 82
	section.Parent = self.contentScroll
	UI.corner(section, 18)
	UI.stroke(section, 1, 0.88, C.Gray200)
	UI.pad(section, 14, 14, 14, 16)

	local sectionLayout = Instance.new("UIListLayout")
	sectionLayout.Padding = UDim.new(0, 10)
	sectionLayout.SortOrder = Enum.SortOrder.LayoutOrder
	sectionLayout.Parent = section

	-- Section header
	local headerFrame = Instance.new("Frame")
	headerFrame.Name = "Header"
	headerFrame.Size = UDim2.new(1, 0, 0, 36)
	headerFrame.BackgroundTransparency = 1
	headerFrame.LayoutOrder = 0
	headerFrame.ZIndex = 83
	headerFrame.Parent = section

	local badge = Instance.new("Frame")
	badge.Size = UDim2.new(0, 120, 0, 32)
	badge.BackgroundColor3 = C.Blue
	badge.ZIndex = 84
	badge.Parent = headerFrame
	UI.pill(badge)

	local badgeLabel = Instance.new("TextLabel")
	badgeLabel.Size = UDim2.fromScale(1, 1)
	badgeLabel.BackgroundTransparency = 1
	badgeLabel.Font = F.Button
	badgeLabel.TextSize = 14
	badgeLabel.TextColor3 = C.White
	badgeLabel.Text = "Available Jobs"
	badgeLabel.ZIndex = 85
	badgeLabel.Parent = badge

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL FIX #732: SMART JOB FILTERING
	-- Show jobs player can ACTUALLY apply for, hide ones they can't
	-- But be smart about it - don't hide everything!
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local sortedJobs = {}
	
	-- Get state data
	local state = self.playerState or {}
	local flags = state.Flags or {}
	local gamepassOwnership = state.GamepassOwnership or {}
	local hasCelebrity = gamepassOwnership.Celebrity or gamepassOwnership.celebrity 
		or flags.celebrity_gamepass or false
	local hasMafia = gamepassOwnership.Mafia or gamepassOwnership.mafia 
		or flags.mafia_gamepass or false
	
	-- Get player stats for stat requirement checks
	local playerStats = state.Stats or {}
	local playerHealth = playerStats.Health or state.Health or 50
	local playerSmarts = playerStats.Smarts or state.Smarts or 50
	local playerLooks = playerStats.Looks or state.Looks or 50
	
	-- CRITICAL FIX #733: Enhanced education level check (includes royal education)
	local function getEffectiveEducationRank()
		local baseRank = EducationRanks[eduLevel] or 0
		
		-- Check education data for royal education
		if state.EducationData then
			local eduDataLevel = state.EducationData.Level
			if eduDataLevel then
				local eduDataRank = EducationRanks[eduDataLevel] or 0
				baseRank = math.max(baseRank, eduDataRank)
			end
			if state.EducationData.isRoyalEducation then
				baseRank = math.max(baseRank, 1) -- At least high school
			end
		end
		
		-- Check flags for education qualifications
		if flags.private_education or flags.royal_education_started or flags.palace_educated 
			or flags.prep_school_student or flags.boarding_student or flags.high_school_graduate 
			or flags.graduated_high_school or flags.has_ged or flags.has_ged_or_diploma then
			baseRank = math.max(baseRank, 1)
		end
		
		if flags.college_graduate or flags.oxford_graduate or flags.cambridge_graduate 
			or flags.ivy_league_graduate then
			baseRank = math.max(baseRank, 3)
		end
		
		-- CRITICAL: Age 18+ defaults to high school equivalent if nothing else
		if baseRank == 0 and age >= 18 then
			baseRank = 1
		end
		
		return baseRank
	end
	
	local effectiveEduRank = getEffectiveEducationRank()
	
	-- CRITICAL FIX #734: Check stat requirements
	local function meetsStatReqs(job)
		if not job.minStats then return true end
		for statName, minValue in pairs(job.minStats) do
			local playerValue = 50
			if statName == "Health" then playerValue = playerHealth
			elseif statName == "Smarts" then playerValue = playerSmarts
			elseif statName == "Looks" then playerValue = playerLooks
			end
			if playerValue < minValue then return false end
		end
		return true
	end
	
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL FIX #MOBILE-11: Track LOCKED jobs separately to show with purchase prompt
	-- Instead of hiding gamepass jobs, show them as LOCKED with a "Get Gamepass" button
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local lockedJobs = {}  -- Jobs that need gamepass
	
	for _, job in ipairs(Jobs) do
		if job.id ~= currentJob then
			-- Skip promotion-only jobs
			if isEntryLevelJob(job.id) then
				local showJob = (selectedCategory == "all") or (job.category == selectedCategory)
				local isLocked = false
				local lockReason = nil
				
				-- CHECK gamepass requirements - mark as LOCKED instead of hiding
				if showJob and job.requiresGamepass then
					local gamepassReq = job.requiresGamepass:lower()
					if gamepassReq == "celebrity" and not hasCelebrity then
						isLocked = true
						lockReason = "celebrity"
					elseif gamepassReq == "mafia" and not hasMafia then
						isLocked = true
						lockReason = "mafia"
					end
				end
				
				-- HIDE jobs player is too young for
				if showJob and job.minAge and age < job.minAge then
					showJob = false
				end
				
				-- HIDE jobs requiring education player doesn't have
				if showJob and job.requirement then
					local reqRank = EducationRanks[job.requirement] or 0
					if effectiveEduRank < reqRank then
						showJob = false
					end
				end
				
				-- HIDE jobs requiring stats player doesn't have
				if showJob and not meetsStatReqs(job) then
					showJob = false
				end
				
				-- HIDE jobs if player is in jail
				if showJob and inJail then
					showJob = false
				end
				
				-- Add to appropriate list
				if showJob then
					if isLocked then
						job._lockReason = lockReason  -- Track why it's locked
						table.insert(lockedJobs, job)
					else
						table.insert(sortedJobs, job)
					end
				end
			end
		end
	end
	
	-- Sort: primary by difficulty (ascending), secondary by salary (ascending)
	table.sort(sortedJobs, function(a, b)
		local diffA = a.difficulty or 1
		local diffB = b.difficulty or 1
		if diffA ~= diffB then
			return diffA < diffB -- Lower difficulty first (easy at top)
		end
		local salA = a.salary or 0
		local salB = b.salary or 0
		return salA < salB
	end)
	
	-- Add sorted jobs (available jobs first)
	local order = 1
	local jobsShown = 0
	for _, job in ipairs(sortedJobs) do
		self:createJobCard(section, job, order, age, eduLevel)
		order = order + 1
		jobsShown = jobsShown + 1
	end
	
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL FIX #MOBILE-12: Show LOCKED jobs with purchase prompt (like Mafia)
	-- These appear AFTER available jobs with a ðŸ”’ indicator and purchase button
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	if #lockedJobs > 0 then
		-- Sort locked jobs by difficulty too
		table.sort(lockedJobs, function(a, b)
			return (a.difficulty or 1) < (b.difficulty or 1)
		end)
		
		for _, job in ipairs(lockedJobs) do
			self:createLockedJobCard(section, job, order, job._lockReason)
			order = order + 1
			jobsShown = jobsShown + 1
		end
	end

	-- CRITICAL FIX: Premium empty state card
	if jobsShown == 0 then
		createPremiumEmptyCard(section, {
			emoji = "ðŸ“­",
			title = "No Jobs Available",
			message = "No jobs in this category match your current age, education, or stats.",
			accentColor = C.Blue,
			layoutOrder = 1,
			actionText = "ðŸ“š Try Education Tab",
			actionCallback = function()
				if self.switchTab then
					self:switchTab("education")
				end
			end
		})
	end
end

function OccupationScreen:createCurrentJobCard(parent, job)
	log("Creating current job card for:", job.name)

	-- Get career data
	local performance = self:getCareerPerformance()
	local promotionProgress = self:getPromotionProgress()
	local yearsAtJob = self:getYearsAtJob()
	local raises = self:getRaises()
	local serverJob = self:getCurrentJobData()
	
	-- CRITICAL FIX #3: Use CareerPaths to show promotion even if server doesn't specify
	local nextJobId = getNextPromotion(job.id)
	local hasPromotion = (serverJob and serverJob.promotesTo) or (nextJobId ~= nil)
	
	-- Find next job name for display
	local nextJobName = nil
	if nextJobId then
		for _, j in ipairs(Jobs) do
			if j.id == nextJobId then
				nextJobName = j.name
				break
			end
		end
	end

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX: Proper card sizing (don't over-shrink!)
	-- CRITICAL FIX #USER-5: Taller cards for entertainment careers (show stats)
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local isEntertainment = self:isEntertainmentCareer()
	local entertainmentBonus = isEntertainment and (IS_TINY_PHONE and 45 or (IS_SMALL_PHONE and 55 or 70)) or 0
	local CARD_HEIGHT = (IS_TINY_PHONE and 300 or (IS_SMALL_PHONE and 320 or 340)) + entertainmentBonus
	local ICON_SIZE = IS_TINY_PHONE and 40 or (IS_SMALL_PHONE and 48 or 60)
	local MARGIN = IS_TINY_PHONE and 8 or (IS_SMALL_PHONE and 10 or 14)
	local TITLE_SIZE = IS_TINY_PHONE and 13 or (IS_SMALL_PHONE and 15 or 17)
	local LABEL_SIZE = IS_TINY_PHONE and 10 or (IS_SMALL_PHONE and 11 or 12)
	local BADGE_HEIGHT = IS_TINY_PHONE and 18 or (IS_SMALL_PHONE and 20 or 24)
	local TEXT_START = MARGIN + ICON_SIZE + (IS_TINY_PHONE and 6 or 12)

	-- Main container card - SCALED for career progression
	local card = Instance.new("Frame")
	card.Name = "CurrentJob"
	card.Size = UDim2.new(1, 0, 0, CARD_HEIGHT)
	card.BackgroundColor3 = C.White
	card.LayoutOrder = 1
	card.ZIndex = 83
	card.Parent = parent
	UI.corner(card, IS_TINY_PHONE and 12 or 18)
	UI.stroke(card, IS_TINY_PHONE and 1 or 2, 0.3, C.Green)
	
	-- CRITICAL UI FIX: Add shadow for depth
	if UI.createShadow then
		UI.createShadow(card, IS_TINY_PHONE and 2 or 3, IS_TINY_PHONE and 8 or 12, C.Black, 0.88)
	end

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- TOP SECTION: Job Info with Icon - SCALED
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

	-- Icon (SCALED)
	local iconFrame = Instance.new("Frame")
	iconFrame.Size = UDim2.new(0, ICON_SIZE, 0, ICON_SIZE)
	iconFrame.Position = UDim2.new(0, MARGIN, 0, MARGIN)
	iconFrame.BackgroundColor3 = C.GreenPale
	iconFrame.ZIndex = 84
	iconFrame.Parent = card
	UI.corner(iconFrame, IS_TINY_PHONE and 8 or 14)

	local iconLabel = Instance.new("TextLabel")
	iconLabel.Size = UDim2.fromScale(1, 1)
	iconLabel.BackgroundTransparency = 1
	iconLabel.Font = F.Body
	iconLabel.TextSize = IS_TINY_PHONE and 20 or (IS_SMALL_PHONE and 26 or 32)
	iconLabel.Text = job.emoji
	iconLabel.ZIndex = 85
	iconLabel.Parent = iconFrame

	-- Job title (SCALED)
	local titleLabel = Instance.new("TextLabel")
	titleLabel.Size = UDim2.new(1, -TEXT_START - MARGIN, 0, IS_TINY_PHONE and 18 or 24)
	titleLabel.Position = UDim2.new(0, TEXT_START, 0, MARGIN)
	titleLabel.BackgroundTransparency = 1
	titleLabel.Font = F.Title
	titleLabel.TextSize = TITLE_SIZE
	titleLabel.TextColor3 = C.Gray900
	titleLabel.TextXAlignment = Enum.TextXAlignment.Left
	titleLabel.TextTruncate = Enum.TextTruncate.AtEnd
	titleLabel.Text = job.name
	titleLabel.ZIndex = 84
	titleLabel.Parent = card

	-- Company name (SCALED)
	local companyY = IS_TINY_PHONE and 28 or (IS_SMALL_PHONE and 32 or 36)
	local companyLabel = Instance.new("TextLabel")
	companyLabel.Size = UDim2.new(0.5, 0, 0, IS_TINY_PHONE and 14 or 18)
	companyLabel.Position = UDim2.new(0, TEXT_START, 0, companyY)
	companyLabel.BackgroundTransparency = 1
	companyLabel.Font = F.Body
	companyLabel.TextSize = LABEL_SIZE
	companyLabel.TextColor3 = C.Gray500
	companyLabel.TextXAlignment = Enum.TextXAlignment.Left
	companyLabel.Text = "at " .. (job.company or "Unknown Company")
	companyLabel.ZIndex = 84
	companyLabel.Parent = card

	-- Employed badge + Tenure (SCALED)
	local statusY = IS_TINY_PHONE and 42 or (IS_SMALL_PHONE and 48 or 54)
	local statusRow = Instance.new("Frame")
	statusRow.Size = UDim2.new(1, -TEXT_START - MARGIN, 0, BADGE_HEIGHT)
	statusRow.Position = UDim2.new(0, TEXT_START, 0, statusY)
	statusRow.BackgroundTransparency = 1
	statusRow.ZIndex = 84
	statusRow.Parent = card

	local statusLayout = Instance.new("UIListLayout")
	statusLayout.FillDirection = Enum.FillDirection.Horizontal
	statusLayout.Padding = UDim.new(0, IS_TINY_PHONE and 4 or 8)
	statusLayout.Parent = statusRow

	local currentBadge = Instance.new("Frame")
	currentBadge.Size = UDim2.new(0, IS_TINY_PHONE and 70 or 90, 0, BADGE_HEIGHT)
	currentBadge.BackgroundColor3 = C.Green
	currentBadge.LayoutOrder = 1
	currentBadge.ZIndex = 85
	currentBadge.Parent = statusRow
	UI.pill(currentBadge)

	local currentLabel = Instance.new("TextLabel")
	currentLabel.Size = UDim2.fromScale(1, 1)
	currentLabel.BackgroundTransparency = 1
	currentLabel.Font = F.Button
	currentLabel.TextSize = IS_TINY_PHONE and 9 or 11
	currentLabel.TextColor3 = C.White
	currentLabel.Text = IS_TINY_PHONE and "âœ“ Job" or "âœ“ Employed"
	currentLabel.ZIndex = 86
	currentLabel.Parent = currentBadge

	local tenureBadge = Instance.new("Frame")
	tenureBadge.Size = UDim2.new(0, IS_TINY_PHONE and 50 or 70, 0, BADGE_HEIGHT)
	tenureBadge.BackgroundColor3 = C.BluePale
	tenureBadge.LayoutOrder = 2
	tenureBadge.ZIndex = 85
	tenureBadge.Parent = statusRow
	UI.pill(tenureBadge)

	local tenureLabel = Instance.new("TextLabel")
	tenureLabel.Size = UDim2.fromScale(1, 1)
	tenureLabel.BackgroundTransparency = 1
	tenureLabel.Font = F.Medium
	tenureLabel.TextSize = IS_TINY_PHONE and 8 or 10
	tenureLabel.TextColor3 = C.BlueDark
	tenureLabel.Text = string.format("%.1f yrs", yearsAtJob)
	tenureLabel.ZIndex = 86
	tenureLabel.Parent = tenureBadge

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- SALARY ROW - SCALED
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

	local salaryRowY = IS_TINY_PHONE and 62 or (IS_SMALL_PHONE and 72 or 85)
	local salaryRowHeight = IS_TINY_PHONE and 28 or (IS_SMALL_PHONE and 32 or 36)
	local salaryRow = Instance.new("Frame")
	salaryRow.Size = UDim2.new(1, -MARGIN * 2, 0, salaryRowHeight)
	salaryRow.Position = UDim2.new(0, MARGIN, 0, salaryRowY)
	salaryRow.BackgroundColor3 = C.Gray50
	salaryRow.ZIndex = 84
	salaryRow.Parent = card
	UI.corner(salaryRow, IS_TINY_PHONE and 6 or 10)

	local salaryInnerLayout = Instance.new("UIListLayout")
	salaryInnerLayout.FillDirection = Enum.FillDirection.Horizontal
	salaryInnerLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left
	salaryInnerLayout.VerticalAlignment = Enum.VerticalAlignment.Center
	salaryInnerLayout.Padding = UDim.new(0, IS_TINY_PHONE and 6 or 10)
	salaryInnerLayout.Parent = salaryRow
	UI.pad(salaryRow, IS_TINY_PHONE and 6 or 10, IS_TINY_PHONE and 6 or 10, 0, 0)

	local salaryBadgeWidth = IS_TINY_PHONE and 80 or (IS_SMALL_PHONE and 95 or 110)
	local salaryBadgeHeight = IS_TINY_PHONE and 20 or (IS_SMALL_PHONE and 22 or 26)
	local salaryBadge = Instance.new("Frame")
	salaryBadge.Size = UDim2.new(0, salaryBadgeWidth, 0, salaryBadgeHeight)
	salaryBadge.BackgroundColor3 = C.GreenPale
	salaryBadge.LayoutOrder = 1
	salaryBadge.ZIndex = 85
	salaryBadge.Parent = salaryRow
	UI.pill(salaryBadge)

	local salaryLabel = Instance.new("TextLabel")
	salaryLabel.Size = UDim2.fromScale(1, 1)
	salaryLabel.BackgroundTransparency = 1
	salaryLabel.Font = F.Title
	salaryLabel.TextSize = IS_TINY_PHONE and 10 or 12
	salaryLabel.TextColor3 = C.GreenDark
	salaryLabel.Text = "ðŸ’µ " .. UI.formatMoney(job.salary) .. (IS_TINY_PHONE and "" or "/yr")
	salaryLabel.ZIndex = 86
	salaryLabel.Parent = salaryBadge

	if raises > 0 then
		local raisesBadge = Instance.new("Frame")
		raisesBadge.Size = UDim2.new(0, IS_TINY_PHONE and 60 or 80, 0, salaryBadgeHeight)
		raisesBadge.BackgroundColor3 = C.AmberPale
		raisesBadge.LayoutOrder = 2
		raisesBadge.ZIndex = 85
		raisesBadge.Parent = salaryRow
		UI.pill(raisesBadge)

		local raisesLabel = Instance.new("TextLabel")
		raisesLabel.Size = UDim2.fromScale(1, 1)
		raisesLabel.BackgroundTransparency = 1
		raisesLabel.Font = F.Medium
		raisesLabel.TextSize = IS_TINY_PHONE and 9 or 11
		raisesLabel.TextColor3 = C.AmberDark
		raisesLabel.Text = IS_TINY_PHONE and ("+" .. raises) or ("ðŸ“ˆ +" .. raises .. " raises")
		raisesLabel.ZIndex = 86
		raisesLabel.Parent = raisesBadge
	end

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CAREER PROGRESSION SECTION (Performance + Promotion Progress) - SCALED
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

	local progressY = IS_TINY_PHONE and 92 or (IS_SMALL_PHONE and 108 or 128)
	local progressHeight = IS_TINY_PHONE and 60 or (IS_SMALL_PHONE and 75 or 90)
	local innerPad = IS_TINY_PHONE and 6 or 12
	local progressSection = Instance.new("Frame")
	progressSection.Size = UDim2.new(1, -MARGIN * 2, 0, progressHeight)
	progressSection.Position = UDim2.new(0, MARGIN, 0, progressY)
	progressSection.BackgroundColor3 = C.Gray50
	progressSection.ZIndex = 84
	progressSection.Parent = card
	UI.corner(progressSection, IS_TINY_PHONE and 8 or 12)
	UI.pad(progressSection, innerPad, innerPad, innerPad, innerPad)

	-- Performance meter (SCALED)
	local perfLabel = Instance.new("TextLabel")
	perfLabel.Size = UDim2.new(1, 0, 0, IS_TINY_PHONE and 12 or 16)
	perfLabel.Position = UDim2.new(0, innerPad, 0, IS_TINY_PHONE and 4 or 10)
	perfLabel.BackgroundTransparency = 1
	perfLabel.Font = F.Medium
	perfLabel.TextSize = IS_TINY_PHONE and 10 or 12
	perfLabel.TextColor3 = C.Gray700
	perfLabel.TextXAlignment = Enum.TextXAlignment.Left
	perfLabel.Text = (IS_TINY_PHONE and "â­ " or "â­ Performance: ") .. math.floor(performance) .. "%"
	perfLabel.ZIndex = 85
	perfLabel.Parent = progressSection

	local barHeight = IS_TINY_PHONE and 6 or 10
	local perfBarBg = Instance.new("Frame")
	perfBarBg.Size = UDim2.new(1, -innerPad * 2, 0, barHeight)
	perfBarBg.Position = UDim2.new(0, innerPad, 0, IS_TINY_PHONE and 18 or 28)
	perfBarBg.BackgroundColor3 = C.Gray200
	perfBarBg.ZIndex = 85
	perfBarBg.Parent = progressSection
	UI.pill(perfBarBg)

	local perfBarFill = Instance.new("Frame")
	local perfColor = performance >= 80 and C.Green or (performance >= 60 and C.Blue or (performance >= 40 and C.Amber or C.Red))
	perfBarFill.Size = UDim2.new(math.clamp(performance / 100, 0, 1), 0, 1, 0)
	perfBarFill.BackgroundColor3 = perfColor
	perfBarFill.ZIndex = 86
	perfBarFill.Parent = perfBarBg
	UI.pill(perfBarFill)

	-- Promotion progress (only if promotion available) - SCALED
	-- CRITICAL FIX #4: Show next job title in promotion progress
	if hasPromotion then
		local promoLabelY = IS_TINY_PHONE and 28 or 48
		local promoBarY = IS_TINY_PHONE and 42 or 66
		local promoLabel = Instance.new("TextLabel")
		promoLabel.Size = UDim2.new(1, 0, 0, IS_TINY_PHONE and 12 or 16)
		promoLabel.Position = UDim2.new(0, innerPad, 0, promoLabelY)
		promoLabel.BackgroundTransparency = 1
		promoLabel.Font = F.Medium
		promoLabel.TextSize = IS_TINY_PHONE and 10 or 12
		promoLabel.TextColor3 = C.Gray700
		promoLabel.TextXAlignment = Enum.TextXAlignment.Left
		-- Show next job name if we have it
		local promoText = ""
		if nextJobName then
			promoText = IS_TINY_PHONE 
				and ("ðŸš€ â†’ " .. nextJobName:sub(1, 15) .. " " .. math.floor(promotionProgress) .. "%")
				or ("ðŸš€ Next: " .. nextJobName .. " - " .. math.floor(promotionProgress) .. "% (80% needed)")
		else
			promoText = (IS_TINY_PHONE and "ðŸš€ " or "ðŸš€ Promotion: ") .. math.floor(promotionProgress) .. "%" .. (IS_TINY_PHONE and "" or " (80% needed)")
		end
		promoLabel.Text = promoText
		promoLabel.ZIndex = 85
		promoLabel.Parent = progressSection

		local promoBarBg = Instance.new("Frame")
		promoBarBg.Size = UDim2.new(1, -innerPad * 2, 0, barHeight)
		promoBarBg.Position = UDim2.new(0, innerPad, 0, promoBarY)
		promoBarBg.BackgroundColor3 = C.Gray200
		promoBarBg.ZIndex = 85
		promoBarBg.Parent = progressSection
		UI.pill(promoBarBg)

		local promoBarFill = Instance.new("Frame")
		local promoColor = promotionProgress >= 80 and C.Green or C.Purple
		promoBarFill.Size = UDim2.new(math.clamp(promotionProgress / 100, 0, 1), 0, 1, 0)
		promoBarFill.BackgroundColor3 = promoColor
		promoBarFill.ZIndex = 86
		promoBarFill.Parent = promoBarBg
		UI.pill(promoBarFill)
	else
		-- No promotion available message (SCALED)
		local noPromoLabel = Instance.new("TextLabel")
		noPromoLabel.Size = UDim2.new(1, -innerPad * 2, 0, IS_TINY_PHONE and 20 or 30)
		noPromoLabel.Position = UDim2.new(0, innerPad, 0, IS_TINY_PHONE and 28 or 46)
		noPromoLabel.BackgroundTransparency = 1
		noPromoLabel.Font = F.Body
		noPromoLabel.TextSize = IS_TINY_PHONE and 10 or 12
		noPromoLabel.TextColor3 = C.Gray400
		noPromoLabel.TextXAlignment = Enum.TextXAlignment.Left
		noPromoLabel.Text = IS_TINY_PHONE and "ðŸ† Top of career!" or "ðŸ† You've reached the top of this career path!"
		noPromoLabel.ZIndex = 85
		noPromoLabel.Parent = progressSection
	end

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- ENTERTAINMENT CAREER STATS (rappers, streamers, influencers)
	-- CRITICAL FIX #USER-5: Show monthly listeners, subs, views, etc.
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local entertainmentStatsYOffset = 0
	if self:isEntertainmentCareer() then
		local fameState = self:getFameState()
		if fameState then
			entertainmentStatsYOffset = IS_TINY_PHONE and 45 or (IS_SMALL_PHONE and 55 or 70)
			
			local statsY = IS_TINY_PHONE and 155 or (IS_SMALL_PHONE and 188 or 225)
			local statsHeight = IS_TINY_PHONE and 40 or (IS_SMALL_PHONE and 50 or 65)
			local statsSection = Instance.new("Frame")
			statsSection.Size = UDim2.new(1, -MARGIN * 2, 0, statsHeight)
			statsSection.Position = UDim2.new(0, MARGIN, 0, statsY)
			statsSection.BackgroundColor3 = C.PurplePale or Color3.fromRGB(243, 232, 255)
			statsSection.ZIndex = 84
			statsSection.Parent = card
			UI.corner(statsSection, IS_TINY_PHONE and 8 or 12)
			
			local statsLayout = Instance.new("UIListLayout")
			statsLayout.FillDirection = Enum.FillDirection.Horizontal
			statsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
			statsLayout.VerticalAlignment = Enum.VerticalAlignment.Center
			statsLayout.Padding = UDim.new(0, IS_TINY_PHONE and 8 or 16)
			statsLayout.Parent = statsSection
			
			-- Determine career type and show relevant stats
			local currentJob = self:getCurrentJob() or ""
			local jobLower = currentJob:lower()
			local isRapper = jobLower:find("rapper") or jobLower:find("hip") or (fameState.style and (fameState.style == "trap" or fameState.style == "lyrical" or fameState.style == "melodic" or fameState.style == "drill"))
			local isStreamer = jobLower:find("streamer") or jobLower:find("youtuber")
			local isInfluencer = jobLower:find("influencer") or jobLower:find("creator")
			
			local statTextSize = IS_TINY_PHONE and 9 or (IS_SMALL_PHONE and 10 or 12)
			local statValueSize = IS_TINY_PHONE and 11 or (IS_SMALL_PHONE and 13 or 16)
			
			local function createStatDisplay(emoji, label, value, layoutOrder)
				local statFrame = Instance.new("Frame")
				statFrame.Size = UDim2.new(0, IS_TINY_PHONE and 70 or 100, 1, 0)
				statFrame.BackgroundTransparency = 1
				statFrame.LayoutOrder = layoutOrder
				statFrame.ZIndex = 85
				statFrame.Parent = statsSection
				
				local valueLabel = Instance.new("TextLabel")
				valueLabel.Size = UDim2.new(1, 0, 0.6, 0)
				valueLabel.BackgroundTransparency = 1
				valueLabel.Font = F.Title
				valueLabel.TextSize = statValueSize
				valueLabel.TextColor3 = C.Purple or Color3.fromRGB(147, 51, 234)
				valueLabel.Text = emoji .. " " .. self:formatNumber(value)
				valueLabel.ZIndex = 86
				valueLabel.Parent = statFrame
				
				local labelText = Instance.new("TextLabel")
				labelText.Size = UDim2.new(1, 0, 0.4, 0)
				labelText.Position = UDim2.new(0, 0, 0.6, 0)
				labelText.BackgroundTransparency = 1
				labelText.Font = F.Body
				labelText.TextSize = statTextSize
				labelText.TextColor3 = C.Gray600
				labelText.Text = label
				labelText.ZIndex = 86
				labelText.Parent = statFrame
			end
			
			-- CRITICAL FIX: In Lua, 0 is truthy! So "followers or subscribers" returns 0
			-- even if subscribers has a value. Must check > 0 explicitly!
			local function getBestFollowerCount()
				local f = fameState.followers or 0
				local s = fameState.subscribers or 0
				if f > 0 then return f end
				if s > 0 then return s end
				return 0
			end

			if isRapper then
				createStatDisplay("ðŸŽ§", "Listeners", fameState.monthlyListeners or 0, 1)
				createStatDisplay("ðŸ“€", "Tracks", fameState.totalTracks or 0, 2)
				createStatDisplay("â–¶ï¸", "Streams", fameState.totalStreams or 0, 3)
			elseif isStreamer then
				-- CRITICAL FIX: Show actual subscriber/follower count
				local subs = (fameState.subscribers or 0) > 0 and fameState.subscribers or getBestFollowerCount()
				createStatDisplay("ðŸ‘¥", "Subs", subs, 1)
				createStatDisplay("ðŸ‘€", "Views", fameState.totalViews or 0, 2)
				createStatDisplay("ðŸ“º", "Videos", fameState.totalVideos or 0, 3)
			elseif isInfluencer then
				-- CRITICAL FIX: Use subscribers if followers is 0 (creator events set subscribers)
				createStatDisplay("ðŸ‘¥", "Followers", getBestFollowerCount(), 1)
				createStatDisplay("â¤ï¸", "Likes", fameState.totalLikes or 0, 2)
				-- CRITICAL FIX: Show videos/posts - content creators post videos!
				local posts = (fameState.totalPosts or 0) > 0 and fameState.totalPosts or (fameState.totalVideos or 0)
				createStatDisplay("ðŸ“±", "Posts", posts, 3)
			else
				-- Generic fame stats - also use getBestFollowerCount
				createStatDisplay("â­", "Fame", self.playerState.Fame or 0, 1)
				createStatDisplay("ðŸ‘¥", "Followers", getBestFollowerCount(), 2)
			end
		end
	end

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- ACTION BUTTONS ROW 1: Work & Career Info - SCALED
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX: Properly scaled button sizes for tiny phones
	local actionBtnHeight = IS_TINY_PHONE and 28 or (IS_SMALL_PHONE and 32 or 42)
	local actionBtnTextSize = IS_TINY_PHONE and 10 or (IS_SMALL_PHONE and 11 or 14)
	local actionBtnCorner = IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 8 or 12)
	local actionRow1YPos = (IS_TINY_PHONE and 155 or (IS_SMALL_PHONE and 188 or 225)) + entertainmentStatsYOffset

	local actionRow1 = Instance.new("Frame")
	actionRow1.Size = UDim2.new(1, -MARGIN * 2, 0, actionBtnHeight)
	actionRow1.Position = UDim2.new(0, MARGIN, 0, actionRow1YPos)
	actionRow1.BackgroundTransparency = 1
	actionRow1.ZIndex = 84
	actionRow1.Parent = card

	local actionLayout1 = Instance.new("UIListLayout")
	actionLayout1.FillDirection = Enum.FillDirection.Horizontal
	actionLayout1.HorizontalAlignment = Enum.HorizontalAlignment.Center
	actionLayout1.Padding = UDim.new(0, IS_TINY_PHONE and 3 or (IS_SMALL_PHONE and 4 or 8))
	actionLayout1.Parent = actionRow1

	-- CRITICAL FIX: Always show text on buttons, just shorter on small phones
	local workBtnText = IS_TINY_PHONE and "ðŸ’¼ Work" or "ðŸ’¼ Work"
	local infoBtnText = IS_TINY_PHONE and "ðŸ“‹ Info" or "ðŸ“‹ Career Info"
	
	-- Do Work button (CRITICAL FIX: added shadow + loading state) - MOBILE FIX
	local workBtn = Instance.new("TextButton")
	workBtn.Size = UDim2.new(0.48, 0, 0, actionBtnHeight)
	workBtn.BackgroundColor3 = C.Green
	workBtn.Font = F.Button
	workBtn.TextSize = actionBtnTextSize
	workBtn.TextColor3 = C.White
	workBtn.Text = workBtnText
	workBtn.AutoButtonColor = false
	workBtn.LayoutOrder = 1
	workBtn.ZIndex = 85
	workBtn.Parent = actionRow1
	UI.corner(workBtn, actionBtnCorner)
	
	-- Button shadow
	local workBtnShadow = Instance.new("Frame")
	workBtnShadow.Size = UDim2.new(1, IS_SMALL_PHONE and 2 or 4, 1, IS_SMALL_PHONE and 2 or 4)
	workBtnShadow.Position = UDim2.new(0, IS_SMALL_PHONE and 1 or 2, 0, IS_SMALL_PHONE and 1 or 2)
	workBtnShadow.BackgroundColor3 = C.GreenDark
	workBtnShadow.BackgroundTransparency = 0.5
	workBtnShadow.ZIndex = 84
	workBtnShadow.Parent = workBtn
	UI.corner(workBtnShadow, actionBtnCorner)

	local workBtnLoading = false
	local workBtnHoverHeight = actionBtnHeight + 4
	workBtn.MouseEnter:Connect(function()
		if workBtnLoading then return end
		UI.tween(workBtn, TweenInfo.new(0.12, Enum.EasingStyle.Quad), { 
			Size = UDim2.new(0.48, 0, 0, workBtnHoverHeight),
			BackgroundColor3 = C.GreenDark 
		})
	end)
	workBtn.MouseLeave:Connect(function()
		if workBtnLoading then return end
		UI.tween(workBtn, TweenInfo.new(0.12), { 
			Size = UDim2.new(0.48, 0, 0, actionBtnHeight),
			BackgroundColor3 = C.Green 
		})
	end)
	workBtn.MouseButton1Click:Connect(function()
		if workBtnLoading then return end
		workBtnLoading = true
		workBtn.Text = "â³"
		UI.tween(workBtn, TweenInfo.new(0.1), { BackgroundColor3 = C.Gray400 })
		
		task.spawn(function()
			self:doWork()
			task.wait(0.5)
			if workBtn and workBtn.Parent then
				workBtnLoading = false
				workBtn.Text = workBtnText
				workBtn.BackgroundColor3 = C.Green
			end
		end)
	end)

	-- Career Info button (CRITICAL FIX: added shadow + hover effect) - MOBILE FIX
	local infoBtn = Instance.new("TextButton")
	infoBtn.Size = UDim2.new(0.48, 0, 0, actionBtnHeight)
	infoBtn.BackgroundColor3 = C.Blue
	infoBtn.Font = F.Button
	infoBtn.TextSize = actionBtnTextSize
	infoBtn.TextColor3 = C.White
	infoBtn.Text = infoBtnText
	infoBtn.AutoButtonColor = false
	infoBtn.LayoutOrder = 2
	infoBtn.ZIndex = 85
	infoBtn.Parent = actionRow1
	UI.corner(infoBtn, actionBtnCorner)
	
	-- Button shadow
	local infoBtnShadow = Instance.new("Frame")
	infoBtnShadow.Size = UDim2.new(1, IS_SMALL_PHONE and 2 or 4, 1, IS_SMALL_PHONE and 2 or 4)
	infoBtnShadow.Position = UDim2.new(0, IS_SMALL_PHONE and 1 or 2, 0, IS_SMALL_PHONE and 1 or 2)
	infoBtnShadow.BackgroundColor3 = C.BlueDark
	infoBtnShadow.BackgroundTransparency = 0.5
	infoBtnShadow.ZIndex = 84
	infoBtnShadow.Parent = infoBtn
	UI.corner(infoBtnShadow, actionBtnCorner)

	local infoBtnHoverHeight = actionBtnHeight + 4
	infoBtn.MouseEnter:Connect(function()
		UI.tween(infoBtn, TweenInfo.new(0.12, Enum.EasingStyle.Quad), { 
			Size = UDim2.new(0.48, 0, 0, infoBtnHoverHeight),
			BackgroundColor3 = C.BlueDark 
		})
	end)
	infoBtn.MouseLeave:Connect(function()
		UI.tween(infoBtn, TweenInfo.new(0.12), { 
			Size = UDim2.new(0.48, 0, 0, actionBtnHeight),
			BackgroundColor3 = C.Blue 
		})
	end)
	infoBtn.MouseButton1Click:Connect(function()
		self:showCareerInfoModal()
	end)

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- ACTION BUTTONS ROW 2: Promotion, Raise, Quit
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- MOBILE FIX: Responsive row 2 sizing
	local actionRow2Height = IS_SMALL_PHONE and 30 or 40
	local actionRow2YPos = IS_SMALL_PHONE and 212 or 270
	local row2BtnTextSize = IS_SMALL_PHONE and 9 or 12

	local actionRow2 = Instance.new("Frame")
	actionRow2.Size = UDim2.new(1, IS_SMALL_PHONE and -16 or -28, 0, actionRow2Height)
	actionRow2.Position = UDim2.new(0, IS_SMALL_PHONE and 8 or 14, 0, actionRow2YPos)
	actionRow2.BackgroundTransparency = 1
	actionRow2.ZIndex = 84
	actionRow2.Parent = card

	local actionLayout2 = Instance.new("UIListLayout")
	actionLayout2.FillDirection = Enum.FillDirection.Horizontal
	actionLayout2.HorizontalAlignment = Enum.HorizontalAlignment.Center
	actionLayout2.Padding = UDim.new(0, IS_SMALL_PHONE and 4 or 6)
	actionLayout2.Parent = actionRow2

	-- Request Promotion button (CRITICAL FIX: premium styling + loading state) - MOBILE FIX
	local canRequestPromo = hasPromotion and promotionProgress >= 80
	local promoBtn = Instance.new("TextButton")
	promoBtn.Size = UDim2.new(0.32, 0, 0, actionRow2Height)
	promoBtn.BackgroundColor3 = canRequestPromo and C.Purple or C.Gray300
	promoBtn.Font = F.Button
	promoBtn.TextSize = row2BtnTextSize
	promoBtn.TextColor3 = canRequestPromo and C.White or C.Gray500
	promoBtn.Text = IS_SMALL_PHONE and "ðŸš€" or "ðŸš€ Promote"
	promoBtn.AutoButtonColor = false
	promoBtn.LayoutOrder = 1
	promoBtn.ZIndex = 85
	promoBtn.Parent = actionRow2
	UI.corner(promoBtn, IS_SMALL_PHONE and 8 or 10)

	if canRequestPromo then
		-- Button shadow - MOBILE FIX
		local promoBtnShadow = Instance.new("Frame")
		promoBtnShadow.Size = UDim2.new(1, IS_SMALL_PHONE and 2 or 3, 1, IS_SMALL_PHONE and 2 or 3)
		promoBtnShadow.Position = UDim2.new(0, IS_SMALL_PHONE and 1 or 1.5, 0, IS_SMALL_PHONE and 1 or 1.5)
		promoBtnShadow.BackgroundColor3 = C.PurpleDark
		promoBtnShadow.BackgroundTransparency = 0.5
		promoBtnShadow.ZIndex = 84
		promoBtnShadow.Parent = promoBtn
		UI.corner(promoBtnShadow, IS_SMALL_PHONE and 8 or 10)
		
		local promoBtnLoading = false
		local promoHoverHeight = actionRow2Height + 4
		local promoBtnText = IS_SMALL_PHONE and "ðŸš€" or "ðŸš€ Promote"
		promoBtn.MouseEnter:Connect(function()
			if promoBtnLoading then return end
			UI.tween(promoBtn, TweenInfo.new(0.12, Enum.EasingStyle.Quad), { 
				Size = UDim2.new(0.32, 0, 0, promoHoverHeight),
				BackgroundColor3 = C.PurpleDark 
			})
		end)
		promoBtn.MouseLeave:Connect(function()
			if promoBtnLoading then return end
			UI.tween(promoBtn, TweenInfo.new(0.12), { 
				Size = UDim2.new(0.32, 0, 0, actionRow2Height),
				BackgroundColor3 = C.Purple 
			})
		end)
		promoBtn.MouseButton1Click:Connect(function()
			if promoBtnLoading then return end
			promoBtnLoading = true
			promoBtn.Text = "â³"
			UI.tween(promoBtn, TweenInfo.new(0.1), { BackgroundColor3 = C.Gray400 })
			
			task.spawn(function()
				self:requestPromotion()
				task.wait(0.5)
				if promoBtn and promoBtn.Parent then
					promoBtnLoading = false
					promoBtn.Text = promoBtnText
					promoBtn.BackgroundColor3 = C.Purple
				end
			end)
		end)
	end

	-- CRITICAL FIX: Always show text on buttons
	local raiseBtnText = IS_TINY_PHONE and "ðŸ’° Raise" or "ðŸ’° Raise"
	local quitBtnText = IS_TINY_PHONE and "ðŸšª Quit" or "ðŸšª Quit"
	
	-- Request Raise button (CRITICAL FIX: premium styling + loading state) - MOBILE FIX
	local canRequestRaise = performance >= 60 and raises < 5
	local raiseBtn = Instance.new("TextButton")
	raiseBtn.Size = UDim2.new(0.32, 0, 0, actionRow2Height)
	raiseBtn.BackgroundColor3 = canRequestRaise and C.Amber or C.Gray300
	raiseBtn.Font = F.Button
	raiseBtn.TextSize = row2BtnTextSize
	raiseBtn.TextColor3 = canRequestRaise and C.White or C.Gray500
	raiseBtn.Text = raiseBtnText
	raiseBtn.AutoButtonColor = false
	raiseBtn.LayoutOrder = 2
	raiseBtn.ZIndex = 85
	raiseBtn.Parent = actionRow2
	UI.corner(raiseBtn, IS_SMALL_PHONE and 8 or 10)

	if canRequestRaise then
		-- Button shadow - MOBILE FIX
		local raiseBtnShadow = Instance.new("Frame")
		raiseBtnShadow.Size = UDim2.new(1, IS_SMALL_PHONE and 2 or 3, 1, IS_SMALL_PHONE and 2 or 3)
		raiseBtnShadow.Position = UDim2.new(0, IS_SMALL_PHONE and 1 or 1.5, 0, IS_SMALL_PHONE and 1 or 1.5)
		raiseBtnShadow.BackgroundColor3 = C.AmberDark
		raiseBtnShadow.BackgroundTransparency = 0.5
		raiseBtnShadow.ZIndex = 84
		raiseBtnShadow.Parent = raiseBtn
		UI.corner(raiseBtnShadow, IS_SMALL_PHONE and 8 or 10)
		
		local raiseBtnLoading = false
		local raiseHoverHeight = actionRow2Height + 4
		raiseBtn.MouseEnter:Connect(function()
			if raiseBtnLoading then return end
			UI.tween(raiseBtn, TweenInfo.new(0.12, Enum.EasingStyle.Quad), { 
				Size = UDim2.new(0.32, 0, 0, raiseHoverHeight),
				BackgroundColor3 = C.AmberDark 
			})
		end)
		raiseBtn.MouseLeave:Connect(function()
			if raiseBtnLoading then return end
			UI.tween(raiseBtn, TweenInfo.new(0.12), { 
				Size = UDim2.new(0.32, 0, 0, actionRow2Height),
				BackgroundColor3 = C.Amber 
			})
		end)
		raiseBtn.MouseButton1Click:Connect(function()
			if raiseBtnLoading then return end
			raiseBtnLoading = true
			raiseBtn.Text = "â³"
			UI.tween(raiseBtn, TweenInfo.new(0.1), { BackgroundColor3 = C.Gray400 })
			
			task.spawn(function()
				self:requestRaise()
				task.wait(0.5)
				if raiseBtn and raiseBtn.Parent then
					raiseBtnLoading = false
					raiseBtn.Text = raiseBtnText
					raiseBtn.BackgroundColor3 = C.Amber
				end
			end)
		end)
	end

	-- Quit Job button (CRITICAL FIX: premium styling with shadow + hover) - MOBILE FIX
	local quitBtnHeight = IS_SMALL_PHONE and 30 or 40
	local quitBtn = Instance.new("TextButton")
	quitBtn.Size = UDim2.new(0.32, 0, 0, quitBtnHeight)
	quitBtn.BackgroundColor3 = C.Red
	quitBtn.Font = F.Button
	quitBtn.TextSize = IS_SMALL_PHONE and 10 or 12
	quitBtn.TextColor3 = C.White
