	headerFix.Size = UDim2.new(1, 0, 0, IS_SMALL_PHONE and 20 or 30)
	headerFix.Position = UDim2.new(0, 0, 1, IS_SMALL_PHONE and -20 or -30)
	headerFix.BackgroundColor3 = C.Blue
	headerFix.BorderSizePixel = 0
	headerFix.ZIndex = 99
	headerFix.Parent = header

	-- Close button - MOBILE FIX: Larger tap target
	local jobCloseBtnSize = IS_SMALL_PHONE and 38 or 32
