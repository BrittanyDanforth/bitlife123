	contentLayout.Parent = content

	-- Summary section - MOBILE FIX: Smaller on mobile
	local summarySectionHeight = IS_SMALL_PHONE and 44 or 55
	local summarySection = Instance.new("Frame")
	summarySection.Size = UDim2.new(1, 0, 0, summarySectionHeight)
	summarySection.BackgroundColor3 = C.Gray50
	summarySection.LayoutOrder = 1
	summarySection.ZIndex = 99
	summarySection.Parent = content
	UI.corner(summarySection, IS_SMALL_PHONE and 8 or 12)
	UI.pad(summarySection, IS_SMALL_PHONE and 8 or 12, IS_SMALL_PHONE and 8 or 12, IS_SMALL_PHONE and 6 or 10, IS_SMALL_PHONE and 6 or 10)

	local labelTextSize = IS_SMALL_PHONE and 10 or 12
	self.careerInfoExpLabel = Instance.new("TextLabel")
	self.careerInfoExpLabel.Size = UDim2.new(1, 0, 0, IS_SMALL_PHONE and 14 or 18)
	self.careerInfoExpLabel.Position = UDim2.new(0, IS_SMALL_PHONE and 8 or 12, 0, IS_SMALL_PHONE and 4 or 8)
	self.careerInfoExpLabel.BackgroundTransparency = 1
	self.careerInfoExpLabel.Font = F.Medium
	self.careerInfoExpLabel.TextSize = labelTextSize
	self.careerInfoExpLabel.TextColor3 = C.Gray700
	self.careerInfoExpLabel.TextXAlignment = Enum.TextXAlignment.Left
	self.careerInfoExpLabel.Text = "ðŸ“Š Total Experience: 0 years"
	self.careerInfoExpLabel.ZIndex = 100
	self.careerInfoExpLabel.Parent = summarySection

	self.careerInfoPerfLabel = Instance.new("TextLabel")
	self.careerInfoPerfLabel.Size = UDim2.new(1, 0, 0, IS_SMALL_PHONE and 14 or 18)
	self.careerInfoPerfLabel.Position = UDim2.new(0, IS_SMALL_PHONE and 8 or 12, 0, IS_SMALL_PHONE and 22 or 28)
	self.careerInfoPerfLabel.BackgroundTransparency = 1
	self.careerInfoPerfLabel.Font = F.Medium
	self.careerInfoPerfLabel.TextSize = labelTextSize
	self.careerInfoPerfLabel.TextColor3 = C.Gray700
	self.careerInfoPerfLabel.TextXAlignment = Enum.TextXAlignment.Left
	self.careerInfoPerfLabel.Text = "â­ Current Performance: 75%"
	self.careerInfoPerfLabel.ZIndex = 100
	self.careerInfoPerfLabel.Parent = summarySection

	-- Skills section - MOBILE FIX: Smaller headers
	local sectionHeaderSize = IS_SMALL_PHONE and 18 or 24
	local sectionHeaderTextSize = IS_SMALL_PHONE and 11 or 14
	
	local skillsHeader = Instance.new("TextLabel")
