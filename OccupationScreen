	self.jobInfoDesc.LayoutOrder = 5
	self.jobInfoDesc.ZIndex = 99
	self.jobInfoDesc.Parent = content

	log("Job info modal created successfully")
end

function OccupationScreen:hideJobInfoModal()
	if not self.jobInfoOverlay then return end
	log("Hiding job info modal")

	local tweenInfo = TweenInfo.new(0.18, Enum.EasingStyle.Quad, Enum.EasingDirection.In)

	UI.tween(self.jobInfoShell, tweenInfo, {
		Position = UDim2.new(0.5, 0, 0.5, 25),
		BackgroundTransparency = 0.5
	})
	UI.tween(self.jobInfoShadow, tweenInfo, {
		Position = UDim2.new(0.5, 3, 0.5, 28),
		BackgroundTransparency = 1
	})

	task.delay(0.18, function()
		if self.jobInfoOverlay then
			self.jobInfoOverlay.Visible = false
		end
	end)
end

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- CRITICAL FIX #MOBILE-13: LOCKED JOB CARD for gamepass-required jobs
-- Shows the job with a ðŸ”’ lock icon and "Get Gamepass" purchase button
-- This matches the Mafia screen pattern for premium content
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
function OccupationScreen:createLockedJobCard(parent, job, order, lockReason)
	local LOCKED_CARD_HEIGHT = IS_TINY_PHONE and 100 or (IS_SMALL_PHONE and 105 or 110)
	local JOB_ICON_SIZE = iconSize(48)
	
	-- Container
	local container = Instance.new("Frame")
	container.Name = "LockedJob_" .. job.id
	container.Size = UDim2.new(1, 0, 0, LOCKED_CARD_HEIGHT)
	container.BackgroundTransparency = 1
	container.LayoutOrder = order
	container.Parent = parent
	
	-- Locked card with muted colors
	local card = Instance.new("Frame")
	card.Name = "LockedCard"
	card.Size = UDim2.new(1, -px(8), 1, -px(8))
	card.Position = UDim2.new(0, px(4), 0, px(4))
	card.BackgroundColor3 = Color3.fromRGB(245, 245, 250)  -- Muted gray
	card.Parent = container
	UI.corner(card, 14)
	UI.stroke(card, 1, 0.9, C.Gray300)
	
	-- Lock overlay
	local lockOverlay = Instance.new("Frame")
	lockOverlay.Name = "LockOverlay"
	lockOverlay.Size = UDim2.new(1, 0, 1, 0)
	lockOverlay.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
	lockOverlay.BackgroundTransparency = 0.85
	lockOverlay.Parent = card
	UI.corner(lockOverlay, 14)
	
	-- Job emoji (muted)
	local emoji = Instance.new("TextLabel")
	emoji.Name = "Emoji"
	emoji.Size = UDim2.new(0, JOB_ICON_SIZE, 0, JOB_ICON_SIZE)
	emoji.Position = UDim2.new(0, px(12), 0.5, -JOB_ICON_SIZE/2)
	emoji.BackgroundTransparency = 1
	emoji.Text = job.emoji or "ðŸ’¼"
	emoji.TextSize = textSize(28)
	emoji.TextColor3 = C.Gray400
	emoji.Font = Enum.Font.GothamBold
	emoji.Parent = card
	
	-- Lock icon on top of emoji
	local lockIcon = Instance.new("TextLabel")
	lockIcon.Name = "Lock"
	lockIcon.Size = UDim2.new(0, px(24), 0, px(24))
	lockIcon.Position = UDim2.new(0, px(8), 0, px(8))
	lockIcon.BackgroundColor3 = C.Purple
	lockIcon.Text = "ðŸ”’"
	lockIcon.TextSize = textSize(14)
	lockIcon.TextColor3 = C.White
	lockIcon.Font = Enum.Font.GothamBold
	lockIcon.Parent = card
	UI.corner(lockIcon, 6)
	
	-- Job name
	local nameLabel = Instance.new("TextLabel")
	nameLabel.Name = "JobName"
	nameLabel.Size = UDim2.new(0.5, -JOB_ICON_SIZE - px(20), 0, px(22))
	nameLabel.Position = UDim2.new(0, JOB_ICON_SIZE + px(20), 0, px(14))
	nameLabel.BackgroundTransparency = 1
	nameLabel.Text = job.name or "Unknown Job"
	nameLabel.TextColor3 = C.Gray500
	nameLabel.TextSize = textSize(14)
	nameLabel.Font = Enum.Font.GothamBold
	nameLabel.TextXAlignment = Enum.TextXAlignment.Left
	nameLabel.TextTruncate = Enum.TextTruncate.AtEnd
	nameLabel.Parent = card
	
	-- Gamepass required text
	local gamepassName = (lockReason == "celebrity") and "â­ Celebrity Gamepass" or "ðŸ”« Mafia Gamepass"
	local reqLabel = Instance.new("TextLabel")
	reqLabel.Name = "GamepassReq"
	reqLabel.Size = UDim2.new(0.5, -JOB_ICON_SIZE - px(20), 0, px(18))
	reqLabel.Position = UDim2.new(0, JOB_ICON_SIZE + px(20), 0, px(38))
	reqLabel.BackgroundTransparency = 1
	reqLabel.Text = "Requires: " .. gamepassName
	reqLabel.TextColor3 = C.Purple
	reqLabel.TextSize = textSize(11)
	reqLabel.Font = Enum.Font.Gotham
	reqLabel.TextXAlignment = Enum.TextXAlignment.Left
	reqLabel.Parent = card
	
	-- Description/perks text
	local descLabel = Instance.new("TextLabel")
	descLabel.Name = "Description"
	descLabel.Size = UDim2.new(0.5, -JOB_ICON_SIZE - px(20), 0, px(16))
	descLabel.Position = UDim2.new(0, JOB_ICON_SIZE + px(20), 0, px(58))
	descLabel.BackgroundTransparency = 1
	descLabel.Text = "ðŸ’Ž Unlock exclusive career path & events!"
	descLabel.TextColor3 = C.Gray400
	descLabel.TextSize = textSize(10)
	descLabel.Font = Enum.Font.Gotham
	descLabel.TextXAlignment = Enum.TextXAlignment.Left
	descLabel.Parent = card
	
	-- GET GAMEPASS button - CRITICAL MOBILE FIX: Use touch target size for mobile
	local BUTTON_WIDTH = IS_TINY_PHONE and px(80) or (IS_SMALL_PHONE and px(90) or px(100))
	local BUTTON_HEIGHT = touchTarget(36)  -- Minimum 44px touch target on mobile
	
	local button = Instance.new("TextButton")
	button.Name = "GetGamepass"
	button.Size = UDim2.new(0, BUTTON_WIDTH, 0, BUTTON_HEIGHT)
	button.Position = UDim2.new(1, -BUTTON_WIDTH - px(10), 0.5, -BUTTON_HEIGHT/2)
	button.BackgroundColor3 = C.Purple
	button.Text = IS_TINY_PHONE and "ðŸ”“" or "ðŸ”“ UNLOCK"  -- Shorter text on tiny phones
	button.TextColor3 = C.White
	button.TextSize = textSize(IS_TINY_PHONE and 16 or 12)
	button.Font = Enum.Font.GothamBold
	button.AutoButtonColor = true
	button.Parent = card
	UI.corner(button, 8)
	
	button.MouseButton1Click:Connect(function()
		-- Trigger gamepass purchase
		local MarketplaceService = game:GetService("MarketplaceService")
		local Players = game:GetService("Players")
		local player = Players.LocalPlayer
		
		-- Use appropriate gamepass ID based on lockReason
		local gamepassId
		if lockReason == "celebrity" then
			gamepassId = 1071247916  -- Celebrity gamepass ID
		else
			gamepassId = 1071247917  -- Mafia gamepass ID
		end
		
		pcall(function()
			MarketplaceService:PromptGamePassPurchase(player, gamepassId)
		end)
	end)
	
	return container
end

function OccupationScreen:createJobCard(parent, job, order, age, eduLevel)
	local meetsAge = age >= job.minAge
	local meetsEdu = true
	local eduNeeded = nil
	local inJail = self:isInJail()

	-- Check education requirement (FIXED to match actual Education IDs)
	if job.requirement then
		local playerRank = EducationRanks[eduLevel] or EducationRanks.high_school
		local jobRank = EducationRanks[job.requirement] or 0
		meetsEdu = playerRank >= jobRank
		if not meetsEdu then
			eduNeeded = self:getEducationDisplayName(job.requirement)
		end
	end
	
	-- CRITICAL FIX #348: Check experience/skill requirements from server
	local meetsExperience = self:isJobEligible(job.id)
	local experienceNeeded = nil
	if not meetsExperience then
		experienceNeeded = self:getJobLockReason(job.id) or job.requiresExp
	end
	-- Also check client-side requiresExp for display purposes
	if job.requiresExp and meetsExperience then
		-- Server says we're eligible, trust it
	elseif job.requiresExp and not meetsExperience then
		experienceNeeded = experienceNeeded or job.requiresExp
	end

	-- Can't apply if in jail OR missing experience requirements
	local canApply = meetsAge and meetsEdu and meetsExperience and not inJail
	local isLockedByExperience = not meetsExperience and meetsAge and meetsEdu and not inJail

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL REVAMP: Premium Card with Shell Structure (like LifeClient popup)
	-- Outer shell with colored accent + inner white card + layered shadow
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	
	-- CRITICAL UI FIX: Proper job card height (don't over-shrink!)
	local JOB_CARD_HEIGHT = IS_TINY_PHONE and 95 or (IS_SMALL_PHONE and 98 or 100)
	local JOB_ICON_SIZE = iconSize(58)
	local JOB_ICON_MARGIN = IS_TINY_PHONE and 8 or (IS_SMALL_PHONE and 10 or 12)
	
	-- Container (holds shadow + shell + card)
	local container = Instance.new("Frame")
	container.Name = job.id .. "_Container"
	container.Size = UDim2.new(1, 0, 0, JOB_CARD_HEIGHT)
	container.BackgroundTransparency = 1
	container.LayoutOrder = order
	container.ZIndex = 82
	container.Parent = parent
	
	-- Shadow layer (premium depth effect) - SCALED
	local shadowOffset = IS_TINY_PHONE and 1 or 2
	local shadow = Instance.new("Frame")
	shadow.Name = "Shadow"
	shadow.Size = UDim2.new(1, shadowOffset * 2, 1, shadowOffset * 2)
	shadow.Position = UDim2.new(0, shadowOffset, 0, shadowOffset)
	shadow.BackgroundColor3 = C.Black
	shadow.BackgroundTransparency = canApply and 0.92 or 0.96
	shadow.ZIndex = 82
	shadow.Parent = container
	UI.corner(shadow, IS_TINY_PHONE and 12 or 18)
	
	-- Colored shell (accent border - blue for available, amber for exp-locked, gray for other locked)
	-- CRITICAL FIX #349: Orange/amber color for experience-locked jobs to show they're unlockable
	local shellColor = C.Gray300
	if canApply then
		shellColor = C.Blue
	elseif isLockedByExperience then
		shellColor = C.Amber -- Orange for "need experience" - shows it's unlockable!
	end
	
	local shell = Instance.new("Frame")
	shell.Name = "Shell"
	shell.Size = UDim2.new(1, 0, 1, 0)
	shell.BackgroundColor3 = shellColor
	shell.ZIndex = 83
	shell.Parent = container
	UI.corner(shell, IS_TINY_PHONE and 10 or 16)
	
	-- Inner white card - SCALED padding
	local cardPad = IS_TINY_PHONE and 2 or 3
	local card = Instance.new("Frame")
	card.Name = "Card"
	card.Size = UDim2.new(1, -cardPad * 2, 1, -cardPad * 2)
	card.Position = UDim2.new(0, cardPad, 0, cardPad)
	card.BackgroundColor3 = C.White
	card.ZIndex = 84
	card.Parent = shell
	UI.corner(card, IS_TINY_PHONE and 8 or 14)
	
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL REVAMP: Premium Hover & Press Effects
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	
	if canApply then
		-- Create invisible button overlay for press detection
		-- CRITICAL FIX: Reduced width to not cover the Apply button on the right (SCALED)
		local pressArea = Instance.new("TextButton")
		pressArea.Name = "PressArea"
		pressArea.Size = UDim2.new(1, IS_TINY_PHONE and -50 or -100, 1, 0)  -- Leave space for button
		pressArea.BackgroundTransparency = 1
		pressArea.Text = ""
		pressArea.ZIndex = 90
		pressArea.Parent = container
		
		local isHovering = false
		local isPressed = false
		
		-- CRITICAL FIX: Use scaled heights for hover/press effects
		local hoverHeight = JOB_CARD_HEIGHT + 4
		local pressHeight = JOB_CARD_HEIGHT - 4
		
		pressArea.MouseEnter:Connect(function()
			if isPressed then return end
			isHovering = true
			-- Premium hover: scale up slightly, brighten shell, lift shadow
			UI.tween(container, TweenInfo.new(0.15, Enum.EasingStyle.Quad), {
				Size = UDim2.new(1, 0, 0, hoverHeight)
			})
			UI.tween(shell, TweenInfo.new(0.12), { BackgroundColor3 = C.BlueDark })
			UI.tween(shadow, TweenInfo.new(0.12), {
				BackgroundTransparency = 0.85,
				Position = UDim2.new(0, shadowOffset + 1, 0, shadowOffset + 2)
			})
			UI.tween(card, TweenInfo.new(0.12), { BackgroundColor3 = C.BluePale:Lerp(C.White, 0.85) })
		end)
		
		pressArea.MouseLeave:Connect(function()
			isHovering = false
			isPressed = false
			-- Return to normal
			UI.tween(container, TweenInfo.new(0.15, Enum.EasingStyle.Quad), {
				Size = UDim2.new(1, 0, 0, JOB_CARD_HEIGHT)
			})
			UI.tween(shell, TweenInfo.new(0.12), { BackgroundColor3 = C.Blue })
			UI.tween(shadow, TweenInfo.new(0.12), {
				BackgroundTransparency = 0.92,
				Position = UDim2.new(0, shadowOffset, 0, shadowOffset)
			})
			UI.tween(card, TweenInfo.new(0.12), { BackgroundColor3 = C.White })
		end)
		
		pressArea.MouseButton1Down:Connect(function()
			isPressed = true
			-- Press down effect: scale down slightly, darken
			UI.tween(container, TweenInfo.new(0.08), {
				Size = UDim2.new(1, 0, 0, pressHeight)
			})
			UI.tween(shell, TweenInfo.new(0.08), { BackgroundColor3 = C.BlueDark:Lerp(C.Black, 0.1) })
		end)
		
		pressArea.MouseButton1Up:Connect(function()
			isPressed = false
			if isHovering then
				-- Return to hover state
				UI.tween(container, TweenInfo.new(0.1), {
					Size = UDim2.new(1, 0, 0, hoverHeight)
				})
				UI.tween(shell, TweenInfo.new(0.1), { BackgroundColor3 = C.BlueDark })
			end
		end)
	end

	-- CRITICAL UI FIX: Scaled text sizes for small phones
	local TITLE_SIZE = IS_TINY_PHONE and 12 or (IS_SMALL_PHONE and 13 or 15)
	local SALARY_SIZE = IS_TINY_PHONE and 10 or (IS_SMALL_PHONE and 11 or 12)
	local REQ_SIZE = IS_TINY_PHONE and 9 or (IS_SMALL_PHONE and 10 or 11)
	local EMOJI_SIZE = IS_TINY_PHONE and 20 or (IS_SMALL_PHONE and 24 or 30)
	local TEXT_START = JOB_ICON_MARGIN + JOB_ICON_SIZE + (IS_TINY_PHONE and 6 or 12)
	
	-- Icon (inside inner card) - SCALED
	local iconFrame = Instance.new("Frame")
	iconFrame.Size = UDim2.new(0, JOB_ICON_SIZE, 0, JOB_ICON_SIZE)
	iconFrame.Position = UDim2.new(0, JOB_ICON_MARGIN, 0.5, -JOB_ICON_SIZE / 2)
	iconFrame.BackgroundColor3 = canApply and C.BluePale or C.Gray100
	iconFrame.ZIndex = 85
	iconFrame.Parent = card
	UI.corner(iconFrame, IS_TINY_PHONE and 8 or 14)
	
	-- Subtle gradient on icon for depth
	if canApply then
		local iconGrad = Instance.new("UIGradient")
		iconGrad.Color = ColorSequence.new({
			ColorSequenceKeypoint.new(0, Color3.new(1, 1, 1)),
			ColorSequenceKeypoint.new(1, Color3.fromRGB(230, 240, 255)),
		})
		iconGrad.Rotation = 135
		iconGrad.Parent = iconFrame
	end

	local iconLabel = Instance.new("TextLabel")
	iconLabel.Size = UDim2.fromScale(1, 1)
	iconLabel.BackgroundTransparency = 1
	iconLabel.Font = F.Body
	iconLabel.TextSize = EMOJI_SIZE
	iconLabel.Text = job.emoji
	iconLabel.TextTransparency = canApply and 0 or 0.3
	iconLabel.ZIndex = 86
	iconLabel.Parent = iconFrame

	-- Title (CRITICAL FIX: Added truncation + scaled for small phones)
	local titleLabel = Instance.new("TextLabel")
	titleLabel.Size = UDim2.new(1, -TEXT_START - (IS_TINY_PHONE and 55 or 95), 0, IS_TINY_PHONE and 18 or 24)
	titleLabel.Position = UDim2.new(0, TEXT_START, 0, IS_TINY_PHONE and 6 or 10)
	titleLabel.BackgroundTransparency = 1
	titleLabel.Font = F.Title
	titleLabel.TextSize = TITLE_SIZE
	titleLabel.TextColor3 = canApply and C.Gray900 or C.Gray500
	titleLabel.TextXAlignment = Enum.TextXAlignment.Left
	titleLabel.TextTruncate = Enum.TextTruncate.AtEnd
	titleLabel.Text = job.name
	titleLabel.ZIndex = 85
	titleLabel.Parent = card

	-- Salary badge (SCALED for small phones)
	local salaryBadgeWidth = IS_TINY_PHONE and 70 or (IS_SMALL_PHONE and 80 or 90)
	local salaryBadgeHeight = IS_TINY_PHONE and 20 or (IS_SMALL_PHONE and 22 or 26)
	local salaryBadge = Instance.new("Frame")
	salaryBadge.Size = UDim2.new(0, salaryBadgeWidth, 0, salaryBadgeHeight)
	salaryBadge.Position = UDim2.new(0, TEXT_START, 0, IS_TINY_PHONE and 26 or 36)
	salaryBadge.BackgroundColor3 = canApply and C.GreenPale or C.Gray100
	salaryBadge.ZIndex = 85
	salaryBadge.Parent = card
	UI.pill(salaryBadge)

	local salaryLabel = Instance.new("TextLabel")
	salaryLabel.Size = UDim2.fromScale(1, 1)
	salaryLabel.BackgroundTransparency = 1
	salaryLabel.Font = F.Button
	salaryLabel.TextSize = SALARY_SIZE
	salaryLabel.TextColor3 = canApply and C.GreenDark or C.Gray500
	salaryLabel.Text = "ðŸ’µ " .. UI.formatMoney(job.salary)
	salaryLabel.ZIndex = 86
	salaryLabel.Parent = salaryBadge

	-- Requirements - CRITICAL FIX #350: Show experience requirements prominently
	local reqText = ""
	if not meetsAge then
		reqText = "Age " .. job.minAge .. "+"
	elseif not meetsEdu then
		reqText = "Need " .. eduNeeded
	elseif not meetsExperience and experienceNeeded then
		-- Show experience requirement (truncated for display)
		local shortExp = experienceNeeded
		if #shortExp > 35 then
			shortExp = shortExp:sub(1, 32) .. "..."
		end
		reqText = "ðŸ”’ " .. shortExp
	else
		reqText = "Age " .. job.minAge .. "+"
	end
	
	-- CRITICAL FIX: Use actual job.difficulty from catalog, fallback to estimation only if missing
	local difficulty = job.difficulty or 1
	
	-- Only estimate if difficulty wasn't provided in job data
	if not job.difficulty then
		-- Fallback estimation based on requirements
		if job.salary >= 100000 then difficulty = math.min(10, math.floor(job.salary / 50000)) end
		if job.requirement == "master" or job.requirement == "phd" then difficulty = math.max(difficulty, 6) end
		if job.requirement == "medical" or job.requirement == "law" then difficulty = math.max(difficulty, 7) end
	end
	
	-- Difficulty display with colored badge
	local diffColor = C.Gray400
	local diffText = "Easy"
	if difficulty >= 8 then
		diffColor = C.Red
		diffText = "Expert"
	elseif difficulty >= 6 then
		diffColor = C.Amber
		diffText = "Hard"
	elseif difficulty >= 4 then
		diffColor = C.Blue
		diffText = "Medium"
	elseif difficulty >= 2 then
		diffColor = C.Green
		diffText = "Easy"
	end

	-- Requirements row (age + difficulty badge) - SCALED
	local reqY = IS_TINY_PHONE and 48 or (IS_SMALL_PHONE and 58 or 66)
	local reqLabel = Instance.new("TextLabel")
	reqLabel.Size = UDim2.new(0.3, 0, 0, IS_TINY_PHONE and 14 or 18)
	reqLabel.Position = UDim2.new(0, TEXT_START, 0, reqY)
	reqLabel.BackgroundTransparency = 1
	reqLabel.Font = F.Body
	reqLabel.TextSize = REQ_SIZE
	-- CRITICAL FIX #351: Amber color for experience requirements to show they're unlockable
	local reqColor = C.Gray400
	if not canApply then
		if isLockedByExperience then
			reqColor = C.AmberDark -- Orange for experience lock - shows progression needed
		else
			reqColor = C.Red -- Red for age/education locks
		end
	end
	reqLabel.TextColor3 = reqColor
	reqLabel.TextXAlignment = Enum.TextXAlignment.Left
	reqLabel.Text = reqText
	reqLabel.ZIndex = 85
	reqLabel.Parent = card
	
	-- Difficulty badge (compact, colored) - SCALED
	-- CRITICAL: On tiny phones, hide difficulty to save space
	if not IS_TINY_PHONE then
		local diffBadgeWidth = IS_SMALL_PHONE and 45 or 55
		local diffBadgeHeight = IS_SMALL_PHONE and 16 or 18
		local diffBadge = Instance.new("Frame")
		diffBadge.Size = UDim2.new(0, diffBadgeWidth, 0, diffBadgeHeight)
		diffBadge.Position = UDim2.new(0, TEXT_START + (IS_SMALL_PHONE and 70 or 90), 0, reqY + (IS_SMALL_PHONE and 1 or 0))
		diffBadge.BackgroundColor3 = canApply and diffColor:Lerp(C.White, 0.7) or C.Gray100
		diffBadge.ZIndex = 85
		diffBadge.Parent = card
		UI.pill(diffBadge)
		
		local diffLabel = Instance.new("TextLabel")
		diffLabel.Size = UDim2.fromScale(1, 1)
		diffLabel.BackgroundTransparency = 1
		diffLabel.Font = F.Medium
		diffLabel.TextSize = IS_SMALL_PHONE and 8 or 9
		diffLabel.TextColor3 = canApply and diffColor:Lerp(C.Black, 0.3) or C.Gray500
		diffLabel.Text = diffText
		diffLabel.ZIndex = 86
		diffLabel.Parent = diffBadge
	end

	-- Button shadow (CRITICAL FIX: Must be SIBLING of button so emoji/text shows properly) - SCALED
	local btnShadow
	local applyBtnWidth = IS_TINY_PHONE and 44 or (IS_SMALL_PHONE and 52 or 80)
	local applyBtnHeight = IS_TINY_PHONE and 30 or (IS_SMALL_PHONE and 34 or 50)
	local btnMargin = IS_TINY_PHONE and 4 or (IS_SMALL_PHONE and 6 or 10)
	
	if canApply then
		btnShadow = Instance.new("Frame")
		btnShadow.Name = "ApplyBtnShadow"
		btnShadow.Size = UDim2.new(0, applyBtnWidth + 4, 0, applyBtnHeight + 4)
		btnShadow.AnchorPoint = Vector2.new(1, 0.5)
		btnShadow.Position = UDim2.new(1, -btnMargin + 2, 0.5, 2)
		btnShadow.BackgroundColor3 = C.BlueDark
		btnShadow.BackgroundTransparency = 0.6
		btnShadow.ZIndex = 94
		btnShadow.Parent = card
		UI.corner(btnShadow, IS_TINY_PHONE and 8 or 14)
	end

	-- Apply button (MUCH more prominent, with loading state support) - MOBILE FIX SCALED
	local applyBtn = Instance.new("TextButton")
	applyBtn.Name = "ApplyBtn"
	applyBtn.Size = UDim2.new(0, applyBtnWidth, 0, applyBtnHeight)
	applyBtn.AnchorPoint = Vector2.new(1, 0.5)
	applyBtn.Position = UDim2.new(1, -btnMargin, 0.5, 0)
	applyBtn.BackgroundColor3 = canApply and C.Blue or C.Gray300
	applyBtn.Font = F.Button
	applyBtn.TextSize = IS_TINY_PHONE and 10 or (IS_SMALL_PHONE and 11 or 15)
	applyBtn.TextColor3 = canApply and C.White or C.Gray500
	-- Button text based on why they can't apply
	local btnText = "Apply"
	local btnEmoji = "â†’"
	if not canApply then
		if inJail then
			btnText = "Jailed"
			btnEmoji = "â›“ï¸"
		elseif not meetsAge then
			btnText = "Age " .. job.minAge
			btnEmoji = "ðŸ”’"
		else
			btnText = "Locked"
			btnEmoji = "ðŸ”’"
		end
	end
	applyBtn.Text = btnEmoji .. " " .. btnText
	applyBtn.AutoButtonColor = false
	applyBtn.ZIndex = 95  -- Higher than shadow and pressArea
	applyBtn.Parent = card
	UI.corner(applyBtn, 14)

	if canApply then
		local isLoading = false
		-- MOBILE FIX: Responsive hover sizes
		local hoverWidth = applyBtnWidth + 6
		local hoverHeight = applyBtnHeight + 4
		local shadowHoverWidth = applyBtnWidth + 10
		local shadowHoverHeight = applyBtnHeight + 8
		
		applyBtn.MouseEnter:Connect(function()
			if isLoading then return end
			UI.tween(applyBtn, TweenInfo.new(0.12, Enum.EasingStyle.Quad), { 
				BackgroundColor3 = C.BlueDark,
				Size = UDim2.new(0, hoverWidth, 0, hoverHeight)
			})
			if btnShadow then
				UI.tween(btnShadow, TweenInfo.new(0.12), { Size = UDim2.new(0, shadowHoverWidth, 0, shadowHoverHeight) })
			end
		end)
		applyBtn.MouseLeave:Connect(function()
			if isLoading then return end
			UI.tween(applyBtn, TweenInfo.new(0.12), { 
				BackgroundColor3 = C.Blue,
				Size = UDim2.new(0, applyBtnWidth, 0, applyBtnHeight)
			})
			if btnShadow then
				UI.tween(btnShadow, TweenInfo.new(0.12), { Size = UDim2.new(0, applyBtnWidth + 4, 0, applyBtnHeight + 4) })
			end
		end)
		applyBtn.MouseButton1Click:Connect(function()
			if isLoading then return end
			isLoading = true
			
			-- Loading state
			applyBtn.Text = "â³..."
			UI.tween(applyBtn, TweenInfo.new(0.1), { BackgroundColor3 = C.Gray400 })
			
			-- Slight delay for visual feedback
			task.spawn(function()
				task.wait(0.1)
				self:applyForJob(job.id)
				
				-- Reset after completion (in case modal doesn't show)
				task.wait(0.5)
				if applyBtn and applyBtn.Parent then
					isLoading = false
					applyBtn.Text = btnEmoji .. " " .. btnText
					applyBtn.BackgroundColor3 = C.Blue
				end
			end)
		end)
	end
end

function OccupationScreen:populateEducation()
	-- CRITICAL FIX: Check if we're still on education tab to prevent glitches
	-- when rapidly switching tabs
	if self.currentTab ~= "education" then
		return
	end
	
	self:updateInfoBar()

	-- Clear content
	for _, child in ipairs(self.contentScroll:GetChildren()) do
		if child:IsA("Frame") then
			child:Destroy()
		end
	end

	local age = self:getAge()
	local money = self:getMoney()
	local eduLevel = self:getEducationLevel()
	local enrolled = self:isEnrolled()

	-- Pull detailed info (GPA, progress, institution, etc.)
	self:fetchEducationInfo()

	-- Auto education info (grades K-12)
	local autoSection = Instance.new("Frame")
	autoSection.Name = "AutoEducation"
	autoSection.Size = UDim2.new(1, 0, 0, 85)
	autoSection.BackgroundColor3 = C.PurplePale
	autoSection.LayoutOrder = 0
	autoSection.ZIndex = 82
	autoSection.Parent = self.contentScroll
	UI.corner(autoSection, 18)
	UI.stroke(autoSection, 1, 0.7, C.Purple)

	local autoIcon = Instance.new("TextLabel")
	autoIcon.Size = UDim2.new(0, 55, 0, 55)
	autoIcon.Position = UDim2.new(0, 16, 0.5, -27.5)
	autoIcon.BackgroundTransparency = 1
	autoIcon.Font = F.Body
	autoIcon.TextSize = 32
	autoIcon.Text = "ðŸ“–"
	autoIcon.ZIndex = 83
	autoIcon.Parent = autoSection

	local autoTitle = Instance.new("TextLabel")
	autoTitle.Size = UDim2.new(0.7, 0, 0, 24)
	autoTitle.Position = UDim2.new(0, 80, 0, 16)
	autoTitle.BackgroundTransparency = 1
	autoTitle.Font = F.Title
	autoTitle.TextSize = 15
	autoTitle.TextColor3 = C.PurpleDark
	autoTitle.TextXAlignment = Enum.TextXAlignment.Left
	autoTitle.Text = "Basic Education"
	autoTitle.ZIndex = 83
	autoTitle.Parent = autoSection

	local autoDesc = Instance.new("TextLabel")
	autoDesc.Size = UDim2.new(0.8, 0, 0, 36)
	autoDesc.Position = UDim2.new(0, 80, 0, 42)
	autoDesc.BackgroundTransparency = 1
	autoDesc.Font = F.Body
	autoDesc.TextSize = 12
	autoDesc.TextColor3 = C.Purple
	autoDesc.TextXAlignment = Enum.TextXAlignment.Left
	autoDesc.TextWrapped = true
	autoDesc.Text = "Elementary, middle, and high school are handled automatically as you age. This tab is for detailed grades and higher education."
	autoDesc.ZIndex = 83
	autoDesc.Parent = autoSection

	-- Current education status chip
	local statusSection = Instance.new("Frame")
	statusSection.Name = "StatusSection"
	statusSection.Size = UDim2.new(1, 0, 0, 70)
	statusSection.BackgroundColor3 = C.White
	statusSection.LayoutOrder = 1
	statusSection.ZIndex = 82
	statusSection.Parent = self.contentScroll
	UI.corner(statusSection, 16)
	UI.stroke(statusSection, 1, 0.88, C.Gray200)

	local statusLabel = Instance.new("TextLabel")
	statusLabel.Size = UDim2.new(0.5, 0, 0, 24)
	statusLabel.Position = UDim2.new(0, 18, 0, 14)
	statusLabel.BackgroundTransparency = 1
	statusLabel.Font = F.Title
	statusLabel.TextSize = 14
	statusLabel.TextColor3 = C.Gray700
	statusLabel.TextXAlignment = Enum.TextXAlignment.Left
	statusLabel.Text = "Current Education Level"
	statusLabel.ZIndex = 83
	statusLabel.Parent = statusSection

	local eduDisplay = self:getEducationDisplayName(eduLevel)

	local levelBadge = Instance.new("Frame")
	levelBadge.Size = UDim2.new(0, 190, 0, 28)
	levelBadge.Position = UDim2.new(0, 18, 0, 38)
	levelBadge.BackgroundColor3 = C.Purple
	levelBadge.ZIndex = 83
	levelBadge.Parent = statusSection
	UI.pill(levelBadge)

	local levelLabel = Instance.new("TextLabel")
	levelLabel.Size = UDim2.fromScale(1, 1)
	levelLabel.BackgroundTransparency = 1
	levelLabel.Font = F.Button
	levelLabel.TextSize = 12
	levelLabel.TextColor3 = C.White
	levelLabel.TextXAlignment = Enum.TextXAlignment.Center
	levelLabel.Text = eduDisplay
	levelLabel.ZIndex = 84
	levelLabel.Parent = levelBadge

	if enrolled then
		local enrolledBadge = Instance.new("Frame")
		enrolledBadge.Size = UDim2.new(0, 95, 0, 28)
		enrolledBadge.AnchorPoint = Vector2.new(1, 0.5)
		enrolledBadge.Position = UDim2.new(1, -18, 0.5, 0)
		enrolledBadge.BackgroundColor3 = C.Amber
		enrolledBadge.ZIndex = 83
		enrolledBadge.Parent = statusSection
		UI.pill(enrolledBadge)

		local enrolledLabel = Instance.new("TextLabel")
		enrolledLabel.Size = UDim2.fromScale(1, 1)
		enrolledLabel.BackgroundTransparency = 1
		enrolledLabel.Font = F.Medium
		enrolledLabel.TextSize = 11
		enrolledLabel.TextColor3 = C.White
		enrolledLabel.Text = "Currently Enrolled"
		enrolledLabel.ZIndex = 84
		enrolledLabel.Parent = enrolledBadge
	end

	-- Premium current-education card (GPA, progress, debt, transcript button)
	if eduLevel ~= "none" or enrolled or self.educationInfo then
		self:createCurrentEducationCard(self.contentScroll, eduLevel, self.educationInfo, enrolled)
	end

	-- Higher education choices
	local section = Instance.new("Frame")
	section.Name = "HigherEducation"
	section.Size = UDim2.new(1, 0, 0, 0)
	section.AutomaticSize = Enum.AutomaticSize.Y
	section.BackgroundColor3 = C.White
	section.LayoutOrder = 3
	section.ZIndex = 82
	section.Parent = self.contentScroll
	UI.corner(section, 18)
	UI.stroke(section, 1, 0.88, C.Gray200)
	UI.pad(section, 14, 14, 14, 16)

	local sectionLayout = Instance.new("UIListLayout")
	sectionLayout.Padding = UDim.new(0, 10)
	sectionLayout.SortOrder = Enum.SortOrder.LayoutOrder
	sectionLayout.Parent = section

	local headerFrame = Instance.new("Frame")
	headerFrame.Name = "Header"
	headerFrame.Size = UDim2.new(1, 0, 0, 36)
	headerFrame.BackgroundTransparency = 1
	headerFrame.LayoutOrder = 0
	headerFrame.ZIndex = 83
	headerFrame.Parent = section

	local badge = Instance.new("Frame")
	badge.Size = UDim2.new(0, 155, 0, 32)
	badge.BackgroundColor3 = C.Purple
	badge.ZIndex = 84
	badge.Parent = headerFrame
	UI.pill(badge)

	local badgeLabel = Instance.new("TextLabel")
	badgeLabel.Size = UDim2.fromScale(1, 1)
	badgeLabel.BackgroundTransparency = 1
	badgeLabel.Font = F.Button
	badgeLabel.TextSize = 14
	badgeLabel.TextColor3 = C.White
	badgeLabel.Text = "Higher Education Options"
	badgeLabel.ZIndex = 85
	badgeLabel.Parent = badge

	-- Add education options
	local order = 1
	for _, edu in ipairs(Education) do
		self:createEducationCard(section, edu, order, age, money, eduLevel, enrolled)
		order = order + 1
	end
end

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- CURRENT EDUCATION CARD (Premium AAA: GPA, progress, debt, transcript)
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function OccupationScreen:createCurrentEducationCard(parent, eduLevel, eduInfo, enrolled)
	local levelId = eduLevel or (eduInfo and eduInfo.level) or "none"
	if levelId == "none" and not enrolled then
		return
	end

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX: Proper education card sizing (don't over-shrink!)
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local EDU_CARD_HEIGHT = IS_TINY_PHONE and 170 or (IS_SMALL_PHONE and 180 or 190)
	local EDU_ICON_SIZE = IS_TINY_PHONE and 40 or (IS_SMALL_PHONE and 50 or 60)
	local EDU_MARGIN = IS_TINY_PHONE and 8 or (IS_SMALL_PHONE and 10 or 14)
	local EDU_TEXT_START = EDU_MARGIN + EDU_ICON_SIZE + (IS_TINY_PHONE and 6 or 12)
	local EDU_TITLE_SIZE = IS_TINY_PHONE and 13 or (IS_SMALL_PHONE and 15 or 17)
	local EDU_LABEL_SIZE = IS_TINY_PHONE and 10 or (IS_SMALL_PHONE and 11 or 12)
	local EDU_BADGE_HEIGHT = IS_TINY_PHONE and 18 or (IS_SMALL_PHONE and 20 or 24)

	local card = Instance.new("Frame")
	card.Name = "CurrentEducationCard"
	card.Size = UDim2.new(1, 0, 0, EDU_CARD_HEIGHT)
	card.BackgroundColor3 = C.White
	card.LayoutOrder = 2
	card.ZIndex = 82
	card.Parent = parent
	UI.corner(card, IS_TINY_PHONE and 12 or 18)
	UI.stroke(card, IS_TINY_PHONE and 1 or 2, 0.5, C.Purple)
	
	-- CRITICAL UI FIX: Add shadow for depth
	if UI.createShadow then
		UI.createShadow(card, IS_TINY_PHONE and 2 or 3, IS_TINY_PHONE and 8 or 12, C.Black, 0.88)
	end

	-- Icon (SCALED)
	local iconFrame = Instance.new("Frame")
	iconFrame.Size = UDim2.new(0, EDU_ICON_SIZE, 0, EDU_ICON_SIZE)
	iconFrame.Position = UDim2.new(0, EDU_MARGIN, 0, EDU_MARGIN)
	iconFrame.BackgroundColor3 = C.PurplePale
	iconFrame.ZIndex = 83
	iconFrame.Parent = card
	UI.corner(iconFrame, IS_TINY_PHONE and 10 or 16)

	local iconLabel = Instance.new("TextLabel")
	iconLabel.Size = UDim2.fromScale(1, 1)
	iconLabel.BackgroundTransparency = 1
	iconLabel.Font = F.Body
	iconLabel.TextSize = IS_TINY_PHONE and 20 or (IS_SMALL_PHONE and 26 or 32)
	iconLabel.Text = self:getEducationEmoji(levelId)
	iconLabel.TextColor3 = C.PurpleDark
	iconLabel.ZIndex = 84
	iconLabel.Parent = iconFrame

	-- Title + institution (SCALED)
	local titleLabel = Instance.new("TextLabel")
	titleLabel.Size = UDim2.new(1, -EDU_TEXT_START - EDU_MARGIN, 0, IS_TINY_PHONE and 18 or 24)
	titleLabel.Position = UDim2.new(0, EDU_TEXT_START, 0, EDU_MARGIN)
	titleLabel.BackgroundTransparency = 1
	titleLabel.Font = F.Title
	titleLabel.TextSize = EDU_TITLE_SIZE
	titleLabel.TextColor3 = C.Gray900
	titleLabel.TextXAlignment = Enum.TextXAlignment.Left
	titleLabel.TextTruncate = Enum.TextTruncate.AtEnd

	local levelName = self:getEducationDisplayName(levelId)
	if levelId == "high_school" then
		titleLabel.Text = IS_TINY_PHONE and "High School" or "High School Student"
	else
		local major = self:getEducationMajor()
		if major and major ~= "" and major ~= "Undeclared" then
			titleLabel.Text = levelName .. (IS_TINY_PHONE and "" or " in " .. major)
		else
			titleLabel.Text = levelName
		end
	end
	titleLabel.ZIndex = 83
	titleLabel.Parent = card

	local institution = self:getEducationInstitution() or ""
	local subtitleY = IS_TINY_PHONE and 28 or (IS_SMALL_PHONE and 32 or 36)
	local subtitleLabel = Instance.new("TextLabel")
	subtitleLabel.Size = UDim2.new(1, -EDU_TEXT_START - EDU_MARGIN, 0, IS_TINY_PHONE and 14 or 18)
	subtitleLabel.Position = UDim2.new(0, EDU_TEXT_START, 0, subtitleY)
	subtitleLabel.BackgroundTransparency = 1
	subtitleLabel.Font = F.Body
	subtitleLabel.TextSize = EDU_LABEL_SIZE
	subtitleLabel.TextColor3 = C.Gray500
	subtitleLabel.TextXAlignment = Enum.TextXAlignment.Left
	subtitleLabel.TextTruncate = Enum.TextTruncate.AtEnd
	subtitleLabel.Text = institution ~= "" and ("at " .. institution) or ""
	subtitleLabel.ZIndex = 83
	subtitleLabel.Parent = card

	-- Status chips (SCALED)
	local statusY = IS_TINY_PHONE and 44 or (IS_SMALL_PHONE and 50 or 56)
	local statusRow = Instance.new("Frame")
	statusRow.Size = UDim2.new(1, -EDU_TEXT_START - EDU_MARGIN, 0, EDU_BADGE_HEIGHT)
	statusRow.Position = UDim2.new(0, EDU_TEXT_START, 0, statusY)
	statusRow.BackgroundTransparency = 1
	statusRow.ZIndex = 83
	statusRow.Parent = card

	local statusLayout = Instance.new("UIListLayout")
	statusLayout.FillDirection = Enum.FillDirection.Horizontal
	statusLayout.Padding = UDim.new(0, IS_TINY_PHONE and 4 or 8)
	statusLayout.Parent = statusRow

	local status = self:getEducationStatus()
	local statusBadge = Instance.new("Frame")
	statusBadge.Size = UDim2.new(0, IS_TINY_PHONE and 70 or 95, 0, EDU_BADGE_HEIGHT)
	statusBadge.BackgroundColor3 = (status == "graduated") and C.Green or C.Purple
	statusBadge.LayoutOrder = 1
	statusBadge.ZIndex = 84
	statusBadge.Parent = statusRow
	UI.pill(statusBadge)

	local statusLabel2 = Instance.new("TextLabel")
	statusLabel2.Size = UDim2.fromScale(1, 1)
	statusLabel2.BackgroundTransparency = 1
	statusLabel2.Font = F.Button
	statusLabel2.TextSize = 11
	statusLabel2.TextColor3 = C.White
	if status == "graduated" then
		statusLabel2.Text = "ðŸŽ“ Graduated"
	elseif status == "probation" then
		statusLabel2.Text = "âš ï¸ On Probation"
	elseif enrolled or status == "enrolled" then
		statusLabel2.Text = "ðŸ“š Enrolled"
	else
		statusLabel2.Text = "â€”"
	end
	statusLabel2.ZIndex = 85
	statusLabel2.Parent = statusBadge

	if status == "probation" then
		local probBadge = Instance.new("Frame")
		probBadge.Size = UDim2.new(0, 110, 0, 24)
		probBadge.BackgroundColor3 = C.Amber
		probBadge.LayoutOrder = 2
		probBadge.ZIndex = 84
		probBadge.Parent = statusRow
		UI.pill(probBadge)

		local probLabel = Instance.new("TextLabel")
		probLabel.Size = UDim2.fromScale(1, 1)
		probLabel.BackgroundTransparency = 1
		probLabel.Font = F.Medium
		probLabel.TextSize = 10
		probLabel.TextColor3 = C.White
		probLabel.Text = "Study or risk failing"
		probLabel.ZIndex = 85
		probLabel.Parent = probBadge
	end

	-- GPA + progress
	local detailRow = Instance.new("Frame")
	detailRow.Size = UDim2.new(1, -28, 0, 52)
	detailRow.Position = UDim2.new(0, 14, 0, 90)
	detailRow.BackgroundColor3 = C.Gray50
	detailRow.ZIndex = 83
	detailRow.Parent = card
	UI.corner(detailRow, 12)
	UI.pad(detailRow, 10, 10, 8, 8)

	local gpa = self:getEducationGPA()
	local progress = self:getEducationProgress()

	local gpaBadge = Instance.new("Frame")
	gpaBadge.Size = UDim2.new(0, 90, 0, 26)
	gpaBadge.BackgroundColor3 = C.PurplePale
	gpaBadge.ZIndex = 84
	gpaBadge.Parent = detailRow
	UI.pill(gpaBadge)

	local gpaLabel = Instance.new("TextLabel")
	gpaLabel.Size = UDim2.fromScale(1, 1)
	gpaLabel.BackgroundTransparency = 1
	gpaLabel.Font = F.Medium
	gpaLabel.TextSize = 12
	gpaLabel.TextColor3 = C.PurpleDark
	if gpa then
		gpaLabel.Text = string.format("GPA %.2f", gpa)
	else
		gpaLabel.Text = "GPA â€”"
	end
	gpaLabel.ZIndex = 85
	gpaLabel.Parent = gpaBadge

	local progressLabel = Instance.new("TextLabel")
	progressLabel.Size = UDim2.new(1, -100, 0, 16)
	progressLabel.Position = UDim2.new(0, 100, 0, 4)
	progressLabel.BackgroundTransparency = 1
	progressLabel.Font = F.Body
	progressLabel.TextSize = 11
	progressLabel.TextColor3 = C.Gray700
	progressLabel.TextXAlignment = Enum.TextXAlignment.Left
	if progress then
		progressLabel.Text = string.format("Progress: %.0f%% complete", progress)
	else
		progressLabel.Text = "Progress: â€”"
	end
	progressLabel.ZIndex = 84
	progressLabel.Parent = detailRow

	local progressBarBg = Instance.new("Frame")
	progressBarBg.Size = UDim2.new(1, -100, 0, 8)
	progressBarBg.Position = UDim2.new(0, 100, 0, 28)
	progressBarBg.BackgroundColor3 = C.Gray200
	progressBarBg.ZIndex = 84
	progressBarBg.Parent = detailRow
	UI.pill(progressBarBg)

	local progressFill = Instance.new("Frame")
	progressFill.Size = UDim2.new(progress and math.clamp(progress / 100, 0, 1) or 0, 0, 1, 0)
	progressFill.BackgroundColor3 = C.Purple
	progressFill.ZIndex = 85
	progressFill.Parent = progressBarBg
	UI.pill(progressFill)

	-- Debt chip
	local debt = self:getEducationDebt()
	if debt > 0 then
		local debtBadge = Instance.new("Frame")
		debtBadge.Size = UDim2.new(0, 140, 0, 22)
		debtBadge.Position = UDim2.new(0, 14, 0, 146)
		debtBadge.BackgroundColor3 = C.RedPale
		debtBadge.ZIndex = 83
		debtBadge.Parent = card
		UI.pill(debtBadge)

		local debtLabel = Instance.new("TextLabel")
		debtLabel.Size = UDim2.fromScale(1, 1)
		debtLabel.BackgroundTransparency = 1
		debtLabel.Font = F.Body
		debtLabel.TextSize = 11
		debtLabel.TextColor3 = C.RedDark
		debtLabel.TextXAlignment = Enum.TextXAlignment.Center
		debtLabel.Text = "ðŸ’¸ Debt: " .. UI.formatMoney(debt)
		debtLabel.ZIndex = 84
		debtLabel.Parent = debtBadge
	end

	-- Transcript button
	local transcriptBtn = Instance.new("TextButton")
	transcriptBtn.Size = UDim2.new(0, 140, 0, 32)
	transcriptBtn.AnchorPoint = Vector2.new(1, 1)
	transcriptBtn.Position = UDim2.new(1, -14, 1, -12)
	transcriptBtn.BackgroundColor3 = C.Blue
	transcriptBtn.Font = F.Button
	transcriptBtn.TextSize = 13
	transcriptBtn.TextColor3 = C.White
	transcriptBtn.Text = "ðŸ“‘ View Transcript"
	transcriptBtn.AutoButtonColor = false
	transcriptBtn.ZIndex = 84
	transcriptBtn.Parent = card
	UI.corner(transcriptBtn, 10)

	transcriptBtn.MouseEnter:Connect(function()
		UI.tween(transcriptBtn, TweenInfo.new(0.12), { BackgroundColor3 = C.BlueDark })
	end)
	transcriptBtn.MouseLeave:Connect(function()
		UI.tween(transcriptBtn, TweenInfo.new(0.12), { BackgroundColor3 = C.Blue })
	end)
	transcriptBtn.MouseButton1Click:Connect(function()
		self:showEducationInfoModal()
	end)
end

function OccupationScreen:createEducationCard(parent, edu, order, age, money, eduLevel, enrolled)
	local meetsAge = age >= edu.minAge
	local meetsMoney = money >= edu.cost
	local meetsReq = true

	-- Check prerequisite (FIXED to use proper EducationRanks)
	if edu.requirement then
		local playerRank = EducationRanks[eduLevel] or EducationRanks.high_school
		local reqRank = EducationRanks[edu.requirement] or 0
		meetsReq = playerRank >= reqRank
	end

	-- ðŸ”¥ FIXED: Money is NO LONGER a hard gate!
	-- You can enroll with student loans. Only age, prereq, and not-already-enrolled matter.
	local canEnroll = meetsAge and meetsReq and not enrolled

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX: Proper education option card height (don't over-shrink!)
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local EDU_CARD_HEIGHT = IS_TINY_PHONE and 90 or (IS_SMALL_PHONE and 92 or 95)
	local EDU_ICON_SIZE = IS_TINY_PHONE and 40 or (IS_SMALL_PHONE and 48 or 58)
	local EDU_MARGIN = IS_TINY_PHONE and 8 or (IS_SMALL_PHONE and 10 or 12)
	local EDU_TEXT_START = EDU_MARGIN + EDU_ICON_SIZE + (IS_TINY_PHONE and 6 or 10)
	local EDU_TITLE_SIZE = IS_TINY_PHONE and 11 or (IS_SMALL_PHONE and 12 or 14)
	local EDU_BADGE_SIZE = IS_TINY_PHONE and 10 or 11
	local EDU_BADGE_HEIGHT = IS_TINY_PHONE and 18 or (IS_SMALL_PHONE and 20 or 24)

	local card = Instance.new("Frame")
	card.Name = edu.id
	card.Size = UDim2.new(1, 0, 0, EDU_CARD_HEIGHT)
	card.BackgroundColor3 = C.White
	card.LayoutOrder = order
	card.ZIndex = 83
	card.Parent = parent
	UI.corner(card, IS_TINY_PHONE and 10 or 14)
	UI.stroke(card, 1, canEnroll and 0.7 or 0.88, canEnroll and C.Purple or C.Gray200)
	
	-- CRITICAL UI FIX: Add subtle shadow
	if UI.createShadow then
		UI.createShadow(card, IS_TINY_PHONE and 1 or 2, IS_TINY_PHONE and 6 or 8, C.Black, canEnroll and 0.92 or 0.96)
	end

	-- Icon (SCALED)
	local iconFrame = Instance.new("Frame")
	iconFrame.Size = UDim2.new(0, EDU_ICON_SIZE, 0, EDU_ICON_SIZE)
	iconFrame.Position = UDim2.new(0, EDU_MARGIN, 0.5, -EDU_ICON_SIZE / 2)
	iconFrame.BackgroundColor3 = canEnroll and C.PurplePale or C.Gray100
	iconFrame.ZIndex = 84
	iconFrame.Parent = card
	UI.corner(iconFrame, IS_TINY_PHONE and 8 or 14)

	local iconLabel = Instance.new("TextLabel")
	iconLabel.Size = UDim2.fromScale(1, 1)
	iconLabel.BackgroundTransparency = 1
	iconLabel.Font = F.Body
	iconLabel.TextSize = IS_TINY_PHONE and 20 or (IS_SMALL_PHONE and 24 or 30)
	iconLabel.Text = edu.emoji
	iconLabel.TextTransparency = canEnroll and 0 or 0.3
	iconLabel.ZIndex = 85
	iconLabel.Parent = iconFrame

	-- Title (CRITICAL FIX: Added truncation + scaled)
	local titleLabel = Instance.new("TextLabel")
	titleLabel.Size = UDim2.new(1, -EDU_TEXT_START - (IS_TINY_PHONE and 50 or 90), 0, IS_TINY_PHONE and 16 or 22)
	titleLabel.Position = UDim2.new(0, EDU_TEXT_START, 0, IS_TINY_PHONE and 6 or 12)
	titleLabel.BackgroundTransparency = 1
	titleLabel.Font = F.Title
	titleLabel.TextSize = EDU_TITLE_SIZE
	titleLabel.TextColor3 = canEnroll and C.Gray900 or C.Gray500
	titleLabel.TextXAlignment = Enum.TextXAlignment.Left
	titleLabel.TextTruncate = Enum.TextTruncate.AtEnd
	titleLabel.Text = edu.name
	titleLabel.ZIndex = 84
	titleLabel.Parent = card

	-- Cost badge (visual only - shows if you can pay cash or will need loan) - SCALED
	local costBadgeWidth = IS_TINY_PHONE and 60 or (IS_SMALL_PHONE and 70 or 80)
	local badgeY = IS_TINY_PHONE and 24 or 36
	local costBadge = Instance.new("Frame")
	costBadge.Size = UDim2.new(0, costBadgeWidth, 0, EDU_BADGE_HEIGHT)
	costBadge.Position = UDim2.new(0, EDU_TEXT_START, 0, badgeY)
	costBadge.BackgroundColor3 = meetsMoney and C.GreenPale or C.AmberPale
	costBadge.ZIndex = 84
	costBadge.Parent = card
	UI.pill(costBadge)

	local costLabel = Instance.new("TextLabel")
	costLabel.Size = UDim2.fromScale(1, 1)
	costLabel.BackgroundTransparency = 1
	costLabel.Font = F.Medium
	costLabel.TextSize = EDU_BADGE_SIZE
	costLabel.TextColor3 = meetsMoney and C.GreenDark or C.AmberDark
	costLabel.Text = UI.formatMoney(edu.cost)
	costLabel.ZIndex = 85
	costLabel.Parent = costBadge

	-- Duration badge (SCALED) - Hide on tiny phones to save space
	if not IS_TINY_PHONE then
		local durBadgeWidth = IS_SMALL_PHONE and 55 or 65
		local durBadge = Instance.new("Frame")
		durBadge.Size = UDim2.new(0, durBadgeWidth, 0, EDU_BADGE_HEIGHT)
		durBadge.Position = UDim2.new(0, EDU_TEXT_START + costBadgeWidth + (IS_SMALL_PHONE and 4 or 6), 0, badgeY)
		durBadge.BackgroundColor3 = C.BluePale
		durBadge.ZIndex = 84
		durBadge.Parent = card
		UI.pill(durBadge)

		local durLabel = Instance.new("TextLabel")
		durLabel.Size = UDim2.fromScale(1, 1)
		durLabel.BackgroundTransparency = 1
		durLabel.Font = F.Medium
		durLabel.TextSize = EDU_BADGE_SIZE
		durLabel.TextColor3 = C.BlueDark
		durLabel.Text = edu.duration .. (IS_SMALL_PHONE and "y" or " years")
		durLabel.ZIndex = 85
		durLabel.Parent = durBadge
	end

	-- Requirement text (FIXED to show loan info instead of blocking) - SCALED
	local reqText = ""
	if enrolled then
		reqText = "Already enrolled"
	elseif not meetsAge then
		reqText = "Age " .. edu.minAge .. "+"
	elseif not meetsReq then
		reqText = "Need " .. self:getEducationDisplayName(edu.requirement)
	elseif not meetsMoney then
		reqText = IS_TINY_PHONE and "Needs loans" or "Will take student loans"
	else
		reqText = "Age " .. edu.minAge .. "+"
	end

	local reqY = IS_TINY_PHONE and 46 or 64
	local reqLabel = Instance.new("TextLabel")
	reqLabel.Size = UDim2.new(0.5, 0, 0, IS_TINY_PHONE and 14 or 18)
	reqLabel.Position = UDim2.new(0, EDU_TEXT_START, 0, reqY)
	reqLabel.BackgroundTransparency = 1
	reqLabel.Font = F.Body
	reqLabel.TextSize = IS_TINY_PHONE and 9 or 11
	-- Red for real locks, amber for loan warning, gray for OK
	if not canEnroll then
		reqLabel.TextColor3 = C.Red
	elseif not meetsMoney then
		reqLabel.TextColor3 = C.Amber
	else
		reqLabel.TextColor3 = C.Gray400
	end
	reqLabel.TextXAlignment = Enum.TextXAlignment.Left
	reqLabel.Text = reqText
	reqLabel.ZIndex = 84
	reqLabel.Parent = card

	-- Enroll button (FIXED to show "Loan" if paying with debt)
	local enrollBtn = Instance.new("TextButton")
	enrollBtn.Size = UDim2.new(0, 72, 0, 46)
	enrollBtn.AnchorPoint = Vector2.new(1, 0.5)
	enrollBtn.Position = UDim2.new(1, -12, 0.5, 0)
	enrollBtn.AutoButtonColor = false
	enrollBtn.Font = F.Button
	enrollBtn.TextSize = 14
	enrollBtn.ZIndex = 84
	enrollBtn.Parent = card
	UI.corner(enrollBtn, 12)

	if canEnroll then
		enrollBtn.BackgroundColor3 = C.Purple
		enrollBtn.TextColor3 = C.White
		-- Show "Loan" if player can't afford it in cash, "Enroll" if they can
		enrollBtn.Text = not meetsMoney and "Loan" or "Enroll"

		enrollBtn.MouseEnter:Connect(function()
			UI.tween(enrollBtn, TweenInfo.new(0.12), { BackgroundColor3 = C.PurpleDark })
			UI.tween(card, TweenInfo.new(0.12), { BackgroundColor3 = C.PurplePale:Lerp(C.White, 0.7) })
		end)
		enrollBtn.MouseLeave:Connect(function()
			UI.tween(enrollBtn, TweenInfo.new(0.12), { BackgroundColor3 = C.Purple })
			UI.tween(card, TweenInfo.new(0.12), { BackgroundColor3 = C.White })
		end)
		enrollBtn.MouseButton1Click:Connect(function()
			-- Server handles loan/debt automatically
			self:enrollEducation(edu.id)
		end)
	else
		enrollBtn.BackgroundColor3 = C.Gray300
		enrollBtn.TextColor3 = C.Gray500

		if enrolled then
			enrollBtn.Text = "Enrolled"
		elseif not meetsAge then
			enrollBtn.Text = "Age " .. edu.minAge
		elseif not meetsReq then
			enrollBtn.Text = "Locked"
		else
			enrollBtn.Text = "Locked"
		end
	end
end

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- EDUCATION DETAILS MODAL (GPA + transcript)
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function OccupationScreen:showEducationInfoModal()
	log("=== SHOWING EDUCATION INFO MODAL ===")

	if not self.educationInfoModal then
		self:createEducationInfoModal()
	end

	self:fetchEducationInfo()

	local gpa = self:getEducationGPA()
	local progress = self:getEducationProgress()
	local debt = self:getEducationDebt()
	local grades = self:getEducationGrades()
	local levelId = self.educationInfo and self.educationInfo.level or self:getEducationLevel()
	local levelName = self:getEducationDisplayName(levelId)
	local institution = self:getEducationInstitution() or ""
	local status = self:getEducationStatus()

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX #3: Scaled text and grade items for mobile
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local GRADE_ROW_HEIGHT = IS_TINY_PHONE and 24 or (IS_SMALL_PHONE and 28 or 32)
	local GRADE_TEXT_SIZE = IS_TINY_PHONE and 9 or (IS_SMALL_PHONE and 10 or 11)
	local NO_GRADES_SIZE = IS_TINY_PHONE and 10 or 12

	self.educationInfoTitle.Text = IS_TINY_PHONE and (levelName:sub(1, 20) .. (levelName:len() > 20 and "..." or "")) or levelName
	if institution ~= "" then
		self.educationInfoSubtitle.Text = institution
	else
		self.educationInfoSubtitle.Text = ""
	end

	if gpa then
		self.educationInfoGpaLabel.Text = string.format("ðŸŽ“ GPA: %.2f", gpa)
	else
		self.educationInfoGpaLabel.Text = "ðŸŽ“ GPA: â€”"
	end

	if progress then
		self.educationInfoProgressLabel.Text = IS_TINY_PHONE and string.format("ðŸ“ˆ %.0f%% done", progress) or string.format("ðŸ“ˆ Progress: %.0f%% complete", progress)
	else
		self.educationInfoProgressLabel.Text = "ðŸ“ˆ Progress: â€”"
	end

	if debt > 0 then
		self.educationInfoDebtLabel.Text = IS_TINY_PHONE and ("ðŸ’¸ " .. UI.formatMoney(debt)) or ("ðŸ’¸ Student Debt: " .. UI.formatMoney(debt))
	else
		self.educationInfoDebtLabel.Text = IS_TINY_PHONE and "ðŸ’¸ No Debt" or "ðŸ’¸ Student Debt: None"
	end

	self.educationInfoStatusLabel.Text = "Status: " .. status:gsub("^%l", string.upper)

	-- Transcript list - SCALED
	for _, child in ipairs(self.educationInfoGradesContainer:GetChildren()) do
		if not child:IsA("UIListLayout") and not child:IsA("UIPadding") then
			child:Destroy()
		end
	end

	if #grades == 0 then
		local noGrades = Instance.new("TextLabel")
		noGrades.Size = UDim2.new(1, 0, 0, IS_TINY_PHONE and 32 or 40)
		noGrades.BackgroundTransparency = 1
		noGrades.Font = F.Body
		noGrades.TextSize = NO_GRADES_SIZE
		noGrades.TextColor3 = C.Gray400
		noGrades.TextWrapped = true
		noGrades.Text = IS_TINY_PHONE and "No grades yet. School affects jobs & events." or "No detailed grades yet. Your school performance is still tracked and will affect jobs, scholarships, and events."
		noGrades.ZIndex = 100
		noGrades.Parent = self.educationInfoGradesContainer
	else
		for i, term in ipairs(grades) do
			local row = Instance.new("Frame")
			row.Size = UDim2.new(1, 0, 0, GRADE_ROW_HEIGHT)
			row.BackgroundColor3 = C.White
			row.ZIndex = 99
			row.Parent = self.educationInfoGradesContainer
			UI.corner(row, IS_TINY_PHONE and 6 or 10)

			local termName = Instance.new("TextLabel")
			termName.Size = UDim2.new(0.55, 0, 1, 0)
			termName.Position = UDim2.new(0, IS_TINY_PHONE and 6 or 8, 0, 0)
			termName.BackgroundTransparency = 1
			termName.Font = F.Body
			termName.TextSize = GRADE_TEXT_SIZE
			termName.TextColor3 = C.Gray800
			termName.TextXAlignment = Enum.TextXAlignment.Left
			termName.TextTruncate = Enum.TextTruncate.AtEnd
			termName.Text = term.term or term.name or ("Term " .. tostring(i))
			termName.ZIndex = 100
			termName.Parent = row

			local termGpa = Instance.new("TextLabel")
			termGpa.Size = UDim2.new(0.40, -10, 1, 0)
			termGpa.Position = UDim2.new(0.58, 0, 0, 0)
			termGpa.BackgroundTransparency = 1
			termGpa.Font = F.Medium
			termGpa.TextSize = GRADE_TEXT_SIZE
			termGpa.TextColor3 = C.PurpleDark
			termGpa.TextXAlignment = Enum.TextXAlignment.Right
			if term.gpa then
				termGpa.Text = string.format("%.2f", term.gpa)
			elseif term.grade then
				termGpa.Text = tostring(term.grade)
			else
				termGpa.Text = "â€”"
			end
			termGpa.ZIndex = 100
			termGpa.Parent = row
		end
	end

	-- Show modal with animation
	self.educationInfoOverlay.Visible = true

	self.educationInfoShell.Position = UDim2.new(0.5, 0, 0.5, 40)
	self.educationInfoShadow.Position = UDim2.new(0.5, 3, 0.5, 43)
	self.educationInfoShell.BackgroundTransparency = 0.5
	self.educationInfoShadow.BackgroundTransparency = 1

	local tweenInfo = TweenInfo.new(0.28, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
	UI.tween(self.educationInfoShell, tweenInfo, {
		Position = UDim2.fromScale(0.5, 0.5),
		BackgroundTransparency = 0
	})
	UI.tween(self.educationInfoShadow, tweenInfo, {
		Position = UDim2.new(0.5, 3, 0.5, 3),
		BackgroundTransparency = 0.75
	})
end

function OccupationScreen:createEducationInfoModal()
	log("Creating education info modal...")

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX #2: Complete mobile overhaul for Education Info Modal
	-- Matching AssetsScreen/RelationshipsScreen - simple fixed sizes!
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	
	-- CRITICAL FIX: Simple fixed sizes like other screens - NOT math.min calculations!
	local MODAL_WIDTH = IS_TINY_PHONE and 320 or 400
	local MODAL_HEIGHT = IS_TINY_PHONE and 380 or 460
	local HEADER_HEIGHT = IS_TINY_PHONE and 44 or 64
	local CARD_MARGIN = IS_TINY_PHONE and 4 or 8
	local CORNER_RAD = IS_TINY_PHONE and 16 or 24
	local PADDING = IS_TINY_PHONE and 8 or 12
	local TITLE_SIZE = IS_TINY_PHONE and 14 or 18
