	choiceContainer.Name = "ChoiceContainer"
	choiceContainer.Size = UDim2.new(1, -32, 0, 300)
	choiceContainer.Position = UDim2.new(0, 16, 0, 220)
	choiceContainer.BackgroundTransparency = 1
	choiceContainer.ZIndex = 104
	choiceContainer.Parent = card
	
	local choiceLayout = Instance.new("UIListLayout")
	choiceLayout.Padding = UDim.new(0, 10)
	choiceLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
	choiceLayout.Parent = choiceContainer
	
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- PREMIUM CHOICE BUTTONS (with shadows and hover effects)
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	
	local function createChoiceButton(text, color, colorDark, layoutOrder, emoji, description)
		local btnContainer = Instance.new("Frame")
		btnContainer.Name = "BtnContainer" .. layoutOrder
		btnContainer.Size = UDim2.new(1, 0, 0, 58)
		btnContainer.BackgroundTransparency = 1
		btnContainer.LayoutOrder = layoutOrder
		btnContainer.ZIndex = 105
		btnContainer.Parent = choiceContainer
		
		-- Button shadow
		local btnShadow = Instance.new("Frame")
		btnShadow.Size = UDim2.new(1, 4, 1, 4)
		btnShadow.Position = UDim2.new(0, 2, 0, 2)
		btnShadow.BackgroundColor3 = colorDark
		btnShadow.BackgroundTransparency = 0.5
		btnShadow.ZIndex = 105
		btnShadow.Parent = btnContainer
		UI.corner(btnShadow, 14)
		
		local btn = Instance.new("TextButton")
		btn.Name = "Choice" .. layoutOrder
		btn.Size = UDim2.new(1, 0, 1, 0)
		btn.BackgroundColor3 = color
		btn.Font = F.Button
		btn.TextSize = 15
		btn.TextColor3 = C.White
		btn.Text = emoji .. " " .. text
		btn.AutoButtonColor = false
		btn.ZIndex = 106
		btn.Parent = btnContainer
		UI.corner(btn, 12)
		
		-- Description label under button text
		local descLabel = Instance.new("TextLabel")
		descLabel.Size = UDim2.new(1, 0, 0, 14)
		descLabel.Position = UDim2.new(0, 0, 0.65, 0)
		descLabel.BackgroundTransparency = 1
		descLabel.Font = F.Body
		descLabel.TextSize = 10
		descLabel.TextColor3 = C.White:Lerp(color, 0.3)
		descLabel.Text = description
		descLabel.ZIndex = 107
		descLabel.Parent = btn
		
		-- Adjust main button text position
		btn.TextYAlignment = Enum.TextYAlignment.Top
		local textPad = Instance.new("UIPadding")
		textPad.PaddingTop = UDim.new(0, 10)
		textPad.Parent = btn
		
		-- Hover effects
		local isLoading = false
		btn.MouseEnter:Connect(function()
			if isLoading then return end
			UI.tween(btnContainer, TweenInfo.new(0.12, Enum.EasingStyle.Quad), {
				Size = UDim2.new(1, 0, 0, 62)
			})
			UI.tween(btn, TweenInfo.new(0.1), { BackgroundColor3 = colorDark })
		end)
		btn.MouseLeave:Connect(function()
			if isLoading then return end
			UI.tween(btnContainer, TweenInfo.new(0.12), {
				Size = UDim2.new(1, 0, 0, 58)
			})
			UI.tween(btn, TweenInfo.new(0.1), { BackgroundColor3 = color })
		end)
		
		return btn, function()
			isLoading = true
			btn.Text = "â³..."
			UI.tween(btn, TweenInfo.new(0.1), { BackgroundColor3 = C.Gray400 })
		end
	end
	
	-- Choice 1: Resign professionally
	local choice1, loading1 = createChoiceButton(
		"Resign Professionally",
		C.Green,
		C.GreenDark,
		1,
		"âœ…",
		"+reputation, good reference"
	)
	-- Helper to hide the modal (use custom hide or fallback)
	local function hideQuitModal(callback)
		if self.quitConfirmModal.hide then
			self.quitConfirmModal.hide(callback)
		elseif UI.hideModal then
			UI.hideModal(self.quitConfirmModal, callback)
		else
			closeArea.Visible = false
			if callback then callback() end
		end
	end
	
	choice1.MouseButton1Click:Connect(function()
		loading1()
		task.wait(0.1)
		hideQuitModal(function()
			self:executeQuit("professional")
		end)
	end)
	
	-- Choice 2: Quit dramatically
	local choice2, loading2 = createChoiceButton(
		"Quit Dramatically",
		C.Amber,
		C.AmberDark,
		2,
		"ðŸ”¥",
		"viral moment, -reputation"
	)
	choice2.MouseButton1Click:Connect(function()
		loading2()
		task.wait(0.1)
		hideQuitModal(function()
			self:executeQuit("dramatic")
		end)
	end)
	
	-- Choice 3: Ghost them
	local choice3, loading3 = createChoiceButton(
		"Ghost Them",
		C.Purple,
		C.PurpleDark or C.Purple:Lerp(C.Black, 0.2),
		3,
		"ðŸ‘»",
		"no notice, bad reference"
	)
	choice3.MouseButton1Click:Connect(function()
		loading3()
		task.wait(0.1)
		hideQuitModal(function()
			self:executeQuit("ghost")
		end)
	end)
	
	-- Choice 4: Cancel / Stay
	local choice4, _ = createChoiceButton(
		"Nevermind, Stay",
		C.Gray500,
		C.Gray600,
		4,
		"ðŸ¤”",
		"keep your job"
	)
	choice4.MouseButton1Click:Connect(function()
		hideQuitModal()
	end)
	
	-- Close area click handler
	closeArea.MouseButton1Click:Connect(function()
		hideQuitModal()
	end)
	
	-- Custom show/hide for premium animation
	self.quitConfirmModal.show = function()
		closeArea.Visible = true
		closeArea.BackgroundTransparency = 1
		container.Position = UDim2.new(0.5, 0, 0.5, 50)
		container.Size = UDim2.new(0, 340, 0, 510)
		
		UI.tween(closeArea, TweenInfo.new(0.2), { BackgroundTransparency = 0.3 })
		UI.tween(container, TweenInfo.new(0.25, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
			Position = UDim2.fromScale(0.5, 0.5),
			Size = UDim2.new(0, 360, 0, 540)
		})
	end
	
	self.quitConfirmModal.hide = function(callback)
		UI.tween(closeArea, TweenInfo.new(0.15), { BackgroundTransparency = 1 })
		UI.tween(container, TweenInfo.new(0.15, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
			Position = UDim2.new(0.5, 0, 0.5, 30),
			Size = UDim2.new(0, 340, 0, 510)
		})
		task.delay(0.15, function()
			closeArea.Visible = false
			if callback then callback() end
		end)
	end
end

function OccupationScreen:executeQuit(quitStyle)
	log("=== EXECUTING QUIT ===")
	log("Quit style:", quitStyle)
	
	local result = QuitJob:InvokeServer(quitStyle)
	log("Server response:", result and "received" or "nil")
	
	if result and result.success then
		-- CRITICAL FIX #1: Immediately and thoroughly clear ALL local job state
		if self.playerState then
			self.playerState.CurrentJob = nil
			self.playerState.Job = nil
			-- Clear career-related state too
			if self.playerState.Career then
				self.playerState.Career.current = nil
			end
		end
		
		-- CRITICAL FIX #2: Clear ALL cached career info
		self.careerInfo = nil
		self.cachedJobData = nil
		self.educationInfo = nil
		
		local emoji = "ðŸ‘‹"
		local title = "You quit!"
		local message = result.message
		
		if quitStyle == "dramatic" then
			emoji = "ðŸ”¥"
			title = "Epic Exit!"
		elseif quitStyle == "ghost" then
			emoji = "ðŸ‘»"
			title = "Gone!"
		end
		
		self:showResult(true, message, emoji)
		
		-- CRITICAL FIX #3: Force IMMEDIATE UI refresh before delay
		-- Clear content scroll to prevent stale job card from showing
		for _, child in ipairs(self.contentScroll:GetChildren()) do
			if child:IsA("Frame") then child:Destroy() end
		end
		
		-- CRITICAL FIX #4: Complete UI refresh with multiple fallbacks
		task.delay(0.15, function()
			if self.isVisible then
				-- Clear ALL cached career state again (in case of race conditions)
				self.careerInfo = nil
				self.cachedJobData = nil
				
				-- Force refresh career info from server (expect nil/empty response)
				if GetCareerInfo then
					local newCareerInfo = GetCareerInfo:InvokeServer()
					if newCareerInfo then
						self.careerInfo = newCareerInfo
					end
				end
				
				-- CRITICAL FIX #5: Explicitly switch to jobs tab first to rebuild UI
				if self.currentTab == "jobs" or self.currentTab == "career" then
					-- Force rebuild by clearing and re-populating
					for _, child in ipairs(self.contentScroll:GetChildren()) do
						if child:IsA("Frame") then child:Destroy() end
					end
					self:populateJobs()
				else
					self:switchTab("jobs")
				end
				
				-- CRITICAL FIX #6: Update any header/info bars
				if self.updateInfoBar then
					self:updateInfoBar()
				end
				
				log("âœ… UI fully refreshed after quit - job state cleared")
			end
		end)
	else
		self:showResult(false, result and result.message or "Server error.", "âŒ")
	end
end

function OccupationScreen:doWork()
	log("=== DOING WORK ===")

	if not DoWork then
		logWarn("DoWork remote not available!")
		self:showResult(false, "Server not available.", "X")
		return
	end

	log("Invoking server DoWork...")
	local result = DoWork:InvokeServer()
	log("Server response:", result and "received" or "nil")

	if result then
		log("Success:", result.success, "Message:", result.message)
		if result.success then
			local emoji = "ðŸ’¼"
			if result.event then
				emoji = result.event:find("positive") and "ðŸŽ‰" or (result.event:find("negative") and "ðŸ˜¬" or "ðŸ“‹")
			end
			self:showResult(true, result.message, emoji)
		else
			-- Could be fired!
			self:showResult(false, result.message, result.fired and "ðŸ˜±" or "âŒ")
		end
	else
		logWarn("Server returned nil!")
		self:showResult(false, "Server error.", "X")
	end
end

function OccupationScreen:requestPromotion()
	log("=== REQUESTING PROMOTION ===")

	if not RequestPromotion then
		logWarn("RequestPromotion remote not available!")
		self:showResult(false, "Server not available.", "X")
		return
	end

	log("Invoking server RequestPromotion...")
	local result = RequestPromotion:InvokeServer()
	log("Server response:", result and "received" or "nil")

	if result then
		log("Success:", result.success, "Message:", result.message)
		if result.success then
			self:showResult(true, result.message, "ðŸŽ‰")
		else
			self:showResult(false, result.message, "ðŸ“‹")
		end
	else
		logWarn("Server returned nil!")
		self:showResult(false, "Server error.", "X")
	end
end

