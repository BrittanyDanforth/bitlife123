	self.careerInfoCard = Instance.new("Frame")
	self.careerInfoCard.Name = "Card"
	self.careerInfoCard.Size = UDim2.new(1, -cardMargin, 1, -cardMargin)
	self.careerInfoCard.AnchorPoint = Vector2.new(0.5, 0.5)
	self.careerInfoCard.Position = UDim2.fromScale(0.5, 0.5)
	self.careerInfoCard.BackgroundColor3 = C.White
	self.careerInfoCard.ZIndex = 98
	self.careerInfoCard.Parent = shell
	UI.corner(self.careerInfoCard, IS_SMALL_PHONE and 14 or 20)

	-- Header (colored accent banner) - MOBILE FIX: Smaller header
	local headerHeight = IS_SMALL_PHONE and 44 or 60
	local header = Instance.new("Frame")
	header.Name = "Header"
	header.Size = UDim2.new(1, 0, 0, headerHeight)
	header.BackgroundColor3 = C.Blue
	header.ZIndex = 99
	header.Parent = self.careerInfoCard
	UI.corner(header, IS_SMALL_PHONE and 14 or 20)

	local headerFix = Instance.new("Frame")
	headerFix.Name = "HeaderFix"
	headerFix.Size = UDim2.new(1, 0, 0, IS_SMALL_PHONE and 18 or 25)
	headerFix.Position = UDim2.new(0, 0, 1, IS_SMALL_PHONE and -18 or -25)
	headerFix.BackgroundColor3 = C.Blue
	headerFix.BorderSizePixel = 0
	headerFix.ZIndex = 99
	headerFix.Parent = header

	local headerTitle = Instance.new("TextLabel")
	headerTitle.Size = UDim2.new(1, -50, 1, 0)
	headerTitle.Position = UDim2.new(0, IS_SMALL_PHONE and 8 or 0, 0, 0)
	headerTitle.BackgroundTransparency = 1
	headerTitle.Font = F.Title
	headerTitle.TextSize = IS_SMALL_PHONE and 14 or 17
	headerTitle.TextColor3 = C.White
	headerTitle.Text = "ðŸ“‹ Career Info"
	headerTitle.ZIndex = 100
	headerTitle.Parent = header

	-- MOBILE FIX: Larger, more visible close button
	local closeBtnSize = IS_SMALL_PHONE and 36 or 30
	local closeBtn = Instance.new("TextButton")
	closeBtn.Name = "CloseButton"
	closeBtn.Size = UDim2.new(0, closeBtnSize, 0, closeBtnSize)
	closeBtn.AnchorPoint = Vector2.new(1, 0.5)
	closeBtn.Position = UDim2.new(1, IS_SMALL_PHONE and -6 or -8, 0.5, 0)
	closeBtn.BackgroundColor3 = C.White
	closeBtn.BackgroundTransparency = 0.1
	closeBtn.Font = Enum.Font.GothamBold
	closeBtn.TextSize = 13
	closeBtn.TextColor3 = C.Blue
	closeBtn.Text = "âœ•"
	closeBtn.AutoButtonColor = false
	closeBtn.ZIndex = 101
	closeBtn.Parent = header
	UI.corner(closeBtn, 15)

	closeBtn.MouseEnter:Connect(function()
		UI.tween(closeBtn, TweenInfo.new(0.12), { BackgroundTransparency = 0 })
