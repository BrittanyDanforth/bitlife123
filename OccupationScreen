	contentLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
	contentLayout.Parent = content

	-- Emoji - MOBILE FIX: Smaller on mobile
	local jobEmojiSize = IS_SMALL_PHONE and 44 or 70
	self.jobInfoEmoji = Instance.new("TextLabel")
	self.jobInfoEmoji.Size = UDim2.new(0, jobEmojiSize, 0, jobEmojiSize)
	self.jobInfoEmoji.BackgroundTransparency = 1
	self.jobInfoEmoji.Font = F.Body
	self.jobInfoEmoji.TextSize = IS_SMALL_PHONE and 32 or 55
	self.jobInfoEmoji.Text = "ðŸ’¼"
	self.jobInfoEmoji.LayoutOrder = 1
	self.jobInfoEmoji.ZIndex = 99
	self.jobInfoEmoji.Parent = content

	-- Job title - MOBILE FIX: Smaller text
	self.jobInfoTitle = Instance.new("TextLabel")
	self.jobInfoTitle.Size = UDim2.new(1, 0, 0, IS_SMALL_PHONE and 22 or 30)
	self.jobInfoTitle.BackgroundTransparency = 1
