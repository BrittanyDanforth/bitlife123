	quitBtn.AutoButtonColor = false
	quitBtn.LayoutOrder = 3
	quitBtn.ZIndex = 85
	quitBtn.Parent = actionRow2
	UI.corner(quitBtn, IS_SMALL_PHONE and 8 or 10)
	
	-- Button shadow
	local quitBtnShadow = Instance.new("Frame")
	quitBtnShadow.Size = UDim2.new(1, IS_SMALL_PHONE and 2 or 3, 1, IS_SMALL_PHONE and 2 or 3)
	quitBtnShadow.Position = UDim2.new(0, IS_SMALL_PHONE and 1 or 1.5, 0, IS_SMALL_PHONE and 1 or 1.5)
