		return RequestRaise:InvokeServer()
	end)
	if not success then
		logWarn("RequestRaise call failed:", result)
		self:showResult(false, "Server error.", "X")
		return
	end
	log("Server response:", result and "received" or "nil")

	if result then
		log("Success:", result.success, "Message:", result.message)
		if result.success then
			self:showResult(true, result.message, "ðŸ’°")
		else
			self:showResult(false, result.message, "ðŸ“‹")
		end
	else
		logWarn("Server returned nil!")
		self:showResult(false, "Server error.", "X")
	end
end

function OccupationScreen:showCareerInfoModal()
	log("=== SHOWING CAREER INFO MODAL ===")

	-- Create modal if doesn't exist
	if not self.careerInfoModal then
		self:createCareerInfoModal()
	end

	-- Fetch latest career info
	self:fetchCareerInfo()

	local skills = self:getCareerSkills()
	local history = self:getCareerHistory()
	local performance = self:getCareerPerformance()
	local totalExp = self.careerInfo and self.careerInfo.totalExperience or 0

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX: Properly sized skill rows for mobile
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local SKILL_ROW_HEIGHT = IS_TINY_PHONE and 22 or (IS_SMALL_PHONE and 23 or 24)
	local SKILL_LABEL_SIZE = IS_TINY_PHONE and 9 or (IS_SMALL_PHONE and 10 or 11)
	local SKILL_BAR_HEIGHT = IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 7 or 8)
	local SKILL_VALUE_SIZE = IS_TINY_PHONE and 8 or (IS_SMALL_PHONE and 9 or 10)
	local SKILL_PADDING = IS_TINY_PHONE and 4 or 6

	-- Populate skills
	self.careerInfoSkillsContainer:ClearAllChildren()

	local skillLayout = Instance.new("UIListLayout")
	skillLayout.Padding = UDim.new(0, SKILL_PADDING)
	skillLayout.Parent = self.careerInfoSkillsContainer

	local skillOrder = {"Technical", "Creative", "Social", "Physical", "Analytical", "Leadership"}
	local skillEmojis = {Technical = "ðŸ’»", Creative = "ðŸŽ¨", Social = "ðŸ—£ï¸", Physical = "ðŸ’ª", Analytical = "ðŸ“Š", Leadership = "ðŸ‘‘"}
	-- Shorter names for tiny phones
	local skillShortNames = {Technical = "Tech", Creative = "Creative", Social = "Social", Physical = "Physical", Analytical = "Analyt.", Leadership = "Leader"}

	for i, skillName in ipairs(skillOrder) do
		local skillValue = skills[skillName] or 0

		local skillRow = Instance.new("Frame")
		skillRow.Size = UDim2.new(1, 0, 0, SKILL_ROW_HEIGHT)
		skillRow.BackgroundTransparency = 1
		skillRow.LayoutOrder = i
		skillRow.ZIndex = 100
		skillRow.Parent = self.careerInfoSkillsContainer

		local displayName = IS_TINY_PHONE and skillShortNames[skillName] or skillName
		local skillLabel = Instance.new("TextLabel")
		skillLabel.Size = UDim2.new(IS_TINY_PHONE and 0.38 or 0.45, 0, 1, 0)
		skillLabel.BackgroundTransparency = 1
		skillLabel.Font = F.Body
		skillLabel.TextSize = SKILL_LABEL_SIZE
		skillLabel.TextColor3 = C.Gray700
		skillLabel.TextXAlignment = Enum.TextXAlignment.Left
		skillLabel.Text = (skillEmojis[skillName] or "ðŸ“ˆ") .. " " .. displayName
		skillLabel.ZIndex = 100
		skillLabel.Parent = skillRow

		local skillBarBg = Instance.new("Frame")
		skillBarBg.Size = UDim2.new(IS_TINY_PHONE and 0.42 or 0.40, 0, 0, SKILL_BAR_HEIGHT)
		skillBarBg.Position = UDim2.new(IS_TINY_PHONE and 0.40 or 0.45, 0, 0.5, -SKILL_BAR_HEIGHT/2)
		skillBarBg.BackgroundColor3 = C.Gray200
		skillBarBg.ZIndex = 100
		skillBarBg.Parent = skillRow
		UI.pill(skillBarBg)

		local skillBarFill = Instance.new("Frame")
		skillBarFill.Size = UDim2.new(math.clamp(skillValue / 100, 0, 1), 0, 1, 0)
		skillBarFill.BackgroundColor3 = C.Blue
		skillBarFill.ZIndex = 101
		skillBarFill.Parent = skillBarBg
		UI.pill(skillBarFill)

		local skillValueLabel = Instance.new("TextLabel")
		skillValueLabel.Size = UDim2.new(IS_TINY_PHONE and 0.15 or 0.12, 0, 1, 0)
		skillValueLabel.Position = UDim2.new(IS_TINY_PHONE and 0.85 or 0.88, 0, 0, 0)
		skillValueLabel.BackgroundTransparency = 1
		skillValueLabel.Font = F.Medium
		skillValueLabel.TextSize = SKILL_VALUE_SIZE
		skillValueLabel.TextColor3 = C.Gray500
		skillValueLabel.TextXAlignment = Enum.TextXAlignment.Right
		skillValueLabel.Text = tostring(math.floor(skillValue))
		skillValueLabel.ZIndex = 100
		skillValueLabel.Parent = skillRow
	end

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX: Properly sized history items for mobile
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	local HISTORY_CARD_HEIGHT = IS_TINY_PHONE and 44 or (IS_SMALL_PHONE and 48 or 50)
	local HISTORY_TITLE_SIZE = IS_TINY_PHONE and 10 or (IS_SMALL_PHONE and 11 or 12)
	local HISTORY_COMPANY_SIZE = IS_TINY_PHONE and 8 or (IS_SMALL_PHONE and 9 or 10)
	local HISTORY_BADGE_WIDTH = IS_TINY_PHONE and 42 or (IS_SMALL_PHONE and 48 or 55)
	local HISTORY_BADGE_HEIGHT = IS_TINY_PHONE and 16 or (IS_SMALL_PHONE and 18 or 20)
	local HISTORY_BADGE_SIZE = IS_TINY_PHONE and 7 or (IS_SMALL_PHONE and 8 or 9)
	local HISTORY_PAD = IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 8 or 10)

	-- Populate career history
	self.careerInfoHistoryContainer:ClearAllChildren()

	local historyLayout = Instance.new("UIListLayout")
	historyLayout.Padding = UDim.new(0, IS_TINY_PHONE and 5 or 8)
	historyLayout.Parent = self.careerInfoHistoryContainer

	if #history == 0 then
		local noHistory = Instance.new("TextLabel")
		noHistory.Size = UDim2.new(1, 0, 0, IS_TINY_PHONE and 22 or 30)
		noHistory.BackgroundTransparency = 1
		noHistory.Font = F.Body
		noHistory.TextSize = IS_TINY_PHONE and 10 or 12
		noHistory.TextColor3 = C.Gray400
		noHistory.Text = "No previous jobs"
		noHistory.ZIndex = 100
		noHistory.Parent = self.careerInfoHistoryContainer
	else
		for i, historyItem in ipairs(history) do
			local historyCard = Instance.new("Frame")
			historyCard.Size = UDim2.new(1, 0, 0, HISTORY_CARD_HEIGHT)
			historyCard.BackgroundColor3 = C.White
			historyCard.LayoutOrder = #history - i + 1 -- Most recent first
			historyCard.ZIndex = 99
			historyCard.Parent = self.careerInfoHistoryContainer
			UI.corner(historyCard, IS_TINY_PHONE and 6 or 8)

			local historyTitle = Instance.new("TextLabel")
			historyTitle.Size = UDim2.new(1, -HISTORY_BADGE_WIDTH - HISTORY_PAD * 2, 0, IS_TINY_PHONE and 14 or 20)
			historyTitle.Position = UDim2.new(0, HISTORY_PAD, 0, IS_TINY_PHONE and 4 or 6)
			historyTitle.BackgroundTransparency = 1
			historyTitle.Font = F.Medium
			historyTitle.TextSize = HISTORY_TITLE_SIZE
			historyTitle.TextColor3 = C.Gray800
			historyTitle.TextXAlignment = Enum.TextXAlignment.Left
			historyTitle.TextTruncate = Enum.TextTruncate.AtEnd
			historyTitle.Text = historyItem.title or "Previous Job"
			historyTitle.ZIndex = 100
			historyTitle.Parent = historyCard

			local historyCompany = Instance.new("TextLabel")
			historyCompany.Size = UDim2.new(1, -HISTORY_PAD * 2, 0, IS_TINY_PHONE and 12 or 16)
			historyCompany.Position = UDim2.new(0, HISTORY_PAD, 0, IS_TINY_PHONE and 20 or 26)
			historyCompany.BackgroundTransparency = 1
			historyCompany.Font = F.Body
			historyCompany.TextSize = HISTORY_COMPANY_SIZE
			historyCompany.TextColor3 = C.Gray500
			historyCompany.TextXAlignment = Enum.TextXAlignment.Left
			historyCompany.TextTruncate = Enum.TextTruncate.AtEnd
			historyCompany.Text = (historyItem.company or "Company") .. " â€¢ " .. string.format("%.1f yrs", historyItem.yearsWorked or 0)
			historyCompany.ZIndex = 100
			historyCompany.Parent = historyCard

			local reasonColors = {quit = C.Amber, fired = C.Red, promoted = C.Green}
			local reasonEmojis = {quit = "ðŸšª", fired = "âŒ", promoted = "ðŸš€"}
			local reason = historyItem.reason or "quit"

			local reasonBadge = Instance.new("Frame")
			reasonBadge.Size = UDim2.new(0, HISTORY_BADGE_WIDTH, 0, HISTORY_BADGE_HEIGHT)
			reasonBadge.Position = UDim2.new(1, -HISTORY_BADGE_WIDTH - HISTORY_PAD, 0.5, -HISTORY_BADGE_HEIGHT/2)
			reasonBadge.BackgroundColor3 = reasonColors[reason] or C.Gray300
			reasonBadge.ZIndex = 100
			reasonBadge.Parent = historyCard
			UI.pill(reasonBadge)

			local reasonLabel = Instance.new("TextLabel")
			reasonLabel.Size = UDim2.fromScale(1, 1)
			reasonLabel.BackgroundTransparency = 1
			reasonLabel.Font = F.Medium
			reasonLabel.TextSize = HISTORY_BADGE_SIZE
			reasonLabel.TextColor3 = C.White
			reasonLabel.Text = IS_TINY_PHONE and (reasonEmojis[reason] or "â€¢") or ((reasonEmojis[reason] or "â€¢") .. " " .. (reason:gsub("^%l", string.upper)))
			reasonLabel.ZIndex = 101
			reasonLabel.Parent = reasonBadge
		end
	end

	-- Update summary labels - SCALED TEXT
	if IS_TINY_PHONE then
		self.careerInfoExpLabel.Text = "ðŸ“Š Exp: " .. string.format("%.1f yrs", totalExp)
		self.careerInfoPerfLabel.Text = "â­ Perf: " .. math.floor(performance) .. "%"
	else
		self.careerInfoExpLabel.Text = "ðŸ“Š Total Experience: " .. string.format("%.1f years", totalExp)
		self.careerInfoPerfLabel.Text = "â­ Current Performance: " .. math.floor(performance) .. "%"
	end

	-- Show modal with premium animation
	self.careerInfoOverlay.Visible = true

	-- Initial positions for animation
	self.careerInfoShell.Position = UDim2.new(0.5, 0, 0.5, 40)
	self.careerInfoShadow.Position = UDim2.new(0.5, 3, 0.5, 43)
	self.careerInfoShell.BackgroundTransparency = 0.5
	self.careerInfoShadow.BackgroundTransparency = 1

	-- Animate to final positions
	local tweenInfo = TweenInfo.new(0.28, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
	UI.tween(self.careerInfoShell, tweenInfo, {
		Position = UDim2.fromScale(0.5, 0.5),
		BackgroundTransparency = 0
	})
	UI.tween(self.careerInfoShadow, tweenInfo, {
		Position = UDim2.new(0.5, 3, 0.5, 3),
		BackgroundTransparency = 0.75
	})
end

function OccupationScreen:createCareerInfoModal()
	log("Creating career info modal...")

	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	-- CRITICAL UI FIX: Complete mobile overhaul for Career Info Modal
	-- Matching AssetsScreen/RelationshipsScreen - simple fixed sizes!
	-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	
	-- CRITICAL FIX: Simple fixed sizes like other screens - NOT math.min calculations!
	local MODAL_WIDTH = IS_TINY_PHONE and 320 or 400
	local MODAL_HEIGHT = IS_TINY_PHONE and 420 or 520
	local HEADER_HEIGHT = IS_TINY_PHONE and 44 or 60
	local CARD_MARGIN = IS_TINY_PHONE and 4 or 8
	local CORNER_RAD = IS_TINY_PHONE and 16 or 24
	local PADDING = IS_TINY_PHONE and 8 or 12
	local TITLE_SIZE = IS_TINY_PHONE and 14 or 17
	local LABEL_SIZE = IS_TINY_PHONE and 10 or 12
	local SECTION_HEADER_SIZE = IS_TINY_PHONE and 11 or 14
	local CLOSE_BTN_SIZE = IS_TINY_PHONE and 28 or 32

	self.careerInfoOverlay = Instance.new("Frame")
	self.careerInfoOverlay.Name = "CareerInfoOverlay"
	self.careerInfoOverlay.Size = UDim2.fromScale(1, 1)
	self.careerInfoOverlay.BackgroundColor3 = C.Black
	self.careerInfoOverlay.BackgroundTransparency = 0.4
	self.careerInfoOverlay.Visible = false
	self.careerInfoOverlay.ZIndex = 96
	self.careerInfoOverlay.Parent = self.screenGui

	local closeArea = Instance.new("TextButton")
	closeArea.Size = UDim2.fromScale(1, 1)
	closeArea.BackgroundTransparency = 1
	closeArea.Text = ""
	closeArea.ZIndex = 96
	closeArea.Parent = self.careerInfoOverlay
	closeArea.MouseButton1Click:Connect(function()
		self:hideCareerInfoModal()
	end)

	-- Shadow frame (premium effect) - SCALED
	local shadowOffset = IS_TINY_PHONE and 2 or (IS_SMALL_PHONE and 3 or 5)
	local shadowFrame = Instance.new("Frame")
	shadowFrame.Name = "ShadowFrame"
	shadowFrame.Size = UDim2.new(0, MODAL_WIDTH + shadowOffset * 2, 0, MODAL_HEIGHT + shadowOffset * 2)
	shadowFrame.AnchorPoint = Vector2.new(0.5, 0.5)
	shadowFrame.Position = UDim2.new(0.5, shadowOffset, 0.5, shadowOffset)
	shadowFrame.BackgroundColor3 = C.Black
	shadowFrame.BackgroundTransparency = 0.75
	shadowFrame.ZIndex = 96
	shadowFrame.Parent = self.careerInfoOverlay
	UI.corner(shadowFrame, CORNER_RAD)
	self.careerInfoShadow = shadowFrame

	-- Colored shell (premium BitLife look) - SCALED
	local shell = Instance.new("Frame")
	shell.Name = "Shell"
	shell.Size = UDim2.new(0, MODAL_WIDTH, 0, MODAL_HEIGHT)
	shell.AnchorPoint = Vector2.new(0.5, 0.5)
	shell.Position = UDim2.fromScale(0.5, 0.5)
	shell.BackgroundColor3 = C.Blue
	shell.ZIndex = 97
	shell.Parent = self.careerInfoOverlay
	UI.corner(shell, CORNER_RAD - 2)
	self.careerInfoShell = shell

	-- Shell border stroke - SCALED
	local shellStroke = UI.stroke(shell, IS_TINY_PHONE and 1 or 2, 0.3, C.BlueDark)
	self.careerInfoShellStroke = shellStroke

	-- Inner white card (inside shell) - SCALED
	self.careerInfoCard = Instance.new("Frame")
	self.careerInfoCard.Name = "Card"
	self.careerInfoCard.Size = UDim2.new(1, -CARD_MARGIN * 2, 1, -CARD_MARGIN * 2)
	self.careerInfoCard.AnchorPoint = Vector2.new(0.5, 0.5)
	self.careerInfoCard.Position = UDim2.fromScale(0.5, 0.5)
	self.careerInfoCard.BackgroundColor3 = C.White
	self.careerInfoCard.ZIndex = 98
	self.careerInfoCard.Parent = shell
	UI.corner(self.careerInfoCard, CORNER_RAD - 4)

	-- Header (colored accent banner) - SCALED
	local header = Instance.new("Frame")
	header.Name = "Header"
	header.Size = UDim2.new(1, 0, 0, HEADER_HEIGHT)
	header.BackgroundColor3 = C.Blue
	header.ZIndex = 99
	header.Parent = self.careerInfoCard
	UI.corner(header, CORNER_RAD - 4)

	-- Header bottom fix (covers rounded corners at bottom of header)
	local headerFixHeight = IS_TINY_PHONE and 12 or (IS_SMALL_PHONE and 16 or 25)
	local headerFix = Instance.new("Frame")
	headerFix.Name = "HeaderFix"
	headerFix.Size = UDim2.new(1, 0, 0, headerFixHeight)
	headerFix.Position = UDim2.new(0, 0, 1, -headerFixHeight)
	headerFix.BackgroundColor3 = C.Blue
	headerFix.BorderSizePixel = 0
	headerFix.ZIndex = 99
	headerFix.Parent = header

	-- Header title - SCALED
	local headerTitle = Instance.new("TextLabel")
	headerTitle.Size = UDim2.new(1, -CLOSE_BTN_SIZE - 16, 1, 0)
	headerTitle.Position = UDim2.new(0, PADDING, 0, 0)
	headerTitle.BackgroundTransparency = 1
	headerTitle.Font = F.Title
	headerTitle.TextSize = TITLE_SIZE
	headerTitle.TextColor3 = C.White
	headerTitle.TextXAlignment = Enum.TextXAlignment.Left
	headerTitle.Text = IS_TINY_PHONE and "ðŸ“‹ Career" or "ðŸ“‹ Career Info"
	headerTitle.ZIndex = 100
	headerTitle.Parent = header

	-- Close button - SCALED
	local closeBtn = Instance.new("TextButton")
	closeBtn.Name = "CloseButton"
	closeBtn.Size = UDim2.new(0, CLOSE_BTN_SIZE, 0, CLOSE_BTN_SIZE)
	closeBtn.AnchorPoint = Vector2.new(1, 0.5)
	closeBtn.Position = UDim2.new(1, -PADDING/2, 0.5, 0)
	closeBtn.BackgroundColor3 = C.White
	closeBtn.BackgroundTransparency = 0.1
	closeBtn.Font = Enum.Font.GothamBold
	closeBtn.TextSize = IS_TINY_PHONE and 11 or 13
	closeBtn.TextColor3 = C.Blue
	closeBtn.Text = "âœ•"
	closeBtn.AutoButtonColor = false
	closeBtn.ZIndex = 101
	closeBtn.Parent = header
	UI.corner(closeBtn, CLOSE_BTN_SIZE / 2)

	closeBtn.MouseEnter:Connect(function()
		UI.tween(closeBtn, TweenInfo.new(0.12), { BackgroundTransparency = 0 })
	end)
	closeBtn.MouseLeave:Connect(function()
		UI.tween(closeBtn, TweenInfo.new(0.12), { BackgroundTransparency = 0.1 })
	end)
	closeBtn.MouseButton1Click:Connect(function()
		self:hideCareerInfoModal()
	end)

	-- Content scroll - SCALED
	local contentTopOffset = HEADER_HEIGHT + (IS_TINY_PHONE and 4 or 6)
	local content = Instance.new("ScrollingFrame")
	content.Name = "ContentScroll"
	content.Size = UDim2.new(1, -PADDING * 2, 1, -contentTopOffset - PADDING)
	content.Position = UDim2.new(0, PADDING, 0, contentTopOffset)
	content.BackgroundTransparency = 1
	content.CanvasSize = UDim2.new(0, 0, 0, 0)
	content.AutomaticCanvasSize = Enum.AutomaticSize.Y
	content.ScrollBarThickness = IS_TINY_PHONE and 2 or (IS_SMALL_PHONE and 3 or 4)
	content.ScrollBarImageColor3 = C.Gray300
	content.ZIndex = 99
	content.Parent = self.careerInfoCard

	local contentLayout = Instance.new("UIListLayout")
	contentLayout.Padding = UDim.new(0, IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 8 or 12))
	contentLayout.Parent = content

	-- Summary section - SCALED
	local summarySectionHeight = IS_TINY_PHONE and 38 or (IS_SMALL_PHONE and 44 or 55)
	local summarySection = Instance.new("Frame")
	summarySection.Size = UDim2.new(1, 0, 0, summarySectionHeight)
	summarySection.BackgroundColor3 = C.Gray50
	summarySection.LayoutOrder = 1
	summarySection.ZIndex = 99
	summarySection.Parent = content
	UI.corner(summarySection, IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 8 or 12))

	-- Summary labels - SCALED
	local summaryPad = IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 8 or 12)
	local labelHeight = IS_TINY_PHONE and 14 or (IS_SMALL_PHONE and 16 or 18)
	
	self.careerInfoExpLabel = Instance.new("TextLabel")
	self.careerInfoExpLabel.Size = UDim2.new(1, -summaryPad * 2, 0, labelHeight)
	self.careerInfoExpLabel.Position = UDim2.new(0, summaryPad, 0, IS_TINY_PHONE and 4 or (IS_SMALL_PHONE and 6 or 8))
	self.careerInfoExpLabel.BackgroundTransparency = 1
	self.careerInfoExpLabel.Font = F.Medium
	self.careerInfoExpLabel.TextSize = LABEL_SIZE
	self.careerInfoExpLabel.TextColor3 = C.Gray700
	self.careerInfoExpLabel.TextXAlignment = Enum.TextXAlignment.Left
	self.careerInfoExpLabel.Text = IS_TINY_PHONE and "ðŸ“Š Exp: 0 yrs" or "ðŸ“Š Total Experience: 0 years"
	self.careerInfoExpLabel.ZIndex = 100
	self.careerInfoExpLabel.Parent = summarySection

	self.careerInfoPerfLabel = Instance.new("TextLabel")
	self.careerInfoPerfLabel.Size = UDim2.new(1, -summaryPad * 2, 0, labelHeight)
	self.careerInfoPerfLabel.Position = UDim2.new(0, summaryPad, 0, IS_TINY_PHONE and 20 or (IS_SMALL_PHONE and 24 or 28))
	self.careerInfoPerfLabel.BackgroundTransparency = 1
	self.careerInfoPerfLabel.Font = F.Medium
	self.careerInfoPerfLabel.TextSize = LABEL_SIZE
	self.careerInfoPerfLabel.TextColor3 = C.Gray700
	self.careerInfoPerfLabel.TextXAlignment = Enum.TextXAlignment.Left
	self.careerInfoPerfLabel.Text = IS_TINY_PHONE and "â­ Perf: 75%" or "â­ Current Performance: 75%"
	self.careerInfoPerfLabel.ZIndex = 100
	self.careerInfoPerfLabel.Parent = summarySection

	-- Skills section header - SCALED
	local sectionHeaderHeight = IS_TINY_PHONE and 16 or (IS_SMALL_PHONE and 18 or 24)
	local skillsHeader = Instance.new("TextLabel")
	skillsHeader.Size = UDim2.new(1, 0, 0, sectionHeaderHeight)
	skillsHeader.BackgroundTransparency = 1
	skillsHeader.Font = F.Title
	skillsHeader.TextSize = SECTION_HEADER_SIZE
	skillsHeader.TextColor3 = C.Gray800
	skillsHeader.TextXAlignment = Enum.TextXAlignment.Left
	skillsHeader.Text = "ðŸ’¼ Skills"
	skillsHeader.LayoutOrder = 2
	skillsHeader.ZIndex = 99
	skillsHeader.Parent = content

	-- Skills container - SCALED
	self.careerInfoSkillsContainer = Instance.new("Frame")
	self.careerInfoSkillsContainer.Size = UDim2.new(1, 0, 0, 0)
	self.careerInfoSkillsContainer.AutomaticSize = Enum.AutomaticSize.Y
	self.careerInfoSkillsContainer.BackgroundColor3 = C.Gray50
	self.careerInfoSkillsContainer.LayoutOrder = 3
	self.careerInfoSkillsContainer.ZIndex = 99
	self.careerInfoSkillsContainer.Parent = content
	UI.corner(self.careerInfoSkillsContainer, IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 8 or 12))
	
	local skillsPad = IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 8 or 12)
	UI.pad(self.careerInfoSkillsContainer, skillsPad, skillsPad, skillsPad, skillsPad)

	-- History section header - SCALED
	local historyHeader = Instance.new("TextLabel")
	historyHeader.Size = UDim2.new(1, 0, 0, sectionHeaderHeight)
	historyHeader.BackgroundTransparency = 1
	historyHeader.Font = F.Title
	historyHeader.TextSize = SECTION_HEADER_SIZE
	historyHeader.TextColor3 = C.Gray800
	historyHeader.TextXAlignment = Enum.TextXAlignment.Left
	historyHeader.Text = "ðŸ“œ History"
	historyHeader.LayoutOrder = 4
	historyHeader.ZIndex = 99
	historyHeader.Parent = content

	-- History container - SCALED
	self.careerInfoHistoryContainer = Instance.new("Frame")
	self.careerInfoHistoryContainer.Size = UDim2.new(1, 0, 0, 0)
	self.careerInfoHistoryContainer.AutomaticSize = Enum.AutomaticSize.Y
	self.careerInfoHistoryContainer.BackgroundColor3 = C.Gray50
	self.careerInfoHistoryContainer.LayoutOrder = 5
	self.careerInfoHistoryContainer.ZIndex = 99
	self.careerInfoHistoryContainer.Parent = content
	UI.corner(self.careerInfoHistoryContainer, IS_TINY_PHONE and 6 or (IS_SMALL_PHONE and 8 or 12))
	UI.pad(self.careerInfoHistoryContainer, skillsPad, skillsPad, skillsPad, skillsPad)

	-- Store modal dimensions for animations
	self.careerInfoModalWidth = MODAL_WIDTH
	self.careerInfoModalHeight = MODAL_HEIGHT

	log("Career info modal created with mobile optimization")
end

function OccupationScreen:hideCareerInfoModal()
	if not self.careerInfoOverlay then return end
	log("Hiding career info modal")

	local tweenInfo = TweenInfo.new(0.18, Enum.EasingStyle.Quad, Enum.EasingDirection.In)

	UI.tween(self.careerInfoShell, tweenInfo, {
		Position = UDim2.new(0.5, 0, 0.5, 25),
		BackgroundTransparency = 0.5
	})
	UI.tween(self.careerInfoShadow, tweenInfo, {
		Position = UDim2.new(0.5, 3, 0.5, 28),
		BackgroundTransparency = 1
	})

	task.delay(0.18, function()
		if self.careerInfoOverlay then
			self.careerInfoOverlay.Visible = false
		end
	end)
end

function OccupationScreen:enrollEducation(eduId)
	log("=== ENROLLING IN EDUCATION ===")
	log("Education ID:", eduId)
	log("Player Age:", self:getAge(), "Money:", self:getMoney(), "Current Edu:", self:getEducationLevel())

	if not EnrollEducation then
		logWarn("EnrollEducation remote not available!")
		self:showResult(false, "Server not available.", "X")
		return
	end

	log("Invoking server EnrollEducation...")
	-- CRITICAL FIX: Add pcall protection for server calls
	local success, result = pcall(function()
		return EnrollEducation:InvokeServer(eduId)
	end)
	if not success then
		logWarn("EnrollEducation call failed:", result)
		self:showResult(false, "Server error.", "X")
		return
	end
	log("Server response:", result and "received" or "nil")

	if result then
		log("Success:", result.success, "Message:", result.message)
		self:showResult(result.success, result.message, result.success and "Enrolled!" or "Failed")
	else
		logWarn("Server returned nil!")
		self:showResult(false, "Server error.", "X")
	end
end

function OccupationScreen:showResult(success, message, emoji)
	local shellColor = success and C.Green or C.Red
	local shellStroke = success and C.GreenDark or C.RedDark
	local pale = success and C.GreenPale or C.RedPale

	self.resultModal.shell.BackgroundColor3 = shellColor
	self.resultModal.shellStroke.Color = shellStroke
	self.resultModal.emojiFrame.BackgroundColor3 = pale
	
	-- CRITICAL UI FIX: Better default emojis
	local displayEmoji = emoji
	if not displayEmoji or displayEmoji == "OK" then
		displayEmoji = success and "ðŸŽ‰" or "ðŸ˜”"
	elseif displayEmoji == "X" or displayEmoji == "Error" then
		displayEmoji = "âŒ"
	elseif displayEmoji == "Hired!" then
		displayEmoji = "ðŸŽ‰"
	elseif displayEmoji == "Rejected" then
		displayEmoji = "ðŸ˜”"
	elseif displayEmoji == "Enrolled!" then
		displayEmoji = "ðŸ“š"
	elseif displayEmoji == "Failed" then
		displayEmoji = "ðŸ“‹"
	end
	self.resultModal.emojiLabel.Text = displayEmoji
	
	-- CRITICAL UI FIX: More descriptive titles
	local title = success and "Great News!" or "Uh oh..."
	if emoji == "Hired!" then title = "You're Hired!" end
	if emoji == "Enrolled!" then title = "Enrolled!" end
	
	self.resultModal.titleLabel.Text = title
	self.resultModal.titleLabel.TextColor3 = success and C.GreenDark or C.RedDark
	self.resultModal.messageLabel.Text = message or (success and "Everything worked out!" or "Something went wrong...")
	self.resultModal.okButton.BackgroundColor3 = shellColor
	self.resultModal.okButton.Text = success and "ðŸ‘ Great!" or "ðŸ˜” Okay..."

	-- Use custom show method if available
	if self.resultModal.show then
		self.resultModal.show()
	elseif UI.showModal then
		UI.showModal(self.resultModal)
	end
end

function OccupationScreen:show()
	log("=== SHOWING OccupationScreen ===")
	log("Current state - Age:", self:getAge(), "Money:", self:getMoney(), "Job:", self:getCurrentJob() or "None")
	
	-- CRITICAL FIX: Clear cached career info if player is unemployed (fired/quit)
	-- This ensures the UI shows correct state after being fired
	if not self:getCurrentJob() then
		log("No current job - clearing cached career info to ensure fresh UI")
		self.careerInfo = nil
	end
	
	self:updateInfoBar()
	self:switchTab(self.currentTab)
	UI.slideInScreen(self.overlay, "right")
	self.isVisible = true
	log("âœ… OccupationScreen is now visible")
end

function OccupationScreen:hide()
	log("=== HIDING OccupationScreen ===")
	UI.slideOutScreen(self.overlay, "right", function()
		self.resultModal.overlay.Visible = false
		-- Also hide career info modal if open
		if self.careerInfoOverlay then
			self.careerInfoOverlay.Visible = false
		end
		-- Also hide job info modal if open
		if self.jobInfoOverlay then
			self.jobInfoOverlay.Visible = false
		end
		-- Also hide education info modal if open
		if self.educationInfoOverlay then
			self.educationInfoOverlay.Visible = false
		end
		log("âœ… OccupationScreen hidden, modals cleaned up")
	end)
	self.isVisible = false
end

return OccupationScreen
