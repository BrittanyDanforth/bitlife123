	statsCard.LayoutOrder = 2
	statsCard.ZIndex = 99
	statsCard.Parent = content
	UI.corner(statsCard, IS_TINY_PHONE and 8 or 12)

	local statsLabelHeight = IS_TINY_PHONE and 14 or 18
	local statsLineSpacing = IS_TINY_PHONE and 16 or 20
	
	self.educationInfoGpaLabel = Instance.new("TextLabel")
