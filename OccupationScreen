	closeBtn.Size = UDim2.new(0, jobCloseBtnSize, 0, jobCloseBtnSize)
	closeBtn.AnchorPoint = Vector2.new(1, 0.5)
	closeBtn.Position = UDim2.new(1, IS_SMALL_PHONE and -6 or -10, 0.5, 0)
	closeBtn.BackgroundColor3 = C.White
	closeBtn.BackgroundTransparency = 0.1
	closeBtn.Font = Enum.Font.GothamBold
	closeBtn.TextSize = 14
	closeBtn.TextColor3 = C.Blue
	closeBtn.Text = "âœ•"
	closeBtn.AutoButtonColor = false
	closeBtn.ZIndex = 101
	closeBtn.Parent = header
	UI.corner(closeBtn, 16)

	closeBtn.MouseEnter:Connect(function()
		UI.tween(closeBtn, TweenInfo.new(0.12), { BackgroundTransparency = 0 })
	end)
	closeBtn.MouseLeave:Connect(function()
		UI.tween(closeBtn, TweenInfo.new(0.12), { BackgroundTransparency = 0.1 })
	end)
	closeBtn.MouseButton1Click:Connect(function()
		self:hideJobInfoModal()
	end)

	-- Title
	-- MOBILE FIX: Responsive header title
	local headerTitle = Instance.new("TextLabel")
	headerTitle.Size = UDim2.new(1, IS_SMALL_PHONE and -44 or 0, 1, 0)
	headerTitle.Position = UDim2.new(0, IS_SMALL_PHONE and 8 or 0, 0, 0)
	headerTitle.BackgroundTransparency = 1
	headerTitle.Font = F.Title
	headerTitle.TextSize = IS_SMALL_PHONE and 14 or 22
	headerTitle.TextColor3 = C.White
	headerTitle.Text = IS_SMALL_PHONE and "ðŸ“‹ Job Info" or "ðŸ“‹ Job Information"
	headerTitle.ZIndex = 99
	headerTitle.Parent = header

	-- Content - MOBILE FIX: Responsive sizing
	local jobContentPad = IS_SMALL_PHONE and 10 or 16
	local jobContentTop = IS_SMALL_PHONE and 58 or 95
	local content = Instance.new("Frame")
	content.Size = UDim2.new(1, -jobContentPad*2, 1, -jobContentTop - 10)
	content.Position = UDim2.new(0, jobContentPad, 0, jobContentTop)
	content.BackgroundTransparency = 1
	content.ZIndex = 98
	content.Parent = self.jobInfoCard

	local contentLayout = Instance.new("UIListLayout")
